Package: librsvg2-mozilla
Version: 2.8.1
Revision: 12

License: GPL/LGPL
Maintainer: Dave Vasilevsky <vasi@users.sourceforge.net>
Description: Mozilla plugin for SVG files
Homepage: http://www.gnome.org/

Source: mirror:gnome:sources/librsvg/2.8/librsvg-%v.tar.bz2
Source-MD5: 01c14f6adcf3a71be2b808879e1223a0


Patch: %n.patch
PatchScript: <<
  perl -pi.bak -e 's,need_relink=yes,need_relink=no,g' ltmain.sh
  perl -pi.bak -e 's/hardcode_direct=yes/hardcode_direct=no/g' configure
<<

SetLDFLAGS: -L/usr/X11R6/lib

ConfigureParams: --with-svgz --enable-gnome-vfs --with-croco --enable-gtk-theme --enable-pixbuf-loader --enable-gtk-doc --mandir=%p/share/man --with-html-dir=%p/share/doc/%n/html

InstallScript: make install DESTDIR=%d


DocFiles: COPYING*

BuildDependsOnly: true
BuildDepends: <<
	pkgconfig,
	
	gtk+2-dev		(>= 2.6.7-2),
	atk1			(>= 1.6.0-1),
	
	glib2-dev		(>= 2.6.4-102),
	
	libart2			(>= 2.3.17-1),
	
	pango1-xft2-dev	(>= 1.8.1-2),
	
	popt			(>= 1.7-5),
	
	libgsf-dev		(>= 1.9.1-1),
	libxml2			(>= 2.6.1-1),
	
	gnome-vfs2-ssl-dev (>= 2.6.1.1-15) | gnome-vfs2-dev (>= 2.6.1.1-17),
	libbonobo2-dev	(>= 2.6.0-1),
	orbit2-dev		(>= 2.10.0-1),
	gconf2-dev		(>= 2.6.0-1),
	
	libcroco3		(>= 0.6.0-11),
	
	libgnomeprint2.2-dev	(>= 2.6.2-9),
	
	libgnomeprintui2.2-dev	(>= 2.6.2-8),
	libgnomecanvas2-dev		(>= 2.6.0-1),
	
	x11-dev,
	
	gtk+2			(>= 2.6.7-2),
		
	libgettext3-dev,
	libiconv-dev,
	
	mozilla-dev,
	librsvg2		(>= 2.8.1-13),
<<

Depends: <<
	librsvg2-bin (>= 2.8.1-13)
<<

SplitOff: <<
	Package: %N-dev
	Depends: %N (= %v-%r)
	Files: lib/mozilla/plugins/libmozsvgdec.*a
	DocFiles: COPYING*
<<

DescPort: <<
	- Build this plugin separately so users don't have to have mozilla to 
	build the rest of rsvg. Disable everything else in this build, since it's
	already in librsvg2.
<<
