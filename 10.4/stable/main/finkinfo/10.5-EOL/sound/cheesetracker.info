PatchScript: <<
  sed -e 's|@FINKPREFIX@|%p|g' -e 's|@FINKARCH@|%m|g' <%{PatchFile} | patch -p1
  grep -r TYPE_ . | cut -d: -f1 | sort -u | xargs perl -pi.bak -e 's,TYPE_FLOAT,TYPE_F,g;' -e 's,TYPE_BOOL,TYPE_B,g;' -e 's,TYPE_INT,TYPE_I,g'
  ### Hardcoded /sw, so use %p
  perl -pi -e 's|/sw|%p|g' detect.py
<<

