Source: mirror:gnome:sources/%n/2.0/libgnome-%v.tar.bz2
Source-MD5: bab4a2528928f35d2c2a3a790a1ac84c
Depends: %N-shlibs (= %v-%r)
BuildDepends: glib2-dev (>= 2.0.3), linc1, orbit2-dev, libbonobo2-dev (>= 2.0.0), gconf2-dev (>= 1.1.11), bonobo-activation2-dev, gnome-vfs2-ssl-dev (>= 1.9.16) | gnome-vfs2-dev (>= 1.9.16), libxml2 (>= 2.4.22), libxslt (>= 1.0.18), audiofile (>= 0.2.3), esound (>= 0.2.26), gtk-doc, intltool, pkgconfig
Patch: %f.patch
SetCPPFLAGS: -no-cpp-precomp
InstallScript: <<
  GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 make install DESTDIR=%d
<<
PostInstScript: <<
  export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
  for s in accessibility_keyboard accessibility_keyboard \
      applications_browser applications_help_viewer applications_terminal \
      applications_window_manager background file_views interface \
      peripherals_keyboard peripherals_mouse sound url_handlers ; do
    gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/desktop_gnome_$s.schemas >/dev/null
  done
<<
SplitOff: <<
  Package: %N-shlibs
  Depends: glib2 (>= 2.0.3), libbonobo2 (>= 2.0.0), gconf2 (>= 1.1.11), gnome-vfs2-ssl (>= 1.9.17) | gnome-vfs2 (>= 1.9.17), libxml2-shlibs (>= 2.4.22), libxslt-shlibs (>= 1.0.18), audiofile-bin (>= 0.2.3), esound-shlibs (>= 0.2.27)
  Files: lib/libgnome-2.*.dylib
  DocFiles: AUTHORS COPYING* ChangeLog NEWS README
<<
SplitOff2: <<
  Package: %N-dev
  Depends: %N-shlibs (= %v-%r)
  BuildDependsOnly: true
  Files: include lib/libgnome-2.* lib/pkgconfig
  DocFiles: AUTHORS COPYING* ChangeLog NEWS README
<<
CONFFILES: <<
  %p/etc/gconf/schemas/desktop_gnome_accessibility_keyboard.schemas
  %p/etc/gconf/schemas/desktop_gnome_applications_browser.schemas
