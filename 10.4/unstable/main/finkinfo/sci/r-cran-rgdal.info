Package: r-cran-rgdal
Version: 0.6-28
Revision: 3
Description: R Bindings for GDAL
Homepage: http://sourceforge.net/projects/rgdal/
License: GPL
Maintainer:  BABA Yoshihiko <babayoshihiko@mac.com>
Source: http://cran.r-project.org/src/contrib/rgdal_%v.tar.gz
Source-MD5: 28cecc7b8d9644c673af2f7a29637863
SourceDirectory: rgdal
Depends: r-base (>=2.12.0-1), r-cran-sp (>=0.9-60-1), gdal-shlibs
BuildDepends: gdal-dev
CompileScript: <<
  #!/bin/sh -ev
  export TMPDIR=%b
  pushd ../ && %p/bin/R CMD build --binary rgdal
<<
InstallScript: <<
  #!/bin/sh -ev
  mkdir -p %i/lib/R/site-library
  cp -R %b/../*.tgz %i/lib/R/site-library
  cd  %i/lib/R/site-library/ && tar zxvf *.tgz
  rm -f %i/lib/R/site-library/*.tgz
  install_name_tool -id %p/lib/R/site-library/rgdal/libs/rgdal.dylib %i/lib/R/site-library/rgdal/libs/rgdal.dylib
<<
Shlibs: <<
  %p/lib/R/rgdal/libs/rgdal.dylib 0.0.0 %n (>=0.6-28-1)
<<
