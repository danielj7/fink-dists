PatchScript: sed 's|<PREFIX>|%p|g'< %a/%f.patch | patch -p1
CompileScript: <<
 #!/bin/sh
 cd %p/lib/python2.2/config
 # add -framework vecLib to python Makefile.
 perl -pi -e "s|-L%p/lib|-L%p/lib -framework vecLib|g" Makefile
 cd %b
 python setup.py build
 cd %p/lib/python2.2/config
 # remove -framework vecLib to python Makefile.
 perl -pi -e "s|-L%p/lib -framework vecLib|-L%p/lib|g" Makefile
<<
InstallScript: <<
 python setup.py install --prefix=%i
 mkdir -p %i/share/doc/%n
 cp -R Demo %i/share/doc/%n
<<
