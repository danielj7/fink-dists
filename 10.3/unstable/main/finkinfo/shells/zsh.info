CompileScript:<<
perl -pi -e "s;DL_EXT=so;DL_EXT=dylib;g" configure
 ./configure %c
perl -pi -e "s;-ldl -ltinfo -lm  -lc;-L%p/lib -lpcre -lncurses -liconv -ldl -lm -lc;" Makefile
perl -pi -e "s;-bundle -flat_namespace -undefined suppress;-bundle -twolevel_namespace -undefined dynamic_lookup;" Makefile
 make
