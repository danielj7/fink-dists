+#!/bin/sh
+
+source @FINKPREFIX@/bin/init.sh
+
+PISG_BIN=@FINKPREFIX@/bin/pisg
+PISG_CONF=@FINKPREFIX@/etc/pisg.cfg
+
+# See if the pisg binary and config file exists
+[ -f ${PISG_BIN} ] || exit 1
+[ -f ${PISG_CONF} ] || exit 1
+
+# Run pisg quietly
+${PISG_BIN} -s -co ${PISG_CONF}
+
+# Exit with pisg's exit code
+exit $?
