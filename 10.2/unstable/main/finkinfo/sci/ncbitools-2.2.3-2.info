Package: ncbitools
Version: 2.2.3
Revision: 2
Source: ftp://ftp.ncbi.nih.gov/toolbox/ncbi_tools/old/20020426/ncbi.tar.gz
SourceRename: %n-%v.tar.gz
Source-MD5: 7278c10b227b0298f00a5ed5dde58bc4
SourceDirectory: .
Source2: ftp://ftp.ncbi.nih.gov/blast/db/vector.Z
Patch: %f.patch
CompileScript: <<
ncbi/make/makedis.csh
<<
InstallScript: <<
install -d -m 755 %i/bin
install -c -p -m 755 ncbi/build/bl2seq ncbi/build/blastall ncbi/build/blastclust ncbi/build/blastpgp ncbi/build/copymat ncbi/build/fastacmd ncbi/build/formatdb ncbi/build/impala ncbi/build/makemat ncbi/build/megablast ncbi/build/rpsblast ncbi/build/seedtop ncbi/build/blastcl3 %i/bin
install -d -m 755 %i/include/%n-%v/connect
install -c -p -m 644 ncbi/include/*.h %i/include/%n-%v
install -c -p -m 644 ncbi/include/connect/*.h %i/include/%n-%v/connect
ln -s %n-%v %i/include/%n
install -d -m 755 %i/lib
for file in libncbi libncbiCacc libncbiNacc libncbiacc libncbicdr libncbiid1 libncbimmdb libncbiobj libncbitool libnetblast libnetcli libnetentr; do install -c -p -m 644 ncbi/lib/$file.a %i/lib/$file-%v.a; ln -s $file-%v.a %i/lib/$file.a; done
for file in ncbithr; do install -c -p -m 644 ncbi/lib/$file.o %i/lib/$file-%v.o; ln -s $file-%v.o %i/lib/$file.o; done
install -d -m 755 %i/lib/%n/%v
install -c -p -m 644 ncbi/platform/darwin.ncbi.mk %i/lib/%n/%v
install -d -m 755 %i/share/%n
ln -s %p/lib/%n/%v/darwin.ncbi.mk %i/share/%n/ncbi.mk
install -d -m 755 %i/share/%n/data
install -c -p -m 644 ncbi/data/* %i/share/%n/data
install -d -m 755 %i/share/%n/demo
uncompress -cf vector.Z > %i/share/%n/demo/vector
install -c -p -m 644 demo.fasta %i/share/%n/demo
%i/bin/formatdb -i %i/share/%n/demo/vector -p F
echo "#!/bin/sh" > %i/share/%n/demo/blastall.sh
echo "blastall -p blastn -d %p/share/%n/demo/vector -i %p/share/%n/demo/demo.fasta" >> %i/share/%n/demo/blastall.sh
chmod 755 %i/share/%n/demo/blastall.sh
<<
PostInstScript: <<
echo "****************************************"
echo "For %n to work, you must set environment variables"
echo "1) add the following to your ~/.profile", or
echo "# path to formatted databases"
echo "BLASTDB=/data/blastdb ;export BLASTDB"
echo "# path to matrices"
echo "BLASTMAT=%p/share/%n/data ;export BLASTMAT"
echo "2) add the following to your ~/.cshrc or ~/.tcshrc"
echo "# path to formatted databases"
echo "setenv BLASTDB /data/blastdb"
echo "# path to matrices"
echo "setenv BLASTMAT %p/share/%n/data"
echo "****************************************"
echo "To demonstrate %n, run:"
echo "%p/share/%n/demo/blastall.sh"
echo "****************************************"
echo "You may manually download any formatted databases to /data/blastdb from:"
echo "ftp://ftp.ncbi.nih.gov/blast/db/FormattedDatabases/"
echo "For more information, see:"
echo "http://www.ncbi.nlm.nih.gov/BLAST/"
echo "http://www.ncbi.nlm.nih.gov/BLAST/newblast.html"
<<
