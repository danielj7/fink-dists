runghc Setup.lhs register --gen-script
runghc Setup.lhs unregister --gen-script
<<
InstallScript: runghc Setup.lhs copy --destdir=%d

Shlibs: <<
@rpath/libHSconduit-1.1.7-ghc7.8.3.dylib 0.0.0 %n (>= 1.1.7-2)
<<

