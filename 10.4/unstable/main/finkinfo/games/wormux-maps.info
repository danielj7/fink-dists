CompileScript: /usr/bin/true
InstallScript: <<
  #!/bin/sh -ev
  /bin/mkdir -p %i/share/wormux/map
  /usr/bin/find . -type d \! -name "." -print0 | /usr/bin/xargs -J %% -0 /bin/cp -R %% %i/share/wormux/map
  ### cairo map dir doesn't have proper permissions set
  chmod 755 %i/share/wormux/map/cairo
  ### config.xml files with +x incorrectly set
  chmod 644 %i/share/wormux/map/{cairo,christmas,gruyere,minersmayhem}/config.xml
<<
