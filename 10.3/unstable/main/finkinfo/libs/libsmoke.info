	arts-dev (>= 1.5.3-11),
	autoconf (>= 2.60-1),
	automake1.7,
	glut (>= 3.7-3),
	kdelibs3-unified-dev (>= %v-11),
	libgettext3-dev,
	libidn,
	libjpeg,
	libpng3 (>= 1.2.5-1),
	libtool14 (>= 1.5.10-1),
	qt3 (>= 3.3.6-17),
	x11-dev
<<
