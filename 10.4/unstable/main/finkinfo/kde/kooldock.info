Depends: kdelibs3-unified (>= 3.5-1), libiconv, freetype219-shlibs, x11, x11-shlibs, libgettext3-shlibs
BuildDepends: unsermake, autoconf, automake1.9, kdelibs3-unified-dev (>= 3.5-1), x11-dev, libiconv-dev, freetype219, gettext-tools, qt3, libpng3, libidn, libart2, libxml2-bin, libjpeg, libgettext3-dev
