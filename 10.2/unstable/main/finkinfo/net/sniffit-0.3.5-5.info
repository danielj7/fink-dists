  make install prefix=%i
  chown root:wheel %i/share/man/man5/sniffit.5
  chmod 644 %i/share/man/man5/sniffit.5
  chown root:wheel %i/share/man/man8/sniffit.8
  chmod 644 %i/share/man/man8/sniffit.8
<<
