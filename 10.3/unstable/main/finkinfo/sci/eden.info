 mkdir -p %i/bin
 ln -s %p/share/xtal/%n/source/%n %i/bin/%n
 mkdir -p %i/share/doc/%n
 cp manual/UserManual.pdf %i/share/doc/%n/EdenUserManual.pdf
<<
