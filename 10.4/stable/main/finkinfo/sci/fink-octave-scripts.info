PatchScript: <<
	sed -e 's,@FINKPREFIX@,%p,g' octave-forge-patch.sh.in > octave-forge-patch.sh
	sed -i -e 's,@FINKPREFIX@,%p,g' octave-forge-comp*.in octave-forge-*inst*.in octave-forge-prerm*.in
<<

CompileScript: echo "No compiling required."
InstallScript: <<
	mkdir -p %i/share/%n
	cp octave-forge-patch.sh octave-forge-comp*.in octave-forge-*inst*.in octave-forge-prerm*.in  %i/share/%n/
	chmod a+x %i/share/%n/octave-forge-patch.sh
<<
