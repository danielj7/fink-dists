PatchScript: <<
 perl -pi -e "s|import getopt,sys,signal|$&\nsys.path[1]='%p/Library/Python/2.7/site-packages/PIL'|" GUI/xasy.py
# hack to not include <tr1/unordered_map> on 10.5 where it seems to be broken
 sed -i.bak -e '17s|\#ifndef NOHASH|\#if __GNUC_MINOR__|' memory.h
# do not produce crashdumps every time asy is run
 perl -pi -e 's|SIGQUIT|SIGINT|' pipestream.h
 perl -pi -e 's|\-\-no\-var\-tracking||' configure
<<
CompileScript: <<
#!/bin/sh -ev
 ./configure %c --mandir=%p/share/man --enable-gc=system --with-latex=%p/etc/texmf.local/tex/latex -with-context=%p/etc/texmf.local/tex/context
# compiling with -DGC_DEBUG, otherwise asy segfaults
 perl -pi -e 's|DTRANSJUMP|DTRANSJUMP -DGC_DEBUG|' Makefile
 make all
<<
InstallScript: <<
#!/bin/sh -ev
 make install DESTDIR=%d
 # rescue the info file from subdirectory
 mv %i/share/info/asymptote/asymptote.info %i/share/info/
 rmdir %i/share/info/asymptote
 perl -pi -e 's|asymptote/asymptote|asymptote|' %i/share/info/asymptote.info
<<
