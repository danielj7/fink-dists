BuildDepends: gtk-sharp (>= %v-%r), atk1 (>= 1.4.1-3), gal199, gal199-dev, gconf2, gconf2-dev, gdk-pixbuf, glib2, glib2-dev, gnome-vfs2-dev | gnome-vfs2-ssl-dev, gtk+2-dev (>= 2.2.4-2), gtk+2 (>= 2.2.4-2), gtkhtml3, gtkhtml3-dev, libart2, libbonobo2, libbonobo2-dev, libbonoboui2, libbonoboui2-dev, libcroco1, libgda, libgda-dev, libglade2, libgnome2-dev, libgnome2, libgnomecanvas2, libgnomecanvas2-dev, libgnomedb, libgnomedb-dev, libgnomeprint2.2, libgnomeprint2.2-dev, libgnomeprintui2.2, libgnomeprintui2.2-dev, libgnomeui2, libgnomeui2-dev, libgsf, libgsf-dev, libidl2 (>= 0.8.3-2), librsvg2, mono-dev (>= 1.0.2-1), orbit2-dev (>= 2.8.3-4), pango1-xft2-dev (>= 1.2.5-2), pkgconfig, popt, vte-dev
Depends: gtk-sharp (>= %v-%r), monodoc (>= 1.0.2-1)
Replaces: monodoc
NoSetLDFLAGS: true
ConfigureParams: --mandir=%p/share/man --disable-static
CompileScript: <<
#!/bin/sh -ex

  ./configure %c
  pushd doc
  make assemble
  popd
<<
InstallScript: <<
#!/bin/sh -ex

  SOURCESDIR=`monodoc --get-sourcesdir`
  pushd doc
  install -d -m 755 "%d$SOURCESDIR"
  install -c -m 644 gtk-sharp-docs.* "%d$SOURCESDIR"
  popd
<<
PostInstScript: <<
  [ -x "%p/bin/monodoc" ] && [ -d "%p/lib/monodoc" ] && "%p/bin/monodoc" --make-index >/dev/null 2>&1 || :
<<

