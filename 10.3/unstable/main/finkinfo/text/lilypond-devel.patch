+depth=../..
+
+LATEX_FILES =$(wildcard *.latex)
+
+# todo: add latex.
+DVI_FILES = $(addprefix $(outdir)/, $(TELY_FILES:.tely=.dvi))
+
+EXTRA_DIST_FILES= $(LATEX_FILES) $(IMAGES)
