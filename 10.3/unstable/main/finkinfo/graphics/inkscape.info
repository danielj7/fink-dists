Package: inkscape
Version: 0.39
Revision: 1
Maintainer: Peter O'Gorman <peter@pogma.com> 
Depends: gtkmm2-shlibs, pango1-shlibs, gtk+2-shlibs, libart2-shlibs, libxml2-shlibs, libpng3-shlibs, popt-shlibs, atk1-shlibs, libsigc++12-shlibs
BuildDepends: gtkmm2-dev, atk1, pkgconfig, pango1-dev, gtk+2-dev, libart2, libxml2, libpng3, popt, gettext-dev, gettext-bin, libiconv-dev, libsigc++12, intltool
Source: mirror:sourceforge:%n/%n-%v.tar.gz
Source-MD5: c9ea2b62cb505681e65e3cc16007fd09
ConfigureParams: --mandir=%i/share/man --with-xinerama --with-xft --disable-dependency-tracking
NoSetLDFlags: true
NoSetCppFlags: true
SetCPPFlags: -no-cpp-precomp
CompileScript: <<
#!/bin/sh -ex
LIBRARY_PATH=/usr/X11R6/lib:%p/lib
CPATH=%p/include
PATH="/usr/X11R6/bin:"$PATH
export LIBRARY_PATH
export CPATH
export LDFLAGS
export PATH
export LIBS="-L%p/lib -lintl "$LIBS
./configure %c
find . -name Makefile -exec perl -pi.bak -e 's#-[LlI](%p/lib|%p/include|%p/include/freetype2|m|pthread|c)\s# #g' {} \;
perl -pi.bak -e 's#-L%p/lib# #' libtool
perl -pi.bak -e 's,^sys_lib_search_path_spec=",sys_lib_search_path_spec="/usrX11R6/lib %p/lib ,g' libtool
cd src
make sp-cursor.o CXXFLAGS="-g -Os"
cd ..
make
<<
