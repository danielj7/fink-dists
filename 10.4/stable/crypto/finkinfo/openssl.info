CompileScript: <<
 ./config shared --prefix=%p --openssldir=%p/etc/ssl
 sed 's/^SHARED_LIBS_LINK_EXTS=.*/SHARED_LIBS_LINK_EXTS=.dylib/' <Makefile.ssl >Makefile.tmp
 mv -f Makefile.tmp Makefile.ssl
 make EX_LIBS="-Wl,-search_paths_first"
<<
