CompileScript: <<
#!/bin/sh -ev
	export PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH"
	export GTK_CONFIG="%p/bin/pkg-config gtk+-2.0"
	export GNOME_CONFIG="/usr/bin/true"
	%{default_script}
<<
InstallScript: make install DESTDIR=%d
