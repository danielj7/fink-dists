BuildDepends: libcurl4 (>= 7.16.1), system-openssl-dev, fink (>= 0.24.12), libssh2
BuildConflicts: openssl-dev, openssl097-dev

CompileScript: <<
 %p/bin/python%type_raw[python] setup.py build --curl-config=%p/bin/curl-config
<<
