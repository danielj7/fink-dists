CompileScript: << 
#!/bin/sh -ev
cd widgets-sgi
cc -bind_at_load -I/usr/X11R6/include -I/%p/include -O3 -c GLwDrawA.c
cc -bind_at_load -I/usr/X11R6/include -I/%p/include -O3 -c GLwMDrawA.c
ar rv libGLw.a GLwDrawA.o GLwMDrawA.o
ranlib libGLw.a
mkdir GL
mv *.h GL
cd ..
make
<<
InstallScript: <<
#!/bin/zsh -efv
