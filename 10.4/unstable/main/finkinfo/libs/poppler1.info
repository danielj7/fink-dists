	atk1 (>= 1.20.0-1),
	cairo (>= 1.6-1),
	expat1,
	fontconfig2-dev (>= 2.4.1-1),
	freetype219 (>= 2.3.5-1),
	glib2-dev (>= 2.14.0-1),
	glitz,
	gettext-bin,
	gettext-tools,
	gtk+2-dev (>= 2.12.0-1),
	libgettext3-dev,
	libiconv-dev,
	libjpeg,
	libpng3,
	pango1-xft2-ft219-dev (>= 1.18.4-4),
	pixman (>= 0.10.0-1),
	pkgconfig (>= 0.21-1),
	x11-dev,
	xft2-dev
<<
