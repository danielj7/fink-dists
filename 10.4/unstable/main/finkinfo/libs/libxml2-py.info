Depends: libxml2-shlibs (>= %v-1), libiconv, python%type_pkg[python]
BuildDepends: libxml2 (>= %v-1), libiconv-dev, readline5 (>= 5.0-1004), libncurses5 (>= 5.4-20041023-1006), fink (>= 0.24.12-1)
