CompileScript: <<
	#!/bin/sh -ev
	if [ "%type_raw[-nox]" == "." ]; then
		export CONF_OPT_GUI="--enable-gui=gtk2 --disable-darwin"
		export PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH"
	fi
	if [ "%type_raw[-nox]" == "-nox" ]; then
		export CONF_OPT_X="--without-x"
		export CONF_OPT_GUI="--disable-gui"
	fi
	cd src
	make prefix=%p CONF_ARGS="--with-gnome=%p --mandir=%i/share/man --prefix=%p --with-python-config-dir=/usr/lib/python2.7/config --enable-pythoninterp" CONF_OPT_CSCOPE="--enable-cscope" CONF_OPT_MULTIBYTE="--enable-multibyte" CONF_OPT_FEAT="--with-features=big"
<<
InstallScript: <<
	cd src; make -j1 install prefix=%i
	perl -pi -e 's,%i,%p,g' %i/share/man/man1/* 
<<

