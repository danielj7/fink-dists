Package: libxslt
Version: 1.0.23
Revision: 1
Maintainer: Benjamin Reed <ranger@befunk.com>
BuildDepends: gdbm, gmp, libxml2 (>= 2.4.23), libtool14, autoconf2.5
Depends: %N-shlibs (= %v-%r)
Source: mirror:gnome:sources/%n/1.0/%n-%v.tar.bz2
Source-MD5: bef9cddd70a16d3e980560cc14f7b1e8
Replaces: %N (<< 1.0.15-2)
Patch: %f.patch
NoSetLDFLAGS: true
ConfigureParams: --mandir='${prefix}/share/man'
CompileScript: <<
#!/bin/sh
 glibtoolize -c -f
 aclocal
# autoheader
# automake --foreign --include-deps -a -c -f
 autoconf
 ./configure %c
 make
<<
InstallScript: <<
 mkdir -p %i/share/doc
 make install prefix=%i
 mv %i/share/doc/%n-%v %i/share/doc/%n
<<
