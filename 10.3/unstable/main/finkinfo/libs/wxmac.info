    %p/lib/libwx_mac_core-2.6.0.dylib 2.6.0 %n (>= 2.6.0-1)
    %p/lib/libwx_mac_html-2.6.0.dylib 2.6.0 %n (>= 2.6.0-1)
    %p/lib/libwx_mac_media-2.6.0.dylib 2.6.0 %n (>= 2.6.0-1)
    %p/lib/libwx_mac_qa-2.6.0.dylib 2.6.0 %n (>= 2.6.0-1)
    %p/lib/libwx_mac_xrc-2.6.0.dylib 2.6.0 %n (>= 2.6.0-1)
