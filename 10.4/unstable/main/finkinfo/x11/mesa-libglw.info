Package: mesa-libglw
Version: 7.0.2
Revision: 2
Source: http://dl.sourceforge.net/sourceforge/mesa3d/MesaLib-%v.tar.bz2
Source-MD5: 93e6ed7924ff069a4f883b4fce5349dc
SourceDirectory: Mesa-%v
Depends: x11, %N-shlibs (= %v-%r)
BuildDepends: openmotif3, x11-dev
PatchScript: sed 's|@FINKPREFIX@|%p|g' <%a/%n.patch | patch -p1
CompileScript: <<
 #!/bin/sh -ev
 make OPT_FLAGS="-O3 -I%p/include" LIB_DIR=lib darwin LDFLAGS="-Wl,-undefined,dynamic_lookup"
<<
InstallScript: <<
 #!/bin/sh -ev
 make install INSTALL_DIR=%d  LIB_DIR=lib
 cd %d/%p/lib
 ln -s libGLw.1.dylib libGLw.dylib
<<
SplitOff: <<
  Package: %N-shlibs
  Depends: x11
  Files: %p/lib/libGLw.1.dylib
  Shlibs: <<
    %p/lib/libGLw.1.dylib 1.0.0 %n (>=7.0.2-1)
  <<
<<
