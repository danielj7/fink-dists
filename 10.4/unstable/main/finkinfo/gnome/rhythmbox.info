NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
SetCPPFLAGS: -fno-common -I%p/lib/pango-ft219/include/pango-1.0 -I%p/lib/pango-ft219/include -I%p/lib/freetype219/include/freetype2 -I%p/lib/freetype219/include -I%p/lib/fontconfig2/include
