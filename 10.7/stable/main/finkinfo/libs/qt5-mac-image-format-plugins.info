PatchFile-MD5: 2d5e6ce77df31487c7b87f1943833050
PatchScript: <<
	sed -e 's|@FINK_PREFIX@|%p|g' < %{PatchFile} | patch -p1
<<

NoSetCPPFLAGS: true
NoSetCFLAGS: true
#NoSetCXXFLAGS: true

GCC: 4.0
CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-helper.sh
	export QT_FINK_PREFIX=%p/lib/qt5-%type_pkg[qt]
	#export CPATH=%p/include/dbus-1.0:%p/lib/dbus-1.0/include:%p/include
	#export LIBRARY_PATH=%p/lib
	export PATH=${QT_FINK_PREFIX}/bin:$PATH
	export PKG_CONFIG_PATH=%p/lib/glib-2.0/pkgconfig-strict:$PKG_CONFIG_PATH
	### need explicit PKG_CONFIG to detect dbus/sqlite3
	#export PKG_CONFIG=%p/bin/pkg-config
	qmake
	make
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=%N .
<<

InstallScript: <<
	#!/bin/sh -ev
	export QT_FINK_PREFIX=%p/lib/qt5-%type_pkg[qt]

	make install INSTALL_ROOT=%d
	rm -r %d$QT_FINK_PREFIX/lib
<<
