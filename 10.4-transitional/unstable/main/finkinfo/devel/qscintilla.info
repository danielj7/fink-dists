 #!/bin/sh -v
 cd qt
 qmake qscintilla.pro
 perl -pi -e 's|-\$\(MOVE\) \$\(TARGET\) \$\(TARGET0\) \$\(TARGET1\) \$\(TARGET2\) \$\(QTDIR\)/lib|-\$\(MOVE\) \$\(TARGET\) \$\(TARGET0\) \$\(TARGET1\) \$\(TARGET2\) \.|g' Makefile
