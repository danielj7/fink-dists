CompileScript: <<
#!/bin/sh -ev

	export CLASSPATH=`pwd`/jars/postgresql.jar
	ant all publicapi privateapi

	pushd ../postgis-1.1.6/java/jdbc
	javadoc -d api -sourcepath src `find src/org -name \*.java`
	make JAVAC="javac -target 1.4 -source 1.4"
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	install -d -m 755 %i/share/doc/%N
	mv build/privateapi build/publicapi example %i/share/doc/%N/
	mv ../postgis-1.1.6/java/jdbc/api %i/share/doc/%N/postgis
<<
JarFiles: jars/postgresql.jar ../postgis-1.1.6/java/jdbc/postgis*1.1*.jar
DocFiles: LICENSE README
SplitOff: <<
	Package: postgresql-ssl-java
	Description: Upgrade package for postgresql-ssl-java
	Depends: %N (>= %v-%r)
	DocFiles: LICENSE README
<<

