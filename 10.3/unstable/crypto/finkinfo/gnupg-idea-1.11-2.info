BuildDepends: gdbm
Depends: gnupg
PatchScript:  sed 's|@PREFIX@|%p|g' <%a/%f.patch | patch -p1
CompileScript: make
InstallScript: <<
 mkdir -p %i/lib/gnupg; 
 install -m 755 idea %i/lib/gnupg;
 mkdir -p %i/share/doc/gnupg-idea
 install -m 644 README.fink %i/share/doc/gnupg-idea/
<<
