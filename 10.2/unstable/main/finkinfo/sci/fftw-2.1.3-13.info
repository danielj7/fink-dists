   %p/lib/libsfftw.2.dylib 3.0.0 %n (>= 2.1.3-12)
   %p/lib/libsrfftw_threads.2.dylib 3.0.0 %n (>= 2.1.3-12)
   %p/lib/libdrfftw_threads.2.dylib 3.0.0 %n (>= 2.1.3-12)
