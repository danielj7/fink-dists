PatchScript: <<
	%{default_script}
	perl -pi -e 's,(LIBNOTIFY_REQUIRED_VERSION\s*=).*,${1}99999.FORCE.NONDETECT,' configure
	perl -pi -e 's,xrandr,,' plugins/Makefile.in
	perl -pi -e 's,(XListInputDevices),${1}_FORCE_NONDETECT,' configure
<<
