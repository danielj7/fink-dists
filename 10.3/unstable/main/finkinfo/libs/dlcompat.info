InstallScript: <<
  install -d -m 755 %i/lib
  ln -sf /usr/lib/libSystem.dylib %i/lib/libdl.0.dylib
  install -d -m 755 %i/share/doc/%N
  touch %i/share/doc/%N/.turd
  touch %i/share/doc/%N/.turd-dev
<<
