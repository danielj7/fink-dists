Package: ghostscript%type_pkg[-nox]
Type: -nox (boolean)
Version: 9.18
Revision: 1
Description: Interpreter for PostScript and PDF
#Source: mirror:sourceforge:ghostscript/ghostscript-%v.tar.bz2
Source: http://downloads.ghostscript.com/public/ghostscript-%v.tar.gz
Source-MD5: 33a47567d7a591c00a253caddd12a88a
PatchFile: ghostscript.patch
PatchFile-MD5: eef3382928cba0b3be13b2504cb8e78e
Depends: <<
	(%type_raw[-nox] = .) fontconfig2-shlibs,
	freetype219-shlibs,
	ghostscript-fonts,
	lcms2-shlibs (>= 2.7-1),
	libiconv,
	libidn-shlibs,
	libjbig2dec-shlibs,
	libjpeg9-shlibs,
	libopenjp2.7-shlibs,
	libpaper1-shlibs,
	libpng16-shlibs,
	libtiff5-shlibs,
	(%type_raw[-nox] = .) x11,
	(%type_raw[-nox] = .) x11-shlibs
<<
BuildDepends: <<
	fink-buildenv-modules (>= 0.1.3-1),
	fink-package-precedence,
	(%type_raw[-nox] = .) fontconfig2-dev,
	freetype219,
	lcms2 (>= 2.7-1),
	libiconv-dev,
	libidn,
	libjbig2dec-dev,
	libjpeg9 (>= 9-3),
	libopenjp2.7,
	libpaper1-dev,
	libpng16,
	libtiff5,
	pkgconfig,
	(%type_raw[-nox] = .) x11-dev
<<
BuildConflicts: <<
	lcms
<<
Conflicts: <<
	ghostscript,
	ghostscript-nox,
	ghostscript6,
	ghostscript6-nox,
	system-ghostscript8
<<
Replaces: <<
	ghostscript,
	ghostscript-nox,
	ghostscript6,
	ghostscript6-nox,
	system-ghostscript8
<<
License: Restrictive/Distributable
UseMaxBuildJobs: False
SetCPPFLAGS: -MD
ConfigureParams: <<
	--mandir=%p/share/man \
	--disable-compile-inits \
	--disable-cups \
	--disable-gtk \
	--with-system-libtiff \
	(%type_raw[-nox] = .) --x-includes=$X11_BASE_DIR/include \
	(%type_raw[-nox] = .) --x-libraries=$X11_BASE_DIR/lib \
	(%type_raw[-nox] = .) --with-x
	(%type_raw[-nox] = -nox) --without-x
<<
CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-helper.sh
	mv zlib zlib_local
	mv libpng libpng_local
	mv jpeg jpeg_local
	mv openjpeg openjpeg_local
	mv tiff tiff_local
	mv freetype freetype_local
	mv jbig2dec jbig2dec_local
	mv lcms2 lcms2_local
	./autogen.sh %c
	make
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
	make install install-doc DESTDIR=%d
	mkdir -p %i/share/doc
<<
DocFiles: LICENSE
DescPackaging: <<
