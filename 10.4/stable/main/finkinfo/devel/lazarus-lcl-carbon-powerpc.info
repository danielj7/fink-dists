CompileScript: <<
#!/bin/sh -ev

  debug_options="-gl -gw"

# ** Start compiling the lazarus component libraries

  AllUnits="registration lazutils codetools lcl ideintf basecomponents bigidecomponents"

  make $AllUnits LCL_PLATFORM=carbon OPT="$debug_options" OS_TARGET=darwin PP=ppcppc CPU_TARGET=powerpc
<<

