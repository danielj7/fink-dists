cd ./build/generic
make install DESTDIR=%d
mv %i/lib/libxvidcore.4.dylib %i/lib/libxvidcore.4.2.0.dylib
ln -s %p/lib/libxvidcore.4.2.0.dylib %i/lib/libxvidcore.4.dylib
ln -s %p/lib/libxvidcore.4.dylib %i/lib/libxvidcore.dylib
<<
