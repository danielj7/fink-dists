PatchScript: <<
#!/bin/sh -ev
if [ i386 = "`uname -m`" ]
then
  ARCH=X86
else
  ARCH=PPC
fi
sed -e "s,@ARCH@,$ARCH," -e "s,@PREFIX@,%i,"  < %{PatchFile} | patch -p1
<<

CompileScript: make sleepwatcher

InstallScript:<<
make install
mkdir -p %i/etc
install -o root -g wheel -m 755 rc.sleep %i/etc/
install -o root -g wheel -m 755 rc.wakeup %i/etc/
<<

DaemonicFile: <<
<service>
  <description>%n %v</description>
  <message>%n %v</message>

  <daemon name="%n">
    <executable background="yes">%p/sbin/%n</executable>
    <parameters>-d -V -s %p/etc/rc.sleep -w %p/etc/rc.wakeup -p %p/var/run/sleepwatcher.pid</parameters>
    <pidfile>%p/var/run/%n.pid</pidfile>
  </daemon>
</service>

<<

PreRmScript: <<
if [ $1 != "upgrade" ]; then
  daemonic remove %N
fi
<<

PostInstScript: <<
