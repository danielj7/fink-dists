python2.3 setup.py install --root=%d
mkdir %i/share/
mkdir %i/share/%n
ln -s ../doc/%n/ %i/share/%n/doc
cp -R contrib %i/share/%n
cp -R demo %i/share/%n
cp -R tests %i/share/%n
cp -R patches %i/share/%n
cp -R perf %i/share/%n
<<
