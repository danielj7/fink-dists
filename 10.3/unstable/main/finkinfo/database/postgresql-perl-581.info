Source2-MD5: 0813c5ab151dd37ad8938634550e6c1a
BuildDepends: postgresql73-dev (>= %v-%r), perl581-core
Depends: postgresql73-shlibs (>= %v-%r), postgresql (>= %v)
NoSetCPPFLAGS: true
SetCPPFLAGS: -I%p/include
NoSetLDFLAGS: true
SetLIBS: -L%p/lib -lpq
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
Conflicts: postgresql-ssl-perl-581
