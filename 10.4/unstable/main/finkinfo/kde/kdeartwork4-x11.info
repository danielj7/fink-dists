	%N-color-schemes (>= %v-%r),
	%N-desktop-themes (>= %v-%r),
	%N-emoticons (>= %v-%r),
	%N-icon-themes (>= %v-%r),
	%N-sounds (>= %v-%r),
	%N-styles (>= %v-%r),
	%N-wallpapers (>= %v-%r)
<<
BuildDepends: <<
	automoc-%type_pkg[kde] (>= 0.9.89-0),
	cmake (>= 2.6.3-1),
	dbus-dev (>= 1.2.12-1),
	fink (>= 0.28.0-1),
	fontconfig2-dev (>= 2.4.1-1),
	freetype219 (>= 2.3.7-7),
	glib2-dev (>= 2.14.0-1),
	kde4-buildenv (>= 4.2.3-1),
	kdebase4-%type_pkg[kde]-dev (>= 4.2.3-1),
	kdelibs4-%type_pkg[kde]-dev (>= 4.2.3-1),
	libgettext3-dev,
	pkgconfig (>= 0.22-3),
	qt4-%type_pkg[kde] (>= 4.5.0-5),
	soprano-%type_pkg[kde]-dev (>= 2.2.3-2),
	strigi-dev (>= 0.6.3-1),
	(%type_pkg[kde] = x11) x11-dev,
	system-openssl-dev,
	(%type_pkg[kde] = x11) xscreensaver
<<
GCC: 4.0

Source: mirror:kde:stable/%v/src/kdeartwork-%v.tar.bz2
Source-MD5: 6867919e82d111b0a2c0fe4067f41591

CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh

	mkdir -p build
	pushd build
		cmake $KDE4_CMAKE_ARGS -DXSCREENSAVER_CONFIG_DIR:PATH="%p/share/xscreensaver" ..
		make
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make -j1 install DESTDIR="%d"
	popd

	mkdir -p %i/share/doc/installed-packages
	touch %i/share/doc/installed-packages/%N
	touch %i/share/doc/installed-packages/%N-base
<<
