		export FFLAGS='-ff2c'
	fi
	export PKG_CONFIG_PATH=%p/lib/glib-2.0/pkgconfig-strict
    if [ "%type_raw[-blas]" = "-ref" ] ; then
		export PKG_CONFIG_PATH=%p/lib/lapack/pkgconfig:$PKG_CONFIG_PATH
