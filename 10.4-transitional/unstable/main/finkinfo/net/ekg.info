Package: ekg
Version: 1.5
Revision: 4

CustomMirror: <<
  eur-PL: http://dev.null.pl/ekg
  nam-US: http://ranger.befunk.com/fink
  nam-US: http://astrange.ithinksw.net/~astrange/ranger-fink
  nam-CA: http://www.southofheaven.net/befunk
<<
Source: mirror:custom:%n-%v.tar.gz
Source-MD5: 721ebfe7b13e9531b30d558465e6695f
Conflicts: ekg-ssl
Replaces: ekg-ssl
Depends: %N-shlibs (>= %v-%r), libjpeg-shlibs, readline-shlibs, libncurses5-shlibs, python24-shlibs | python24-nox-shlibs
Patch: %n.patch
BuildDepends: gsm, libjpeg, libtool14, libncurses5, python24 | python24-nox, readline, sed
ConfigureParams: --enable-dynamic --enable-shared --enable-ui-readline --enable-ui-ncurses --with-ncurses=%p --with-readline=%p --with-libgsm --with-python --without-openssl --with-pthread --disable-ioctld --sysconfdir=%p/etc --mandir=%p/share/man --disable-dependency-tracking
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
CompileScript: <<
#!/bin/sh -ex

  export lt_cv_sys_max_cmd_len=65536
  export ac_cv_path_PYTHON=%p/bin/python2.4
  ./configure %c
<<
InstallScript: <<
#!/bin/sh -ex
  make install DESTDIR=%d
  pushd lib
  install -d -m 755 %i/lib
  glibtool --mode=install install -c -m 755 libgadu.la %i/lib/libgadu.la
  mkdir -p %i/share/doc/%n
  popd
  pushd docs
  tar -cf - . | (cd %i/share/doc/%n; tar -xf -)
  popd
<<
SplitOff: <<
  Description: headers and development libraries for ekg
  Conflicts: ekg-ssl-dev
  Replaces: ekg-ssl, ekg, ekg-ssl-dev
  Package: %N-dev
  BuildDependsOnly: true
  Depends: %N (>= %v-%r)
  Files: <<
    include
    lib/libgadu.dylib
    lib/*.la
    lib/*.a
    lib/pkgconfig
  <<
<<
SplitOff2: <<
  Description: shared libraries for ekg
  Conflicts: ekg-ssl-shlibs
  Replaces: ekg-ssl-shlibs
  Package: %N-shlibs
  Files: lib
  Shlibs: %p/lib/libgadu.3.dylib 4.0.0 %N-shlibs (>= 1.5-1)
<<
