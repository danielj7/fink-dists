SetCFLAGS: -Os
ConfigureParams: --libexecdir=%p/lib/%n --mandir=%p/share/man --disable-schemas-install --disable-scrollkeeper --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
# apparently I could build successfully a few months ago, where libelf.h was found by configure,
# and nothing relevant has changed since..  Don't understand how configure could have found it w/o next line...
CompileScript: export CPATH=%p/include/libelf ; ./configure %c ; make
InstallScript: make install DESTDIR=%d
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/bug-buddy.schemas >/dev/null
	fi
<<
PostRmScript: <<
	if [ upgrade != "$1" ]; then
		scrollkeeper-update
	fi
<<
