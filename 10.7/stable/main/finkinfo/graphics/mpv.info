NoSetMAKEFLAGS: true
SetCFLAGS: -MD -O2
SetCC: flag-sort -v cc
ConfigureParams: <<
	--enable-macosx-bundle \
	--disable-x11 \
	--disable-libsmbclient \
	--disable-libquvi9 \
	--disable-vcd \
	--disable-dvdread \
	--disable-sdl \
	--disable-sdl2 \
	--disable-jack \
	--disable-lua
<<
CompileScript: <<
	#!/bin/sh -ev
	mv  ../waf-1.7.13 %b/waf
	chmod 755 waf
	./waf configure %c
	./waf build -v $MAKEFLAGS
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
	DESTDIR=%d ./waf install
	rm -r %i/bin/mpv.app
<<
AppBundles: build/mpv.app
