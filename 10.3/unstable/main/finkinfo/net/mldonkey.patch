diff -Naur mldonkey-2.5-3/donkey mldonkey-2.5-3-patched/donkey
--- mldonkey-2.5-3/donkey	Wed Dec 31 19:00:00 1969
+++ mldonkey-2.5-3-patched/donkey	Sat Dec 27 16:30:19 2003
@@ -0,0 +1,26 @@
+#!/bin/sh
+#
+# Start/Stop script for mldonkey
+
+case "$1" in
+    start)
+        if [ ! -d ~/.mldonkey ]; then
+	        echo "Creating $HOME/.mldonkey"  
+                cd @FINKPREFIX@/share; cp -r mldonkey $HOME/.mldonkey
+        fi
+        echo "Starting mldonkey"
+        cd ~/.mldonkey && exec @FINKPREFIX@/bin/mlnet -daemon
+        ;;
+
+    stop)
+        echo "Stopping mldonkey"
+        killall mlnet
+        ;;
+    
+    *)
+        echo "Start/Stop script for mldonkey"
+        echo "Usage: $0 {start|stop}"
+        exit 1
+        ;;
+
+esac
