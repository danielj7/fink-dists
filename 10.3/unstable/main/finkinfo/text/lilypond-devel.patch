+# The split user manual
+#
+$(outdir)/lilypond/index.html: $(outdir)/lilypond.texi
+	mkdir -p $(dir $@)
+	$(MAKEINFO) -I$(outdir) --output=$(outdir)/lilypond --css-include=$(abs-srcdir)/Documentation/texinfo.css --html $<
