	# install some docs and other useful tidbits
	rm -rf Misc/RPM
	/bin/cp -R Misc Tools %i/lib/python2.6
	mkdir -p %i/share/doc/%n
	/bin/cp -R Demo Doc %i/share/doc/%n
	mkdir -p %i/share/doc/%n/html
	/bin/cp -R ../python-docs-html/ %i/share/doc/%n/html
