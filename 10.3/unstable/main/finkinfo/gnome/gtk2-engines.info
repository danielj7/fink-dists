SetCPPFLAGS: -no-cpp-precomp
CompileScript: <<
 ./configure %c
 perl -pi.bak -e 's|\-lXinerama|/usr/X11R6/lib/libXinerama.a|g' `find . -name Makefile`
 make
<<
InstallScript: <<
make install prefix=%i
rm -f `find %i/share/themes/ -name 'README.html'`
<<
