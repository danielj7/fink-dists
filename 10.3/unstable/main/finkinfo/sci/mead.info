UpdateConfigGuess: true
PatchScript: <<
perl -pi.bak -e 's/-O2/-O3/g' configure
<<
GCC: 3.3
CompileScript: <<
#!/bin/zsh 
./configure --prefix=%i
perl -pi.bak -e 's/mv\ t\$\@\ \$\@/mv\ t\$\@\ \$\@;ranlib\ libmead.a/g' libmead/Makefile
#
perl -pi.bak -e 's/mv\ t\$\@\ \$\@/mv\ t\$\@\ \$\@;ranlib\ libmso.a/g' apps/libmso/Makefile
perl -pi.bak -e 's/-lm -o \$\@/-lm/g' apps/mulsidecomp/Makefile
perl -pi.bak -e 's/-lm -o \$\@/-lm/g' apps/multiflex/Makefile
perl -pi.bak -e 's/#pragma interface/ /g' **/*.h
make
cd apps/mulsidecomp
g++ -c -I. -I../.. -I. -I./../libmso -DUSE_EXCEPTIONS -O0 mulsidecomp.cc
cd ../..
make
<<
InstallScript: <<
#!/bin/zsh
 mkdir -p %i/bin
 mkdir -p %i/lib 
 mkdir -p %i/include/MEAD
 mkdir -p %i/share/%n-%v
make install
make clean
cp -R * %i/share/%n-%v/.
ranlib %i/lib/libmead.a
<<
