PatchScript: <<
	sed -e 's,@FINKPREFIX@,%p,g' %a/%{Ni}.patch | patch -p1
	perl -pi.bak -e 's,-O2,-Os,g; s,doc/HTML,doc/kde,g; s,/usr/share/doc/packages/qt3/html,%p/share/doc/qt3/html,g;' admin/*
<<

NoSetCPPFLAGS: true
NoSetLDFLAGS: true
ConfigureParams: --disable-mysql --disable-postgresql --without-nmm --without-mas --without-helix --without-libvisual --with-distribution='Fink/Mac OS X' --with-libgpod --with-mp4v2 --with-mp4v2-dir=%p --without-xine --without-gstreamer --without-gstreamer10
CompileScript: <<
#!/bin/sh -ev

	export PREFIX="%p" USE_UNSERMAKE=1
	. ./environment-helper.sh

	./build-helper.sh cvs       %{Ni} %v %r make -f admin/Makefile.common cvs
	./build-helper.sh configure %{Ni} %v %r ./configure %c $CONFIGURE_PARAMS
	./build-helper.sh make      %{Ni} %v %r unsermake $UNSERMAKEFLAGS
<<

InstallScript: <<
#!/bin/sh -ev

	export PREFIX="%p" USE_UNSERMAKE=1
	. ./environment-helper.sh

	./build-helper.sh install %{Ni} %v %r unsermake -p -j1 install DESTDIR=%d
<<
