BuildDepends: <<
	fink (>= 0.28),
	freetype219,
	gettext-bin,
	gettext-tools,
	imlib2,
	glib2-dev,
	libgettext8-dev,
	libiconv-dev,
	pkgconfig,
	x11-dev,
	xft2-dev (>= 2.2.0),
	pango1-xft2-ft219-dev,
	fontconfig2-dev,
	fink-package-precedence
<<
Depends: <<
	fontconfig2-shlibs,
	freetype219-shlibs,
	imlib2-shlibs,
	libgettext8-shlibs,
	libiconv,
	glib2-shlibs,
	pango1-xft2-ft219-shlibs,
	x11,
	xft2-shlibs (>= 2.2.0)
<<

Source: mirror:sourceforge:enlightenment/e16-%v.tar.gz
