CompileScript: <<
#!/bin/sh -ev

# compile the compiler
  make all OPT=-ap PP=%b/../../ppcuniversal

# compile the ide
  make ide OPT=-ap PP=%b/compiler/ppcx64

# compile the the compiler utility msgdif
  cd compiler/utils
  %b/compiler/ppcx64 -Fu%b/rtl/units/x86_64-darwin msgdif.pp

<<

