CompileScript: <<
	%p/bin/python%type_raw[python] setup.py build 
<<

InfoTest: <<
	TestScript: <<
		cd test && PYTHONPATH="%b/build/lib" %p/bin/python%type_raw[python] run_tests.py || exit 2
		rm %b/build/lib/instant/*.pyc
	<<
<<

