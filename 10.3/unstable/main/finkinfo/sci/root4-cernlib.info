CompileScript: <<
 #!/bin/sh -e
 mkdir lib
 #first compile interface libraries to Pythia
 cd ../pythia5
 g77 -c jetset74.f
 g77 -c pythia5707.f
 g77 -dynamiclib -single_module -install_name %p/lib/root/libPythia.5.70.dylib -o ../root/lib/libPythia.5.70.dylib  *.o -compatibility_version 5 -current_version 5.70.7 -L%p/lib -lpythia
 ld -bundle -o ../root/lib/libPythia.so *.o -L%p/lib -lpythia -lfrtbegin -lg2c -lgcc -lSystem -lbundle1.o
 cd ../pythia6
 g77 -c pythia62.f
 g77 -c  -fno-second-underscore tpythia6_called_from_cc.F
 g77 -c  -fno-second-underscore pythia6_common_block_address.F
 gcc -c pythia6_address.c
 g77 -dynamiclib -single_module -install_name %p/lib/root/libPythia6.6.dylib -o ../root/lib/libPythia6.6.2.dylib  *.o -compatibility_version 6 -current_version 6.2 -L%p/lib -lpythia
 ld -bundle -o ../root/lib/libPythia6.so *.o -L%p/lib -lpythia -lfrtbegin -lg2c -lgcc -lSystem -lbundle1.o
 cd ../root
 ln -s libPythia.5.70.dylib lib/libPythia.5.dylib
 ln -s libPythia.5.dylib lib/libPythia.dylib
 ln -s libPythia6.6.2.dylib lib/libPythia6.6.dylib
 ln -s libPythia6.6.dylib lib/libPythia6.dylib
 #finally start building root
 ./configure macosx %c
 make
<<
