Init the package with libquicktime1 instead of libquicktime so that we don't
conflict with libquicktime0 packages and pass -version-number to libtool.

--- libquicktime-1.1.4.orig/configure.ac
+++ libquicktime-1.1.4/configure.ac
@@ -1,5 +1,5 @@
 AC_INIT(src/lqt_quicktime.c)
-AM_INIT_AUTOMAKE(libquicktime, 1.1.4)
+AM_INIT_AUTOMAKE(libquicktime1, 1.1.4)
 
 LQT_VERSION=$VERSION
 
--- libquicktime-1.1.4.orig/configure
+++ libquicktime-1.1.4/configure
@@ -2441,7 +2441,7 @@
 
 
 # Define the identity of the package.
- PACKAGE=libquicktime
+ PACKAGE=libquicktime1
  VERSION=1.1.4
 
 
--- libquicktime-1.1.4.orig/src/Makefile.am
+++ libquicktime-1.1.4/src/Makefile.am
@@ -9,7 +9,7 @@
