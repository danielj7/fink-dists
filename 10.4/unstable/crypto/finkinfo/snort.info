<daemon name="snort">
<executable background="yes">%p/bin/snort</executable>
<parameters> -d -D -l %p/var/log/snort -c %p/etc/snort/snort.conf</parameters>
<configfile>%p/etc/snort/snort.conf</configfile>
</daemon>

</service>
<<
