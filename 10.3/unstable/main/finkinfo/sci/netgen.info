PatchScript: <<
 sed -e 's|CPLUSPLUSFLAGS2.*|CPLUSPLUSFLAGS2 = -O3  -faltivec -I/usr/X11R6/include -I%p/include -DDARWIN -DOPENGL|g' \
     -e 's|LINKFLAGS2.*|LINKFLAGS2 = -L/usr/X11R6/lib -L%p/lib -framework OpenGL -framework Accelerate|g ' \
        libsrc/makefile.mach.LINUX > libsrc/makefile.mach.DARWIN
 perl -pi -e 's|.*(extern.*matherr.*)|$1|g' ngtcltk/ngappinit.cpp
<<
CompileScript: <<
 make MACHINE=DARWIN
<<
InstallScript: <<
 mkdir -p %i/lib/%n/tutorials
 cp ng %i/lib/%n
 find . -name "*.tcl" -exec cp --parents {} %i/lib/%n/{} \; 
 cp tutorials/* %i/lib/%n/tutorials
 mkdir -p %i/bin
 ln -s %p/lib/%n/ng %i/bin/ng
<<
