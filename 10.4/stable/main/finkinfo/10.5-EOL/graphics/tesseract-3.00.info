		%p/lib/libtesseract_dict.3.dylib     4.0.0 %n (>= 3.00-1)
		%p/lib/libtesseract_image.3.dylib    4.0.0 %n (>= 3.00-1)
		%p/lib/libtesseract_main.3.dylib     4.0.0 %n (>= 3.00-1)
		%p/lib/libtesseract_textord.3.dylib  4.0.0 %n (>= 3.00-1)
