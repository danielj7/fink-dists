Package: db4
Version: 4.1.24
Revision: 5
Source: http://www.sleepycat.com/update/snapshot/db-%v.NC.tar.gz
Replaces: db, db3, db31 (<< 3.1.17-4), db4-ssl
Conflicts: db3, db31 (<< 3.1.17-4), db4-ssl
Depends: db4-shlibs (= %v-%r)
BuildDepends: fink (>= 0.9.9)
BuildDependsOnly: true
NoSetLDFlags: true
NoSetCPPFlags: true
SetCFlags: -Os
SetCXXFlags: -Os
ConfigureParams: --enable-compat185 --enable-cxx --includedir=%p/include/db4
GCC: 3.1
CompileScript: <<
(cd build_unix;  ../dist/configure %c)
(cd build_unix; make UTIL_PROGS=)
(cd build_unix; rm .libs/libdb-4.1.dylib)
(cd build_unix; make SOLINK="cc -dynamiclib -compatibility_version 4.0 -current_version 4.1.24 -install_name %p/lib/libdb-4.1.dylib" SOFLAGS="" libso_target=".libs/libdb-4.1.dylib" UTIL_PROGS="")
(cd build_unix; rm .libs/libdb_cxx-4.1.dylib)
(cd build_unix; make XSOLINK="c++ -dynamiclib -compatibility_version 4.0 -current_version 4.1.24 -install_name %p/lib/libdb_cxx-4.1.dylib" SOFLAGS="" libxso_target=".libs/libdb_cxx-4.1.dylib" UTIL_PROGS="")
(cd build_unix; make)
<<
InstallScript: <<
(cd build_unix; make install prefix=%I docdir=%I/share/doc/db4-doc/docs includedir=%I/include/db4)
<<
SplitOff: <<
 Package: %N-shlibs
 Replaces: %N (<< 4.0.14-4), db4-ssl-shlibs
 Conflicts: db4-ssl-shlibs
 Recommends: %N-doc, %N-bin
 Description: Shared Libraries for db4
 Files: lib/libdb-4.1.dylib lib/libdb_cxx-4.1.dylib
 DocFiles: LICENSE
<<
SplitOff2: <<
 Package: %N-bin
 Depends: %N-shlibs (= %v-%r)
 Conflicts: db3-bin, db31 (<< 3.1.17-2), db4-ssl-bin
 Replaces: db3-bin, db4 (<< 4.0.14-4), db31 (<< 3.1.17-2), db4-ssl-bin
 Recommends: %N-doc
 Description: Binary utilities for db4
 Files: bin/
 DocFiles: LICENSE
<<
SplitOff3: <<
 Package: %N-doc
 Replaces: %N (<< 4.0.14-4), db4-ssl-doc
 Conflicts: db4-ssl-doc
 Description: Documentation for db4
 Files: share/doc/db4-doc/
 DocFiles: LICENSE
<<
