InstallScript: <<
  make install prefix=%i
  mkdir -p %i/share/%n
  cp -R src/pro %i/share/%n
  cp -R src/py  %i/share/%n
  /bin/mv -f %i/lib/libantlr.a %i/lib/libantlr-gdl.a
<<
