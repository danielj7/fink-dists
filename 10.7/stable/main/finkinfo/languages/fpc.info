InstallScript: <<
#!/bin/sh -ev
  make install           INSTALL_PREFIX=%i       PP=%b/compiler/ppcx64 FPCMAKE=%b/utils/fpcm/fpcmake
  ln -sf ../lib/fpc/%v/ppcx64 %i/bin/ppcx64
