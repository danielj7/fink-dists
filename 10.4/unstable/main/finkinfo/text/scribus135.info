#!/bin/sh -ev
# Place all source tree include dirs before %p/include
  perl -pi -e 's|\$\{CMAKE_BINARY_DIR\}/scribus|$&\n\$\{CMAKE_SOURCE_DIR\}/scribus|g' CMakeLists.txt
