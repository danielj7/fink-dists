CompileScript: <<
#!/bin/sh -ev
mv zlib zlib_local
mv libpng libpng_local
mv jpeg jpeg_local
mv jasper jasper_local
mv tiff tiff_local
 ./configure %c
make
<<
InstallScript: <<
 make install install-doc DESTDIR=%d
 mkdir -p %i/share/doc
<<
