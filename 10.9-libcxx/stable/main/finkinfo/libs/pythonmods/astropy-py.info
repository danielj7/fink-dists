  python%type_pkg[python],
  numpy-py%type_pkg[python] (>= 1.6.0-1),
  expat1-shlibs (>= 2.1.0-1),
  beautifulsoup-py%type_pkg[python],
  ( %type_pkg[python] != 33 ) yaml-py%type_pkg[python]
<<
