#!/bin/sh -ex
  cd build/generic
  
  mkdir -p %i/lib
  mkdir -p %i/include
  make install prefix=%i
  mv %i/lib/libxvidcore.dylib %i/lib/libxvidcore.1.0.0.dylib
  ln -s %p/lib/libxvidcore.1.0.0.dylib %i/lib/libxvidcore.1.dylib
  ln -s %p/lib/libxvidcore.1.dylib %i/lib/libxvidcore.dylib
<<
