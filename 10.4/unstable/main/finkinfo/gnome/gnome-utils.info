PatchScript: <<
#!/bin/sh -ev
	  %{default_script}

	# recode ./some/path/ChangeLog as ChangeLogs/ChangeLog.some.path
	mkdir ChangeLogs
	for cl in `find . -name ChangeLog` ; do
		cp $cl ChangeLogs/`echo $cl | sed 's/^\.\(.*\)\/\(ChangeLog\)/\2\1/;s/\//./g'`
	done
<<
