<service>
<description>Bacula Client</description>
<message>Bacula Client</message>
<daemon name="bacula-fd">
<executable background="yes">%p/sbin/bacula-fd</executable>
<parameters> -c %p/etc/bacula/bacula-fd.conf</parameters>
