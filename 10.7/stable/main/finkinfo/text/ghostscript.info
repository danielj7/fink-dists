  ghostscript-fonts, libiconv, libtiff-shlibs, libpaper1-shlibs, libpng15-shlibs, libjpeg8-shlibs, libjasper.1-shlibs, fontconfig2-shlibs, libidn-shlibs,
  (%type_raw[-nox] = .) x11, x11-shlibs
<<
BuildDepends: <<
  fink (>= 0.24.12), libiconv-dev, libtiff, libpaper1-dev, libpng15, libjpeg8, libjasper.1, fontconfig2-dev, libidn,
  x11-dev
<<
