CompileScript: <<
#!/bin/sh -ev
mkdir -p build
pushd build
cmake \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=%p \
  -DENABLE_GPU=ON \
  -DBOOST_ROOT=%p/opt/boost-1_55 \
  ..
make -w
popd
<<

InstallScript: <<
#!/bin/sh -ev
pushd build
make DESTDIR=%d install
popd
<<

