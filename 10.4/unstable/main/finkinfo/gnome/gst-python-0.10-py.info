CompileScript: <<
#!/bin/sh -ex

	export ac_cv_path_PYTHON=%p/bin/python%type_raw[python]
	export PATH="%p/lib/xmkmf/bin:$PATH"
	./configure %c
	make CCLD=g++
<<

