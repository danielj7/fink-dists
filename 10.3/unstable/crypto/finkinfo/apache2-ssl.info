CompileScript: <<
#!/bin/sh
  if [ -e %p/include/httpd.h ]; then 
    echo "" 
    echo "::: You have an OLD version of fink apache2 installed." 
    echo "::: Please \"fink remove apache2\" and retry!" 
    echo "" 
    exit 1 
  fi
  rm -rf %d
  cat default-fink.conf | xargs ./configure --with-mpm=worker --with-ldap --with-ssl=%p --enable-ssl=shared --enable-ldap=shared --enable-auth-ldap=shared --with-ldap-include=%p/include --with-ldap-lib=%p/lib
  make 
  make install DESTDIR=%d
  mv %i/sbin/httpd httpd-worker
  mv %i/lib/apache2/modules/httpd.exp httpd.exp-worker
  cd server; make clean; cd -
  cat default-fink.conf | xargs ./configure --with-mpm=perchild --with-ldap --with-ssl=%p --enable-ssl=shared --enable-ldap=shared --enable-auth-ldap=shared --with-ldap-include=%p/include --with-ldap-lib=%p/lib
  make 
  make install DESTDIR=%d
  mv %i/sbin/httpd httpd-perchild
  mv %i/lib/apache2/modules/httpd.exp httpd.exp-perchild
  cd server; make clean; cd -
  cat default-fink.conf | xargs ./configure --with-mpm=leader --with-ldap --with-ssl=%p --enable-ssl=shared --enable-ldap=shared --enable-auth-ldap=shared --with-ldap-include=%p/include --with-ldap-lib=%p/lib
  make 
  make install DESTDIR=%d
  mv %i/sbin/httpd httpd-leader
  mv %i/lib/apache2/modules/httpd.exp httpd.exp-leader
  cd server; make clean; cd -
  cat default-fink.conf | xargs ./configure --with-mpm=threadpool --with-ldap --with-ssl=%p --enable-ssl=shared --enable-ldap=shared --enable-auth-ldap=shared --with-ldap-include=%p/include --with-ldap-lib=%p/lib
  make 
  make install DESTDIR=%d
  mv %i/sbin/httpd httpd-threadpool
  mv %i/lib/apache2/modules/httpd.exp httpd.exp-threadpool
  cd server; make clean; cd -
  cat default-fink.conf | xargs ./configure --with-mpm=prefork --with-ldap --with-ssl=%p --enable-ssl=shared --enable-ldap=shared --enable-auth-ldap=shared --with-ldap-include=%p/include --with-ldap-lib=%p/lib
  make
  make install DESTDIR=%d
  mv %i/sbin/httpd httpd-prefork
  mv %i/lib/apache2/modules/httpd.exp httpd.exp-prefork
  cd server; make clean; cd -
<<
InstallScript: <<
  make install DESTDIR=%d
  rm -rf %i/sbin/httpd
  rm -rf %i/lib/apache2/modules/httpd.exp
  install -m 755 httpd-worker %i/sbin
  install -m 755 httpd-prefork %i/sbin
  install -m 755 httpd-perchild %i/sbin
  install -m 755 httpd-leader %i/sbin
  install -m 755 httpd-threadpool %i/sbin
  install -m 644 httpd.exp-worker %i/lib/apache2/modules
  install -m 644 httpd.exp-prefork %i/lib/apache2/modules
  install -m 644 httpd.exp-perchild %i/lib/apache2/modules
  install -m 644 httpd.exp-leader %i/lib/apache2/modules
  install -m 644 httpd.exp-threadpool %i/lib/apache2/modules
  rm -rf %i/etc/apche2/httpd.conf
  install -m 664 httpd.conf.fink %i/etc/apache2/httpd.conf
  rm -rf %i/etc/apche2/httpd-std.conf
  install -m 664 httpd-std.conf.fink %i/etc/apache2/httpd-std.conf
  install -d -m 755 %i/var/apache2/conf/ssl.crt
  install -m 644 ../mod_ssl-2.8.15-1.3.28/pkg.sslcfg/*.c* %i/var/apache2/conf/ssl.crt/
  install -m 644 ../mod_ssl-2.8.15-1.3.28/pkg.sslcfg/*.C* %i/var/apache2/conf/ssl.crt/
  install -m 644 ../mod_ssl-2.8.15-1.3.28/pkg.sslcfg/*.prm %i/var/apache2/conf/ssl.crt/
  install -m 644 ../mod_ssl-2.8.15-1.3.28/pkg.sslcfg/*.PRM %i/var/apache2/conf/ssl.crt/
  rm -rf %i/var/apache2/conf/ssl.crt/server.crt
  ln -s %p/var/apache2/conf/ssl.crt/snakeoil-dsa.crt %i/var/apache2/conf/ssl.crt/server.crt

  install -d -m 755 %i/var/apache2/conf/ssl.key
  install -m 644 ../mod_ssl-2.8.15-1.3.28/pkg.sslcfg/*.key %i/var/apache2/conf/ssl.key/
