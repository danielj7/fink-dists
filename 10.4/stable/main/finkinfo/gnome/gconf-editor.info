SetCPPFLAGS: -I%p/lib/fontconfig2/include
SetLDFLAGS: -L%p/lib/fontconfig2/lib
SetCFLAGS: -Os
ConfigureParams: --disable-scrollkeeper --mandir=%p/share/man --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH"
InstallScript: make -j1 install DESTDIR="%d"
DocFiles: AUTHORS COPYING ChangeLog po/ChangeLog:ChangeLog.po NEWS README
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update -q
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gconf-editor.schemas >/dev/null
	fi
	gtk-update-icon-cache -f -t %p/share/icons/hicolor || :
<<
PostRmScript: <<
	if [ update != "$1" ]; then
		scrollkeeper-update -q
	fi
	gtk-update-icon-cache -f -t %p/share/icons/hicolor || :
<<
