ConfigureParams: <<
	--mandir=%p/share/man \
	--disable-scrollkeeper --disable-schemas-install \
	--disable-static \
	--with-ldap-dir=%p \
	--disable-xv --disable-notify \
	PKG_CONFIG_PATH=%p/lib/fontconfig2/lib/pkgconfig:${PKG_CONFIG_PATH}
