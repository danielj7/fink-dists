Package: libxklavier12
Version: 3.4
Revision: 1
Depends: <<
	%N-shlibs (= %v-%r),
	libiconv,
	libxml2-shlibs,
	x11
<<
BuildDepends: <<
	doxygen,
	fink (>= 0.24.12-1),
	glib2-dev (>= 2.14.0-1),
	libgettext3-dev,
	libiconv-dev,
	libxml2 (>= 2.6.30-1),
	pkgconfig (>= 0.21-1),
	x11-dev
<<
Source: mirror:gnome:sources/libxklavier/%v/libxklavier-%v.tar.bz2
