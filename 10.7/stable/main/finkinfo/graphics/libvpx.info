Package: libvpx
Version: 1.2.0
Revision: 1
Description: WebM VP8 Codec SDK
DescPackaging: <<
	Only contains headers and static library. Doesn't make shared libs.
<<
License: BSD
Homepage: http://www.webmproject.org/
Maintainer: Daniel Johnson <daniel@daniel-johnson.org>

Source: http://webm.googlecode.com/files/%n-v%v.tar.bz2
Source-MD5: f8de058e6ba14555144583a2d031fe19
PatchFile: %n.patch
PatchFile-MD5: a564c136b8fadcff6648d7e836818b0d

PatchScript: <<
	%{default_script}
	perl -pi -e 's/-isysroot \${osx_sdk_dir}//g' build/make/configure.sh
	perl -pi -e 's/USE_POSIX_MMAP 0/USE_POSIX_MMAP 1/' vpxenc.c
<<

BuildDepends: (%m != powerpc) yasm, grep
BuildDependsOnly: true

NoSetCPPFLAGS: true
NoSetLDFLAGS: true
# <=10.9 doesn't have the tuple header.
ConfigureParams: --extra-cflags="-DGTEST_USE_OWN_TR1_TUPLE=1"
# clang doesn't like compiling .c files with c++ compiler. Force it.
SetCXXFLAGS: -x c++

CompileScript: <<
	#!/bin/bash -ev
	
	let version=`uname -r | cut -d . -f 1`
	#if [ $version -eq 10 ]; then
	#	let version=9
	#fi
	
	if [ "%m" = "powerpc" ]; then
		./configure %c --target=ppc32-darwin${version}-gcc
	elif [ "%m" = "i386" ]; then
		if [ $version = "8" ]; then
			./configure %c --target=x86-darwin${version}-gcc --disable-postproc
		else
			./configure %c --target=x86-darwin${version}-gcc
		fi
	else
		./configure %c --target=%m-darwin${version}-gcc
	fi
	make
<<

# Test requires downloading files.
#InfoTest: TestScript: make test || exit 2

InstallScript: <<
	make install DESTDIR=%d
	chmod 0644 %i/include/vpx/*
<<

DocFiles: AUTHORS CHANGELOG LICENSE README PATENTS

SplitOff: <<
	Package: %N-bin
	Files: bin
	
	DocFiles: AUTHORS CHANGELOG LICENSE README PATENTS
<<
