Package: cocoa-sharp
Version: 0.9.4
Revision: 2
CustomMirror: RangerMirror
Source: http://ftp.novell.com/pub/mono/sources/%n/%n-%v.tar.bz2
Source-MD5: 16d21726434ff3d35582fd3859991cdd
BuildDepends: <<
	glib2-dev (>= 2.14.0-1),
	libicu32-dev | libicu36-dev,
	mono-dev (>= 1.9.1-1),
	monodoc (>= 1.9-1),
	pkgconfig
<<
Depends: <<
	glib2-shlibs (>= 2.14.0-1),
	mono (>= 1.9.1-1)
<<
NoSetLDFLAGS: true
ConfigureParams: --mandir=%p/share/man --infodir=%p/share/info --disable-static --disable-dependency-tracking
CompileScript: <<
#!/bin/sh -ex

  export lt_cv_sys_max_cmd_len=65536
  ./configure %c
  make
<<
InstallScript: <<
#!/bin/sh -ex
  make install DESTDIR=%d
  install -d -m 755 %i/share/%n/samples
  cp -R samples/* %i/share/%n/samples/
<<
PostInstScript: <<
  [ -x "%p/bin/monodoc" ] && [ -d "%p/lib/monodoc" ] && "%p/bin/monodoc" --make-index >/dev/null 2>&1 || :
<<

