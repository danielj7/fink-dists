  mkdir -p %i/share/doc/%N/examples
  cp -r examples/C* %i/share/doc/%N/examples
  rm -rf %i/share/doc/%N/examples/C/.deps
  #fix nc-config
  perl -pi -e 	's/(has_szlib=).*/\1"yes"/' %i/bin/nc-config
<<
