Package: libcares2
Version: 1.5.3
Revision: 1
Description: Asynch DNS resolver library
Maintainer: Daniel Johnson <daniel@daniel-johnson.org>
Homepage: http://c-ares.haxx.se/

Source: http://c-ares.haxx.se/c-ares-%v.tar.gz
Source-MD5: ec202543a8cb86647f52e1ed4b5c0b37

NoSetCPPFLAGS: true
NoSetLDFLAGS: true
SetCFLAGS: -g -Os

Depends: %N-shlibs (= %v-%r)
BuildDependsOnly: true

ConfigureParams: --disable-static --enable-shared --disable-dependency-tracking

InstallScript: <<
	/usr/bin/head -n 16 ares.h > LICENSE
	make install DESTDIR=%d
<<

DocFiles: AUTHORS CHANGES NEWS README README.cares RELEASE-NOTES LICENSE

License: BSD

SplitOff: <<
	Package: %N-shlibs
	
	Files: lib/libcares.2.*dylib
	Shlibs: %p/lib/libcares.2.dylib 3.0.0 %n (>= 1.5.3-1)
	
	DocFiles: AUTHORS CHANGES NEWS README README.cares RELEASE-NOTES LICENSE
<<