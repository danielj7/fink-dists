  #!/bin/bash -ev
  perl -pi -e "s|'geos_c'|'libgeos_c.1.4.2.dylib'|g" django/contrib/gis/geos/libgeos.py
  perl -pi -e "s|lib_path = None|lib_path = '%p/lib/libgeos3/libgeos_c.1.4.2.dylib'|g" django/contrib/gis/geos/libgeos.py
