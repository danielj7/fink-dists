diff -Naur --exclude='*~' xtla-1.1/fink/emacsen-install xtla-1.1.fink/fink/emacsen-install
--- xtla-1.1/fink/emacsen-install	1969-12-31 16:00:00.000000000 -0800
+++ xtla-1.1.fink/fink/emacsen-install	2005-12-13 18:36:31.000000000 -0800
@@ -0,0 +1,37 @@
+#! /bin/sh
+# @PREFIX@/lib/emacsen-common/packages/install/xtla
+set -e
+
+FLAVOR=${1}
+PACKAGE=xtla
+
+echo install/${PACKAGE}: Handling install of emacsen flavor ${FLAVOR}
+
+el_files="xtla-autoconf.el xtla-baz.el xtla-bconfig.el xtla-browse.el xtla-build.el xtla-core.el xtla-defs.el xtla-emacs.el xtla-lisp.el xtla-tests.el xtla-tips.el xtla-version.el xtla-xemacs.el xtla.el"
+
+el_dir=@PREFIX@/share/emacs/site-lisp/${PACKAGE}/
+elc_dir=@PREFIX@/share/${FLAVOR}/site-lisp/${PACKAGE}/
+el_path_list=`for i in ${el_files}; do \
+                  echo $i | perl -pe "s|^|${el_dir}|"; done`
+elc_path_list=`for i in ${el_files}; do \
+                  echo $i | perl -pe "s|^|${elc_dir}|"; done`
+
+byte_compile_options="-batch -q --no-init-file --no-site-file"
+
+
+case $FLAVOR in
+    emacs21|emacs22 )
+	echo install/${PACKAGE}: byte-compiling for ${FLAVOR}
+
+	install -m 755 -d ${elc_dir}
+
+	# Copy the temp .el files to the installation dir
+	cp ${el_path_list} ${elc_dir}
+	
+        ;;
+
+    * )
+	echo install/${PACKAGE}: Skipping unsupported flavor ${FLAVOR}
+	;;
+esac
+
diff -Naur --exclude='*~' xtla-1.1/fink/emacsen-remove xtla-1.1.fink/fink/emacsen-remove
--- xtla-1.1/fink/emacsen-remove	1969-12-31 16:00:00.000000000 -0800
+++ xtla-1.1.fink/fink/emacsen-remove	2005-12-13 18:31:04.000000000 -0800
@@ -0,0 +1,18 @@
+#! /bin/sh
+# @PREFIX@/lib/emacsen-common/packages/remove/xtla
+set -e
+
+FLAVOR=${1}
+PACKAGE=xtla
+
+echo remove/${PACKAGE}: Handling removal of emacsen flavor ${FLAVOR}
+
+case $FLAVOR in
+    emacs21|emacs22 )
+	echo remove/${PACKAGE}: purging byte-compiled files for ${FLAVOR}
+	rm -rf @PREFIX@/share/${FLAVOR}/site-lisp/${PACKAGE}
+	;;
+    * )
+	echo remove/${PACKAGE}: Skipping unsupported flavor ${FLAVOR}
+	;;
+esac
