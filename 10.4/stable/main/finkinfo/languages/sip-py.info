		LFLAGS_PLUGIN="-bundle `%p/bin/python%type_raw[python]-config --ldflags`"
    perl -pi -e 's,exe = \"pythonw\",exe = \"%p/bin/python%type_raw[python]\",g' sipconfig.py
	make
