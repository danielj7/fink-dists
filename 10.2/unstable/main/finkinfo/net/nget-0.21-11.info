Package: nget
Version: 0.21
Revision: 11
Source: mirror:sourceforge:%n/%n-%v+uulib.tar.gz
SourceDirectory: %n-%v
Source-MD5: 17de7da058e925ec334dbe00df757e87
Depends: popt-shlibs, pcre-shlibs
BuildDepends: popt, autoconf25, pcre
SetCPPFLAGS: -no-cpp-precomp
SetCXXFLAGS: -O1
ConfigureParams: --mandir=${prefix}/share/man --with-pcre-prefix=%p
GCC: 3.1
InstallScript: <<
mkdir -p %i/bin
mkdir -p %i/share/man/man1
make install prefix=%i mandir=%i/share/man
<<
