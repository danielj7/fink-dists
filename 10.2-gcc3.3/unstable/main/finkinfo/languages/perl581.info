InstallScript: <<
#!/bin/sh
 make install

 if [ -d %i/lib/perl5/5.8.1/darwin-thread-multi ]; then
    mv %i/lib/perl5/5.8.1/darwin-thread-multi %i/lib/perl5/5.8.1/darwin-thread-multi-2level
    mv %i/lib/perl5/site_perl/5.8.1/darwin-thread-multi %i/lib/perl5/site_perl/5.8.1/darwin-thread-multi-2level
 fi

 pushd %i/lib/perl5/5.8.1
 ln -s darwin-thread-multi-2level darwin-thread-multi
 popd

 pushd %i/lib/perl5/site_perl/5.8.1
 ln -s darwin-thread-multi-2level darwin-thread-multi
 popd

 for perl in /usr/bin/perl5.6.0 /usr/bin/perl5.8.1 %p/bin/perl5.6.0; do
   $perl -pi -e's#%p/src/root[^/]+## if/^install/' %i/lib/perl5/5.8.1/darwin-thread-multi-2level/Config.pm && break
 done
<<
