	# fix all main things to be python-versioned filenames with
	# unversioned symlinks to them
	pushd %i/bin
		for f in 2to3 idle pydoc smtpd.py; do
			mv ${f} ${f}2.6
			ln -s ${f}2.6 %i/bin/${f}
		done
	popd
