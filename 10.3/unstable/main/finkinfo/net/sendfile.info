PatchScript: <<
 mkdir -p %p/var/run
 touch %p/var/run/.placeholder
 mv -f config.guess config.sub develop
 sed 's|@PREFIX@|%p|g' <%a/%n.patch | patch -p1
 cd develop; aclocal; autoconf
<<
