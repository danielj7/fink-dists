CompileScript: <<
#!/bin/sh -e

  export HOME=/tmp
  export PREFIX="%p"
  . ./environment-helper.sh

  ./build-helper.sh cvs       %N %v %r make -f admin/Makefile.common cvs
  ./build-helper.sh configure %N %v %r ./configure %c
#10.2 ./build-helper.sh make  %N %v %r make all_libraries="$ALL_LIBRARIES" FORCE_ALLOW_UNDEFINED="-Wl,-undefined -Wl,suppress -Wl,-flat_namespace"
./build-helper.sh make  %N %v %r make all_libraries="$ALL_LIBRARIES" FORCE_ALLOW_UNDEFINED="-Wl,-undefined -Wl,dynamic_lookup"
<<

InstallScript: <<
#!/bin/sh -e

  export PREFIX="%p"
  . ./environment-helper.sh

  ./build-helper.sh install %N %v %r make -j1 install DESTDIR=%d

  mkdir -p %i/share/doc/kde-installed-packages
  touch %i/share/doc/kde-installed-packages/%N
<<

