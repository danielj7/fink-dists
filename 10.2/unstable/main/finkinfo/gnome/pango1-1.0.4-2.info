Package: pango1
Version: 1.0.4
Revision: 2
Depends: %N-shlibs (=%v-%r), %N-dev (=%v-%r)
BuildDepends: freetype2 (>= 2.0.8-3), glib2-dev, gtk-doc, pkgconfig
Provides: %N-bin, %N-common
Replaces: %N-bin, %N-common
Source: mirror:gnome:sources/pango/1.0/pango-%v.tar.bz2
Source-MD5: 9147cdbe3c4eac36047257e552665a65
Patch: %f.patch
NoSetCPPFLAGS: true
NoSetLDFLAGS: true
SetCPPFLAGS: -no-cpp-precomp
SetCFLAGS: -O3 -funroll-loops -fstrict-aliasing
SetLIBS: -L%p/lib
InstallScript: <<
  make install DESTDIR=%d
  LANG=C DYLD_LIBRARY_PATH=%b/pango/.libs %i/bin/pango-querymodules %i/lib/pango/1.0.0/modules/* | sed -e 's|%i|%p|g' >%i/etc/pango/pango.modules
<<
BuildDependsOnly: True
SplitOff: <<
  Package: %N-shlibs
  Depends: freetype2-shlibs, glib2
  Files: lib/lib*-1.0.*.dylib lib/pango
  DocFiles: AUTHORS COPYING ChangeLog NEWS README TODO
<<
