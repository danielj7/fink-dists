NoSetCPPFLAGS: true
NoSetLDFLAGS: true
PatchScript: <<
perl -pi.bak -e 's/-O2/-O3/g' configure
<<
GCC: 3.3
CompileScript: <<
#!/bin/zsh 
./configure --prefix=%i
make
ranlib libmead/libmead.a
ranlib apps/libmso/libmso.a
<<
InstallScript: <<
#!/bin/zsh
 mkdir -p %i/bin
 mkdir -p %i/lib 
 mkdir -p %i/include/MEAD
 mkdir -p %i/share/%n-%v
make install
make clean
cp -R * %i/share/%n-%v/.
ranlib %i/lib/libmead.a
<<
