#!/bin/sh -ev

export CCPNMR_TOP_DIR=%b

cd $CCPNMR_TOP_DIR/ccpnmr1.0/c

cp environment-opengl.txt environment.txt

if [ %m = "i386" ]; then 
perl -pi -e 's,-mtune=970\s-maltivec,,g' environment.txt
fi

make
make links
