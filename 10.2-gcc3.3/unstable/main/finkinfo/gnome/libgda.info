PatchScript: <<
perl -pi.bak -e "s/need_relink=yes/need_relink=no/" ltmain.sh
<<
ConfigureParams: --mandir='${prefix}/share/man'
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
SetCPPFlags: -no-cpp-precomp
InstallScript: <<
 make install prefix=%i
 mkdir -p %i/share
 mv %i/lib/locale %i/share
<<
