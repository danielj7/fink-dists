CompileScript: <<
# compile the crosscompiler, rtl and packages
  make rtl      PP=ppcppc CPU_TARGET=powerpc OS_TARGET=%type_pkg[platform]
  make packages PP=ppcppc CPU_TARGET=powerpc OS_TARGET=%type_pkg[platform] FPCDIR=%b
<<

InstallScript: <<
#!/bin/sh -ev
# install all units from the rtl and packages
  make rtl_install      OS_TARGET=%type_pkg[platform] CPU_TARGET=powerpc INSTALL_PREFIX=%i CROSSINSTALL=1 FPCMAKE=fpcmake PP=ppcppc
  make packages_install OS_TARGET=%type_pkg[platform] CPU_TARGET=powerpc INSTALL_PREFIX=%i CROSSINSTALL=1 FPCMAKE=fpcmake PP=ppcppc
<<

