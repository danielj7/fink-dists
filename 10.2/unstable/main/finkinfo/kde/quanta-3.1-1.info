DocFiles: AUTHORS COPYING ChangeLog INSTALL* NEWS README VERSION
SetLIBS: -L%p/lib
SetCPPFLAGS: -no-cpp-precomp
SetCFLAGS: -I%p/include
ConfigureParams: --prefix=%p --with-qt-dir=%p --with-qt-includes=%p/include/qt --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=no --mandir=%i/share/man --with-xinerama --enable-final --disable-dependency-tracking `cat /tmp/kde-build-options`
CompileScript: <<
#!/bin/sh
 export KDEDIR=%p
 export QTDIR=%p
 make -f Makefile.cvs
 ./configure %c
 make -j2
<<
InstallScript: <<
 make install DESTDIR=%d
 rm -rf %i/share/apps/katepart
 mkdir -p %i/share/applnk/Editors
 mv %i/share/applnk/Applications/kmdr-executor.desktop %i/share/applnk/Editors/
 rmdir %i/share/applnk/Applications
<<
