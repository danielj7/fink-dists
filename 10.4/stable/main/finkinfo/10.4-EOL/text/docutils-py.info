PreRmScript: <<
  if [ $1 != "upgrade" ]; then
    for i in rst2html rst2latex rst2newlatex rst2pseudoxml rst2s5 rst2xml; do
      update-alternatives --remove-all $i
      update-alternatives --remove-all $i-py
    done
  fi
<<

