CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[strigi]" KDE4_INSTALL_PREFIX="%p/lib/%type_pkg[strigi]"
	. %p/sbin/kde4-buildenv.sh

	mkdir -p build
	pushd build
		cmake -DENABLE_FAM:BOOL=OFF -DENABLE_SQLITE:BOOL=OFF $KDE4_CMAKE_ARGS ..
		for dir in src/archivereader/qclient src/searchclient; do
			pushd "$dir"
				make VERBOSE=1
			popd
		done
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	for dir in src/archivereader/qclient src/searchclient; do
		pushd "build/$dir"
			make -j1 install DESTDIR="%d"
		popd
	done
	install -d -m 755 %i/bin
	mv %i/lib/%type_pkg[strigi]/bin/strigiclient %i/bin/strigiclient-%type_pkg[strigi]
<<
