Depends: glibmm2.4-shlibs, gtkmm2.4-shlibs, pango1-xft2-shlibs, gtk+2-shlibs, libart2-shlibs, libxml2-shlibs, libpng3-shlibs, popt-shlibs, atk1-shlibs, libsigc++2-shlibs, gc-shlibs, libxslt-shlibs
BuildDepends: glibmm2.4-dev, gtkmm2.4-dev, atk1, pkgconfig, pango1-xft2-dev, gtk+2-dev, libart2, libxml2, libpng3, popt, gettext-dev, gettext-bin, gettext-tools, libiconv-dev, libsigc++2, intltool, glib2-dev, gc, libxslt
Source: mirror:sourceforge:%n/%n-%v.tar.bz2
