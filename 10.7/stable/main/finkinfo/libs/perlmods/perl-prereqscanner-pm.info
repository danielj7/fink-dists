PatchScript: <<
#!/bin/sh -ev
	export FULLPERL=`perl -e 'print $ARGV[0]=~/PERL="(.*?)"/' '%c'`
	perl -pi -e "s,\\$\\^X,$FULLPERL," t/scan_prereqs.t
<<
InstallScript: <<
	%{default_script}
	mv %i/share/man %i/lib/perl5/%type_raw[perl]
	mv %i/bin/scan_prereqs %i/bin/scan_prereqs-pm%type_pkg[perl]
<<
