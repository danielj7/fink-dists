Package: fontconfig2-dev
Version: 2.2.0
Revision: 3
Maintainer: Alexander Strange <astrange@ithinksw.com>
BuildDependsOnly: true
Depends: expat-shlibs, fontconfig1-shlibs
Source-MD5: cf0ce6c87e5d6362e9ebc8d94a45fdc4
Source: http://pdx.freedesktop.org/software/fontconfig/releases/fontconfig-%v.tar.gz
Patch: %n.patch
BuildDepends: expat, x11-dev
SetCFLAGS: -fno-common
ConfigureParams: --prefix=%p/lib/fontconfig2 --disable-shared --with-confdir=/etc/fonts
InstallScript: <<
(cd fontconfig && make install DESTDIR=%d)
(cd src && make install DESTDIR=%d)
make install-pkgconfigDATA DESTDIR=%d
perl -pi -e 's;-lfontconfig;%p/lib/fontconfig2/lib/libfontconfig.a;g' %i/lib/fontconfig2/lib/pkgconfig/fontconfig.pc
(cd %i/lib/fontconfig2/lib; ar x libfontconfig.a; rm libfontconfig.a; ld -r -all_load -o fontconfig.o fc*.o; ar cqv libfontconfig.a fontconfig.o; rm *.o "__.SYMDEF SORTED"; ranlib libfontconfig.a)
<<
