Package: octave
Version: 2.1.35
Revision: 10
Maintainer: Jeffrey Whitaker <jsw@cdc.noaa.gov>
BuildDepends: libjpeg, libpng, fftw, hdf5 (>= 1.4.3-2), readline (>= 4.3-5), texinfo (>= 4.1-3)
Depends: f2c (>= 20020123-3), gnuplot, readline-shlibs (>= 4.3-5), fftw-shlibs, hdf5-shlibs (>= 1.4.3-2), dlcompat
Source: ftp://ftp.octave.org/pub/octave/bleeding-edge/%n-%v.tar.gz
Conflicts: octave-atlas
Replaces: octave-atlas
UpdateConfigGuess: true
SetCPPFLAGS: -no-cpp-precomp
SetLDFLAGS: -L%p/lib -g -Xlinker -m
SetCXX: g++2
SetCC: gcc2
PatchScript: <<
 cp config.sub config.guess kpathsea/.
 sed 's|<PREFIX>|%p|g'< %a/%f.patch | patch -p1
<<
ConfigureParams: --with-f2c --infodir='${prefix}/share/info' --mandir='${prefix}/share/man' --enable-dl --without-fastblas
InstallScript: <<
 make install prefix=%i
 mkdir -p %i/share/doc/%n
 cp -R examples %i/share/doc/%n
 mkdir -p %i/libexec/octave/libstdc++_obj
 (cd %i/libexec/octave/libstdc++_obj; ar -x /usr/lib/gcc/darwin/2.95.2/libstdc++.a)
<<
