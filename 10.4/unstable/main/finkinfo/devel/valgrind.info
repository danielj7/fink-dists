	( %type_raw[-64bit] = -64bit ) !vgpreload_memcheck-amd64-darwin.so
	( %m = x86_64 ) !libmpiwrap-amd64-darwin.so
	( %m = x86_64 ) !vgpreload_core-amd64-darwin.so
	( %m = x86_64 ) !vgpreload_drd-amd64-darwin.so
