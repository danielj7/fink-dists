	kdelibs3-unified (>= %v-1),
	xfonts-intl
<<
BuildDepends: <<
	fink (>= 0.26.0-1),
	arts-dev,
	kdebase3-unified-dev (>= %v-1),
	kdelibs3-unified-dev (>= %v-1),
	libxml2,
	libxslt,
	xfonts-intl
<<
