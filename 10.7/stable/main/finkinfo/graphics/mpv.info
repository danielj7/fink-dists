	docutils-py27,
	fink-package-precedence,
	jack-dev,
	ladspa-dev,
	lcms2,
	libass4-dev,
	libavcodec55-2.0-dev,
	libavdevice55-2.0-dev,
	libavfilter3-2.0-dev,
	libavformat55-2.0-dev,
	libavutil52-2.0-dev,
	libbluray1-dev,
	libcaca-dev,
	libcdio-dev,
	libguess (>= 1.1-1),
	libiconv-dev,
	libjpeg9,
	libmng2,
	libmpg123,
	libncurses5,
	libpostproc52-2.0-dev,
	libquvi7-dev,
