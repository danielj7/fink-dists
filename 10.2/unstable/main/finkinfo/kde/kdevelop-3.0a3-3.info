Source: mirror:kde:unstable/kdevelop-3.0-alpha3/src/%n-%v.tar.bz2
Source-MD5: 5dd41f2b3bcda3f8fcbf25c29725baed
Source2: mirror:custom:kde-admindir-20030328.tar.bz2
Source2-MD5: 712c543a8d3ca4512dfabe886371df2c
Source2ExtractDir: %n-%v

PatchScript: sed 's|@PREFIX@|%p|g' <%a/%f.patch | patch -p0

SetCFLAGS: -fno-common
SetCPPFLAGS: -no-cpp-precomp -isystem %p/include -I%p/include
SetLIBS: -L%p/lib
NoSetLDFLAGS: true
SetMACOSX_DEPLOYMENT_TARGET: 10.2
ConfigureParams: --includedir=%p/include --libdir=%p/lib --prefix=%p --with-qt-dir=%p --with-qt-includes=%p/include/qt --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=no --mandir=%i/share/man --with-xinerama --with-pam --disable-final --with-pythondir=%p --with-qtdoc-dir=%p/share/doc/qt3/html --with-kdelibsdoxy-dir=%p/share/doc/kde/en/kdelibs-3.1-apidocs --with-kdelibsdoc-dir=%p/share/doc/kde/en/kdelibs-3.1-apidocs --enable-scripting --enable-javasupport --enable-debug
CompileScript: <<
#!/bin/sh
  export KDEDIR=%p
  make -f Makefile.cvs
  [ $? = 0 ] && sh ./configure %c
  [ $? = 0 ] && make -j2
<<

InstallScript: <<
#!/bin/sh
  make install DESTDIR=%d
  rm -rf %i/bin/extractrc
  rm -rf %i/share/icons/crystalsvg/16x16/actions/make_kdevelop.png
  rm -rf %i/share/icons/crystalsvg/16x16/actions/project_open.png
  rm -rf %i/share/icons/crystalsvg/16x16/actions/rebuild.png
  rm -rf %i/share/icons/crystalsvg/16x16/actions/reload_page.png
  rm -rf %i/share/icons/crystalsvg/22x22/actions/make_kdevelop.png
  rm -rf %i/share/icons/crystalsvg/22x22/actions/project_open.png
  rm -rf %i/share/icons/crystalsvg/22x22/actions/rebuild.png
  rm -rf %i/share/icons/crystalsvg/22x22/actions/reload_page.png
<<
