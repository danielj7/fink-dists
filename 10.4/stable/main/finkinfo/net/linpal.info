CompileScript: <<
  make CC="g++ -Wall" PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
<<

InstallScript: <<
  mkdir -p %i/bin
  mkdir -p %i/share/%n
  cp -r faces colors *.png *.svg *.glade %i/share/%n
  cp -r linpal %i/bin
<<

