Package: hwloc
Version: 1.9
Revision: 1
Source: http://www.open-mpi.org/software/%n/v%v/downloads/%n-%v.tar.bz2
Source-MD5: 1954f690211227cb0a665624aab6aaa6
Distribution: 10.9
Depends: hwloc-shlibs (= %v-%r)
ConfigureParams: --without-x --mandir=%p/share/man --infodir=%p/share/info --libexecdir=%p/lib
InstallScript: <<
  make install DESTDIR=%d
<<
InfoTest: TestScript: make check || exit 2
SplitOff: <<
  Package: hwloc-dev
  Depends: hwloc-shlibs (= %v-%r)
  BuildDependsOnly: true
  DocFiles: AUTHORS COPYING NEWS README
  Files: <<
    include
    lib/libhwloc.{dylib,la}
    lib/pkgconfig
    share/man/man3
  <<
<<
SplitOff2: <<
 Package: hwloc-shlibs
 DocFiles: AUTHORS COPYING NEWS README
 Files: <<
   lib/libhwloc.*.dylib
  <<
  Shlibs: <<
    %p/lib/libhwloc.5.dylib 11.0.0 %n (>= 1.9-1)
  <<
<<
