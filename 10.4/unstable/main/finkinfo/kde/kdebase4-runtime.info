PatchScript: <<
  %{default_script}
  perl -pi -e 's,include +<Phonon,include <phonon,' `egrep -rIl 'include +<Phonon' phonon`
<<
CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh

	mkdir -p build
	pushd build
		cmake $KDE4_CMAKE_ARGS ..
		make VERBOSE=1
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make -j1 install DESTDIR="%d"
	popd
	rm -rf %i/lib/%type_pkg[kde]/lib/libkwalletbackend.dylib
<<
