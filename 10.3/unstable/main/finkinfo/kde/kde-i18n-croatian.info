Depends: <<
	kdelibs3-unified (>= %v-11),
	xfonts-intl
<<
BuildDepends: <<
	fink (>= 0.26.0-1),
	arts-dev,
	kdebase3-unified-dev (>= %v-11),
	kdelibs3-unified-dev (>= %v-11),
	libxml2,
	libxslt,
	xfonts-intl
<<
