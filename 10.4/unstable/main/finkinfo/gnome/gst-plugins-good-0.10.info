PatchScript: <<
	#!/bin/sh -ev
	perl -pi -e 's,CFLAGS -Werror,CFLAGS,g' configure
	if [ "%m" = "x86_64" ]; then
	perl -pi -e 's,^MMX_FILES =.*$,MMX_FILES =,g; s,-DBUILD_MMX,,g' gst/goom/Makefile.in
	perl -pi -e 's,QuickTime,QTKit,g' sys/osxvideo/Makefile.in
	fi
<<

