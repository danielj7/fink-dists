  make install DESTDIR=%d
  perl -pi -e "s,%b/src/kiosvn,%p/lib/kde3," %i/lib/kde3/kio_ksvn.la
  perl -pi -e "s,%b/src/kdesvnd,%p/lib/kde3," %i/lib/kde3/kded_kdesvnd.la
  perl -pi -e "s,%b/src,%p/lib/kde3," %i/lib/kde3/libkdesvnpart.la
<<
