	ln -s libtclstub8.4.a %i/lib/libtclstub.a
	/usr/bin/ranlib %i/lib/libtkstub8.4.a

	perl -ni -e 'print unless /# FINK REMOVE THIS/' %i/lib/tclConfig.sh %i/lib/tkConfig.sh
<<
