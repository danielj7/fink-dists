	perl -pi -e 's/webkit\.pot/\$(DOMAIN).pot/g' GNUmakefile.in WebKit/gtk/po/GNUmakefile.am
	mv WebKit/gtk/po/webkit.pot WebKit/gtk/po/webkit-1.0.2.pot
