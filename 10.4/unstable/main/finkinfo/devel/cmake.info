PatchScript: <<
# Virtualize explicit '/sw' in sources
  perl -pi.bak -e 's,/sw,%p,g' Modules/*.cmake Modules/Platform/Darwin*.cmake
# don't waste time by searching for frameworks and app bundles first
  perl -pi.bar -e 's,FRAMEWORK FIRST,FRAMEWORK LAST,g;s,APPBUNDLE FIRST,APPBUNDLE LAST,g' Modules/Platform/Darwin.cmake
<<
CompileScript: <<
#!/bin/sh -ev
./bootstrap --prefix=%p --docdir=/share/doc/%n --mandir=/share/man
 make
 make
<<
InstallScript: <<
 make install DESTDIR=%d
<<
