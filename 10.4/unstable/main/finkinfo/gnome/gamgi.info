PatchScript: <<
#!/bin/sh -ev
cat <<_EOF > src/make_local
PATH_EXPAT_H = -I/sw/include
PATH_FREETYPE_H = -I/sw/lib/freetype219/include/freetype2
PATH_X_H = -I/usr/X11R6/include
PATH_GLIB_H = -I/sw/include/glib-2.0 -I/sw/lib/glib-2.0/include
PATH_CAIRO_H = -I/sw/include/cairo
PATH_PANGO_H = -I/sw/lib/pango-ft219/include/pango-1.0
