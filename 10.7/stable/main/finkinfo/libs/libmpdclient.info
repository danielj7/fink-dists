Package: libmpdclient
Version: 2.8
Revision: 1
BuildDepends: doxygen, fink-package-precedence
Depends: %N-shlibs (= %v-%r)
Recommends: mpd
BuildDependsOnly: true
Source: http://www.musicpd.org/download/libmpdclient/2/libmpdclient-%v.tar.bz2
Source-MD5: 79f6c810c291fa4f382a92c8e25123de
ConfigureParams: <<
	--mandir=%p/share/man \
	--enable-dependency-tracking \
	--disable-static
<<
PatchScript: perl -pi -e 's,\S+/html/\*\.gif,,g' Makefile.in
CompileScript: <<
	%{default_script}
	fink-package-precedence .
<<
InfoTest: <<
	TestScript: make check || exit 2
<<
InstallScript: make install DESTDIR=%d
DocFiles: AUTHORS COPYING NEWS README
Splitoff: <<
  Package: %N-shlibs
  Files: <<
    lib/libmpdclient.2.dylib
  <<
  Shlibs: <<
    %p/lib/libmpdclient.2.dylib 3.0.0 %n (>= 2.1-2)
  <<
  DocFiles: COPYING
<<
