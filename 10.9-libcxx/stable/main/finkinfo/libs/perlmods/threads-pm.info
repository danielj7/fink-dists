TestScript: <<
	#!/bin/sh -ev
	export FULLPERL=`perl -e 'print $ARGV[0]=~/PERL="(.*?)"/' '%c'`
	if dpkg --compare-versions "%type_raw[perl]" ">=" "5.10.0" && [ "%m" != "powerpc" ]; then
		export PERL_RUNPERL_DEBUG="/usr/bin/arch -%m"
	fi
	make FULLPERL="$FULLPERL" test || exit 2
