	sudo -u postgres %p/opt/postgresql-%type_raw[postgresql]/bin/psql \
		-f %p/share/doc/%N/contrib/postgis-1.5/postgis_upgrade_XX_to_15.sql \
		-d <your_spatial_database>
<<
