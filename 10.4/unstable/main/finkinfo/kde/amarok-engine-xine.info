PatchScript: <<
	sed -e 's,@FINKPREFIX@,%p,g' %a/amarok-core.patch | patch -p1
	perl -pi -e 's,-O2,-Os,g; s,doc/HTML,doc/kde,g; s,/usr/share/doc/packages/qt3/html,%p/share/doc/qt3/html,g;' admin/*
