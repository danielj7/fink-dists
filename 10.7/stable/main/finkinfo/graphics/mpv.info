NoSetMAKEFLAGS: true
SetCFLAGS: -MD -O2
SetCC: flag-sort -v cc
# lcms2 > 2.6
#	--enable-vda-hwaccel
#	needs ffmpeg >= 2.4
ConfigureParams: <<
	--enable-macosx-bundle \
	--disable-x11 \
	--disable-libsmbclient \
	--disable-libquvi9 \
	--disable-dvdread \
	--enable-cdda \
	--disable-lcms2 \
	--disable-sdl1 \
	--disable-sdl2 \
	--enable-portaudio \
	--disable-jack \
	--disable-lua
<<
CompileScript: <<
	#!/bin/sh -ev
	mv  ../waf-1.7.16 %b/waf
	chmod 755 waf
	./waf configure %c
	./waf build -v $MAKEFLAGS
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
	DESTDIR=%d ./waf install
	rm -r %i/bin/mpv.app
<<
AppBundles: build/mpv.app
