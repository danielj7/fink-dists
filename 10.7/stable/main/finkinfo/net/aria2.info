Depends: <<
	ca-bundle,
	libcares2-shlibs (>= 1.10.0-1),
	libgettext8-shlibs,
	libiconv,
	libxml2-shlibs,
	openssl100-shlibs (>= 1.0.1f-1),
	sqlite3-shlibs
<<
BuildDepends: <<
	clang (>= 4.2),
	fink (>= 0.32),
	gettext-tools,
	libcares2 (>= 1.10.0-1),
	libgettext8-dev,
	libiconv-dev,
	libxml2,
	openssl100-dev (>= 1.0.1f-1),
	pkgconfig,
	sqlite3-dev
<<
Conflicts: aria2c (<< 1.1.2-1)
Replaces: aria2c (<< 1.1.2-1)

SetCXXFLAGS: -Os
SetCFLAGS: -Os
SetLDFLAGS: -Wl,-dead_strip_dylibs
GCC: 4.0
UseMaxBuildJobs: true

ConfigureParams: <<
	--disable-dependency-tracking \
	--without-appletls \
	--without-gnutls \
	--without-libuv \
	--with-ca-bundle='%p/etc/ssl/certs/ca-bundle.crt' \
	--with-sqlite3 \
	--with-openssl \
	--with-libcares \
	--with-libxml2 \
	--with-libz \
	ZLIB_LIBS="-lz" ZLIB_CFLAGS=" "
<<

