SplitOff: <<
	Package: librarian.08-dev
	Depends: %N (= %v-%r), rarian (>= %v-%r)
	Conflicts: librarian.0-dev
	Replaces: librarian.0-dev
	BuildDependsOnly: true
	Files: <<
		include
		lib/librarian.{dylib,la}
		lib/librarian.08/librarian.{dylib,la}
		lib/pkgconfig
		share/help
