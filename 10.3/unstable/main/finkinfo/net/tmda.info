#!/bin/sh -ev
# fix shbang line in all executable files
find . -type f -perm 0755 -print | while read i
do
  sed '1,1s|/usr/bin/env python|%p/bin/python2.4|g' $i > $i.tmp && mv $i.tmp $i && chmod 0755 $i
done
<<
