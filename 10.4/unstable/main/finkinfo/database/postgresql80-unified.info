		mv %i/lib/$libname.dylib %i/lib/$libname.dylib-8.0
	done

	rm -rf %i/lib/libecpg.*.dylib
	rm -rf %i/lib/libecpg_compat.*.dylib
	rm -rf %i/lib/libpgtypes.*.dylib
	rm -rf %i/lib/libpq.*.dylib

