PatchFile: %n.patch
PatchFile-MD5: bf7156da596ada44be19058b0a15f095
PatchScript: <<
	%{default_script}
	rm INSTALL
	perl -pi -e 's,/usr,%p,' gperiodic.c
<<
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
CompileScript: <<
#!/bin/sh -ev

	export PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH"
	make bindir=%p/bin datadir=%p/share
<<
InstallScript: <<
#!/bin/sh -ev

	export PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH"
	make bindir=%i/bin datadir=%i/share install
<<
