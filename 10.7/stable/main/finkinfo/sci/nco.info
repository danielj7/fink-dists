PatchScript:  <<
#!/bin/sh -ev
	perl -pi -e 's|<malloc.h>|<stdlib.h>|' src/nco++/Invoke.cc \
	src/nco++/NcapVector.hh src/nco++/ncoGrammer.g src/nco++/ncoLexer.hpp \
