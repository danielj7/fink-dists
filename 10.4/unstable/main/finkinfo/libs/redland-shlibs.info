	Package: redland-dev
	Depends: <<
		%N (= %v-%r),
		pkgconfig (>= 0.23-1)
	<<
	BuildDependsOnly: true
	DocFiles: COPYING* LICENSE* README*
	Files: <<
		bin
		include
		lib/librdf.{a,la,dylib}
		lib/pkgconfig
		share/gtk-doc
		share/man
	<<
<<
