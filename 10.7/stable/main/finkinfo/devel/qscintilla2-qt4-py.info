# Make sure QScintilla2.api file goes in a python-versioned directory.
PatchScript: perl -pi -e 's|api/python|api/python%type_raw[python]|' Python/configure.py

UseMaxBuildJobs: true

CompileScript: <<
 #!/bin/sh -ev
 cd Python
 
 if [ "%type_pkg[qt]" = "-mac" ]; then
   sipdir=%p/share/sip-py%type_pkg[python]/pyqt4-mac
 else
   sipdir=%p/share/sip-py%type_pkg[python]/pyqt4
 fi
 
 export PYTHONPATH=%p/lib/qt4%type_pkg[qt]/lib/python%type_raw[python]/site-packages
 
 %p/bin/python%type_raw[python] configure.py --qmake=%p/lib/qt4%type_pkg[qt]/bin/qmake --sip=%p/bin/sip --pyqt-sipdir=$sipdir --destdir=%p/lib/qt4%type_pkg[qt]/lib/python%type_raw[python]/site-packages
 make
<<
InstallScript: <<
  #!/bin/sh -ev
  cd Python
  make install INSTALL_ROOT=%d
<<
