CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-helper.sh
	export CFLAGS="-I%p/lib/libspeex1/include -I%p/include -I$X11_INCLUDE_DIR"
	export LDFLAGS="-L%p/lib/libspeex1/lib -L%p/lib/libopenjpeg -L%p/lib -L$X11_LIBRARY_DIR -lX11 -lXext"
	mkdir finkbuild
	pushd finkbuild
		../configure %c
		make -w V=1
	popd
	%p/bin/fink-package-precedence --depfile-ext='\.d' .
<<
