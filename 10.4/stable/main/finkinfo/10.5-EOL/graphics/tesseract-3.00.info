SplitOff2: <<
	Package: lib%N3-dev
	Depends: lib%N3-shlibs (= %v-%r)
	Conflicts: <<
		tesseract-dev,
		lib%N3-dev,
		lib%N3-3.01-dev
	<<
	Replaces: <<
		tesseract-dev,
		lib%N3-dev,
		lib%N3-3.01-dev
	<<
	BuildDependsOnly: true
	Files: include lib
	DocFiles: AUTHORS COPYING ChangeLog NEWS README ReleaseNotes
<<

