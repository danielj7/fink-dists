	(%type_pkg[ui] = aqua) fltk13-aqua,
	arpack, glpk-dev, hdf5.7, readline5, libncurses5, fftw3 (>= 3.1.1-7), 
    libcurl4, libftgl2, qhull6-dev, qrupdate,
