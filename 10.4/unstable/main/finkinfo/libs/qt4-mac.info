#!/bin/sh -ev

	sh ./configure-for-fink.sh "%p" "%N" -verbose -make "libs tools docs"
	find src/3rdparty/webkit src/3rdparty/clucene tools/assistant -name Makefile\* -print0 | xargs -0 perl -pi -e 's,-I%p/include,-isystem %p/include,g'
