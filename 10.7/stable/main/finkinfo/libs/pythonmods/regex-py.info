InfoTest: <<
    TestScript: <<
        #!/bin/bash -ev
        export PYTHONPATH=`ls -d %b/build/lib*`
        
        let pyversion="%type_pkg[python]"
	    if [ $pyversion -ge 31 ]; then
	        testdir="Python3";
	    else
	        testdir="Python2";
	    fi
	    
	    # Currently one test failure in test_getattr with py33.
	    # Test is expecting 0x2082 but getting 0x100002082.
	    if [ $pyversion -eq 33 ]; then
	    	%p/bin/python%type_raw[python] $testdir/test_regex.py || exit 1
	    else
        	%p/bin/python%type_raw[python] $testdir/test_regex.py || exit 2
        fi
    <<
<<
        
