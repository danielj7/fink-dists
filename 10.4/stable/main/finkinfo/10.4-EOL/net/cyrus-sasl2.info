		export CC="gcc -m64"
	fi
	./configure %c --host=%m-apple-darwin`uname -r`
	make SASL_DB_LIB="-L%p/%lib -ldb-5.1" LIBTOOL=glibtool
<<
InstallScript: <<
mkdir -p %i/share/man/man8
