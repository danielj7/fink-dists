#!/bin/sh
  unset DISTCC_HOSTS
  unset CCACHE_PREFIX
  ./configure %c
  perl -pi -e 's,#define WITH_GNOME.*,#undef WITH_GNOME,g; s,#define WITH_GTK.*,#undef WITH_GTK,g;' src/config.h
  make
