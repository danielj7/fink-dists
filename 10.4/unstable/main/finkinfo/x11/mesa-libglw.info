Depends: x11, openmotif3-shlibs, %N-shlibs (= %v-%r)
BuildDepends: openmotif3, x11-dev
PatchScript: sed 's|@FINKPREFIX@|%p|g' <%a/%n.patch | patch -p1
CompileScript: <<
 #!/bin/sh -ev
 make OPT_FLAGS="-O3 -I%p/include" LIB_DIR=lib darwin
<<
