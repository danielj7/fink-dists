(%type_pkg[-ui] = -mac) wxcocoa294-shlibs (>= 2.9.4-1), 
(%type_pkg[-ui] = -gtk) wxgtk2.8-shlibs ( >= 2.8.4 ),
(%type_pkg[-ui] = -gtk) gtk+2-shlibs,
(%type_pkg[-ui] = -gtk) glib2-shlibs
<<
