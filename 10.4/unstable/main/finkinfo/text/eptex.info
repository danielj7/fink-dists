 sed -i.bak -e "s|=/opt/home-supp/|=`pwd`/|" \
            -e "s|=/tmp|=`pwd`|" \
            -e 's|--enable-makejvf --enable-pxdvik|--disable-pxdvik|' \
            -e 's|--enable-tetex --enable-texlive|%c|' \
            -e 's|--enable-dvipdfmx||' tl10/common.sh
 
