  mv ../default %i/share/mplayer/Skin/default
  chmod 775 %i/share/mplayer/Skin/default
  chmod 664 %i/share/mplayer/Skin/default/*
  mkdir -p %i/share/mplayer/font
  mv ../iso-8859-1/arial-14/* %i/share/mplayer/font
  chmod 664 %i/share/mplayer/font/*
