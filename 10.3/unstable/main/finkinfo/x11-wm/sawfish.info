BuildDepends: gdk-pixbuf, libjpeg, libpng3, libtiff, netpbm, audiofile, db42, glib2-dev (>= 2.2.1-4), gtk+2 (>= 2.2.1-7), gtk+2-dev (>= 2.2.1-7), orbit-dev, readline (>= 4.3-5), giflib | libungif, gdbm, control-center-dev (>= 1.4.0.5-6), gconf-dev, gnome-libs-dev, oaf-dev, guile-dev, librep-dev (>= 0.14-8), libxml2, popt, libglade, gnome-vfs-dev (>= 1.0.5-5) | gnome-vfs-ssl-dev (>= 1.0.5-7), imlib (>= 1.9.14-2), pkgconfig, gettext-dev, gettext-bin, esound, x11-dev
