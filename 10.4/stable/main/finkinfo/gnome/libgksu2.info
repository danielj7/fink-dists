CompileScript: <<
#!/bin/sh -ev

	export PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH"
	intltoolize --force
	autoreconf -fi
	./configure %c
	make
<<
InstallScript: <<
	make -j1 install DESTDIR=%d
	mv %i/lib/libgksu/gksu-run-helper %i/lib/libgksu/gksu-run-helper-2
	ln -s gksu-run-helper-2 %i/lib/libgksu/gksu-run-helper
<<

PostInstScript: <<
	. %p/bin/init.sh
	if [ configure = "$1" ]; then
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gksu.schemas >/dev/null
	fi
<<

