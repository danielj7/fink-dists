CompileScript: <<
#!/bin/sh -ev
	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4.12-buildenv.sh
	
	export CC="$CC -MD" CXX="$CXX -MD"
	mkdir -p build
	pushd build
	cmake \
		$KDE4_CMAKE_ARGS \
		-DR_EXECUTABLE=%p/Library/Frameworks/R.framework/Versions/3.0/Resources/bin/R \
		-DR_INCLUDE_DIR=%p/Library/Frameworks/R.framework/Versions/3.0/Resources/include \
		-DR_R_LIBRARY=%p/Library/Frameworks/R.framework/Versions/3.0/Resources/lib/libR.dylib \
		-DWITH_LibSpectre:BOOL=OFF \
		-DWITH_R:BOOL=OFF \
		-DBUNDLE_INSTALL_DIR=%p/Applications/KDE4 \
		-DWITH_PythonLibs:BOOL=OFF \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
	rm -rf %i/opt/kde4/%type_pkg[kde]/lib/libcantorlibs.dylib
	rm -rf %i/opt/kde4/%type_pkg[kde]/include
<<
PostInstScript: %p/opt/kde4/%type_pkg[kde]/bin/kde4-postinst.sh || :
Shlibs: <<
	!%p/opt/kde4/%type_pkg[kde]/lib/libcantorlibs.1.dylib
	!%p/opt/kde4/%type_pkg[kde]/lib/libcantor_config.dylib
<<
