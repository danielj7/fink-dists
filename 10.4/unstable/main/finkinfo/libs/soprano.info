CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[soprano]"
	. %p/sbin/kde4-buildenv.sh

	mkdir -p build
	pushd build
		cmake $KDE4_CMAKE_ARGS ..
		make VERBOSE=1
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make -j1 install DESTDIR="%d"
	popd

	install -d -m 755 %i/bin
	for bin in sopranocmd sopranod; do
		mv %i/lib/%type_pkg[soprano]/bin/$bin %i/bin/$bin-%type_pkg[soprano]
	done
<<
