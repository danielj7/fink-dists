+++ postgresql-7.4.3-new/pgsql.sh	2004-07-08 17:40:46.000000000 -0400
@@ -0,0 +1,21 @@
+#!/bin/sh
+
+for flag in "-n" "-d" "-s" "-u" "-v"; do
+	ulimit $flag 65536 >/dev/null 2>&1 || :
+done
+
+PREFIX="@INSTPREFIX@"
+DATADIR="${PREFIX}/var/postgresql-7.4/data"
+LOGFILE="${PREFIX}/var/postgresql-7.4/pgsql.log"
+
+case "$1" in
+	start)
+		sudo -u postgres "${PREFIX}/bin/pg_ctl-7.4" start -D "$DATADIR" -l "$LOGFILE"
+		;;
+	restart)
+		sudo -u postgres "${PREFIX}/bin/pg_ctl-7.4" restart -D "$DATADIR" -m fast
+		;;
+	stop)
+		sudo -u postgres "${PREFIX}/bin/pg_ctl-7.4" stop -D "$DATADIR" -m fast
+		;;
+esac
