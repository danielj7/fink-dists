PatchScript: <<
  perl -pi -e 's/-\$\(VERSION\)//g' makefile
<<
CompileScript: <<
  make prefix=%p READLINE=1
  make test
<<
InstallScript: <<
  make install prefix=%i mandir=%i/share/man
<<
