CompileScript: <<
#!/bin/sh -ex

  export lt_cv_sys_max_cmd_len=65536 CPPFLAGS="-I%p/lib/freetype219/include $CPPFLAGS" PKG_CONFIG_PATH="%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" PATH="%p/lib/freetype219/bin:$PATH"
  ./configure %c
  make
