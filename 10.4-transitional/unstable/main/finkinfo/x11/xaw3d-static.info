Package: xaw3d-static
Version: 1.5
Revision: 8
BuildDependsOnly: true
Source: ftp://ftp.x.org/contrib/widgets/Xaw3d/R6.3/Xaw3d-%v.tar.gz
Source-MD5: a77aa4ebe3be7964e4dbbc351e48277f
SourceDirectory: xc/lib/Xaw3d
BuildDepends: x11-dev, gcc3.3
Depends: x11
Conflicts: xaw3d
Replaces: xaw3d
Patch: %n.patch
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
CompileScript: <<
 xmkmf
 ln -s .. X11
 make USRLIBDIR=%p/lib INCDIR=%p/include SHLIBDIR=%p/lib EXTRA_DEFINES=-DNO_WIDEC_H CC=gcc-3.3 CXX=g++-3.3
<<
InstallScript: <<
 make install USRLIBDIR=%p/lib INCDIR=%p/include SHLIBDIR=%p/lib DESTDIR=%d
 mkdir -p %i/share/doc/%n
 rm -f %i/lib/libXaw3d.*.dylib %i/lib/libXaw3d.dylib
<<
