+++ struts/scripts/struts.csh	Sat Jan  5 18:46:09 2002
@@ -0,0 +1,8 @@
+#!/bin/csh
+set chemin = "@PREFIX@/share/java/struts/struts.jar"
+if ($?CLASSPATH) then
+	setenv CLASSPATH "${CLASSPATH}:$chemin"
+else
+	setenv CLASSPATH "$chemin"
+endif
+unset chemin
diff -uNrb struts-old/scripts/struts.sh struts/scripts/struts.sh
--- struts-old/scripts/struts.sh	Wed Dec 31 19:00:00 1969
+++ struts/scripts/struts.sh	Sat Jan  5 18:46:20 2002
@@ -0,0 +1,9 @@
