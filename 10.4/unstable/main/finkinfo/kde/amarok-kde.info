NoSetCPPFLAGS: true
NoSetLDFLAGS: true
ConfigureParams: --disable-mysql --disable-postgresql --without-nmm --without-mas --without-helix --without-libvisual --with-distribution='Fink/Mac OS X'
CompileScript: <<
#!/bin/sh -e

	export HOME=/tmp
	export PREFIX="%p"
	. ./environment-helper.sh
	export lt_cv_sys_max_cmd_len=65536

	export CC=gcc CXX=g++

	if [ "%type_raw[amarok]" = "-gstreamer-xine" ]; then
		# do nothing, we enable both
		:
	elif [ "%type_raw[amarok]" = "-gstreamer" ]; then
		# just gstreamer, no xine
		CONFIGURE_PARAMS="$CONFIGURE_PARAMS --without-xine"
	elif [ "%type_raw[amarok]" = "-xine" ]; then
		# just xine, no gstreamer
		CONFIGURE_PARAMS="$CONFIGURE_PARAMS --without-gstreamer"
	else
		# whoa, this shouldn't happen
		exit 1
	fi

	./build-helper.sh cvs       %{Ni} %v %r make -f admin/Makefile.common cvs
	./build-helper.sh configure %{Ni} %v %r ./configure %c $CONFIGURE_PARAMS
	./build-helper.sh make      %{Ni} %v %r make all all_libraries="$ALL_LIBRARIES"
<<

InstallScript: <<
#!/bin/sh -e

	export PREFIX="%p"
	. ./environment-helper.sh

	./build-helper.sh install %{Ni} %v %r make -j1 install DESTDIR=%d

	install -d -m 755 %i/share/config
	cat <<END >%i/share/config/amarokrc
[Gst-Engine]
Sound Output=esdsink
END
<<
