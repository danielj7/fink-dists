	atk1 (>= 1.20.0-1),
	cairo (>= 1.6-1),
	docbook-utils,
	expat1,
	fontconfig2-dev (>= 2.4.1-1),
	freetype219 (>= 2.3.5-1),
	glib2-dev (>= 2.14.0-1),
	glitz,
