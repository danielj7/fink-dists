Source: ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-%v.tar.bz2
Source-MD5: b013f798a1088afb07336bce5a9c24c5
Depends: %N-shlibs (= %v-%r)
BuildDepends: libgettext3-dev, libgpg-error, libiconv-dev, pth2-dev
BuildDependsOnly: True
Conflicts: %N-dev
