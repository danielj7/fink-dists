PatchScript: <<
  #!/bin/sh
  # Fix versioning 
  for file in `/usr/bin/find . -name "Makefile.in" -print` ; do
    /usr/bin/sed "s/-@VERSION@.la/.la/g" $file > tmp
    /usr/bin/sed "s/-rpath/-version-info 2:0 -rpath/g" tmp > $file
  done
  # Fix for no longer existing psfig.sty
  /usr/bin/sed "s/input{psfig.sty}/usepackage{epsfig}/g" GenericFunctions/doc/genericFunctions.tex > tmp
  /bin/mv -f tmp GenericFunctions/doc/genericFunctions.tex
<<
CompileScript: <<
  ./configure %c --cache-file=%b/config.cache
  make
  # create documentation
  make docs
<<
InstallScript: <<
  make install prefix=%i
  make install-docs prefix=%i/share/doc/clhep
  /bin/mv %i/share/doc/clhep/doc/* %i/share/doc/clhep
  /bin/rmdir %i/share/doc/clhep/doc
  cp %b/README %i/share/doc/clhep
  cp %b/ChangeLog %i/share/doc/clhep
<<
