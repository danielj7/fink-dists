InstallScript: <<
#!/bin/sh -ex

	install -d -m 755 %i/share/doc/%n
	mv dist/docs/api/* %i/share/doc/%n/
	mv dist/examples %i/share/doc/%n/

	find %i/share/doc/%n -type d -exec chmod 755 {} \;
	find %i/share/doc/%n -type f -exec chmod 644 {} \;
