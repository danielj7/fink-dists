PATH_GTK_H =  -I/sw/include/gtk-2.0 -I/sw/lib/gtk-2.0/include
PATH_MESA_H = -I/usr/include
PATH_GTKGL_H = -I/sw/lib/gtkglext-1.0/include -I/sw/include/gtkglext-1.0

PATH_EXPAT_L = -L/sw/lib
PATH_FREETYPE_L = -L/sw/lib/freetype219/lib
PATH_X_L = -L/usr/X11R6/lib
