Package: libvpx
Version: 0.9.0
Revision: 1
Distribution: 10.4
Description: WebM VP8 Codec SDK
DescPackaging: <<
	Only contains headers and static library. Doesn't make shared libs.
<<
License: BSD
Homepage: http://www.webmproject.org/
Maintainer: Daniel Johnson <daniel@daniel-johnson.org>

Source: http://webm.googlecode.com/files/%n-%v.tar.bz2
Source-MD5: 9eb8e818d2f3263623c258fe66924082

BuildDepends: (%m != powerpc) yasm, system-sdk-10.4-universal
BuildDependsOnly: true

NoSetCPPFLAGS: true
NoSetLDFLAGS: true

CompileScript: <<
	#!/bin/bash -ev
	if [ "%m" = "powerpc" ]; then
		./configure --target=ppc32-darwin8-gcc
	else
		./configure --target=x86-darwin8-gcc
	fi
	make
<<

InstallScript: <<
	make install DIST_DIR=%i
	rm -rf %i/build %i/src %i/md5sums.txt
<<

DocFiles: AUTHORS CHANGELOG LICENSE README

SplitOff: <<
	Package: %N-bin
	Files: bin
	
	DocFiles: AUTHORS CHANGELOG LICENSE README
<<
