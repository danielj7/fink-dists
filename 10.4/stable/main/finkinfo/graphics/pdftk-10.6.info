PatchScript: <<
 sed 's|@PREFIX@/bin/|%p/bin/|g' < %{PatchFile} | patch -p1
 perl -pi -e 's/private static Class c1= gnu.java.locale.Calendar.class;/private static Class c1= java.util.Calendar.class;/' java_libs/com/lowagie/text/pdf/PdfDate.java
