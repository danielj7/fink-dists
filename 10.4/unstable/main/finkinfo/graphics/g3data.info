PatchScript: perl -pi -e 's,/usr,\$(PREFIX),g' Makefile
CompileScript: <<
  make PREFIX="%p" PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
<<
InstallScript: <<
	install -d -m 755 %i/bin %i/share/man/man1
	make -j1 install PREFIX=%i
<<
