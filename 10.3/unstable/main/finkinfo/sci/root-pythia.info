Package: root-pythia
Version: 2
Revision: 11
Description: Interface libraries Pythia - ROOT
Depends:  %n-shlibs (=%v-%r)
BuildDepends: g77, cernlib-mclibs | cernlib2002-mclibs
Conflicts: root3-cernlib (<<3.10.02-13), root4-cernlib (=4.00.01-11)
Replaces: root3-cernlib (<<3.10.02-13), root4-cernlib (=4.00.01-11)
Source: ftp://root.cern.ch/root/pythia/pythia5.tar.gz
SourceRename: pythia5_%v.tar.gz
Source-MD5: 8d0131039478072922fd5b7d8e752d5e
NoSourceDirectory: true
Source2: ftp://root.cern.ch/root/pythia6.tar.gz
Source2Rename: pythia6_%v.tar.gz
Source2-MD5: 4f2b5d867e7e760be90ed02285d86080
#Source2ExtractDir: pythia6
GCC: 3.3
CompileScript: <<
  #!/bin/sh -ev
  mkdir lib
  g77 -c jetset74.f
  g77 -c pythia5707.f
  g77 -dynamiclib -single_module -install_name %p/lib/root/libPythia.5.70.dylib -o lib/libPythia.5.70.dylib  *.o -compatibility_version 5 -current_version 5.70.7 -L%p/lib -lpythia
  g77 -Wall -bundle -o lib/libPythia.so *.o -L%p/lib -lpythia
  cd pythia6
  g77 -c pythia*.f
  g77 -c -fno-second-underscore tpythia6_called_from_cc.F
  echo 'void MAIN__() {}' >main.c
  gcc -c -fPIC main.c
  gcc -c pythia6_common_address.c
  g77 -dynamiclib -single_module -install_name %p/lib/root/libPythia6.6.dylib -o ../lib/libPythia6.6.3.dylib  *.o -compatibility_version 6 -current_version 6.3 -L%p/lib -lpythia
  g77 -Wall -bundle -o ../lib/libPythia6.so *.o -L%p/lib -lpythia
<<
InstallScript: <<
  install -m 755 -d %i/lib/root
  install -m 644 lib/libPythia*.so %i/lib/root
  ln -s libPythia.5.dylib %i/lib/root/libPythia.dylib
  ln -s libPythia6.6.dylib %i/lib/root/libPythia6.dylib
<<
