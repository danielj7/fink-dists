	/usr/bin/sed -i.bak -e s/HAVE_APPLE_OPENGL_FRAMEWORK/HAVE_OPENGL_GL_H/g src/*
	### Fink's glpng.h is in GL/glpng.h, nog glpng/glpng.h
	/usr/bin/perl -pi -e 's,glpng\/glpng\.h,GL/glpng\.h,g' src/Image.cpp src/MainGL.cpp
<<
