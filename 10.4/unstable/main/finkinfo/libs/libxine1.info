#!/bin/sh -e

	export PATH="%p/lib/freetype219/bin:$PATH"
	export PKG_CONFIG_PATH="%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH"
	if [ "%m" = "i386" ]; then
		export CPPFLAGS="$CPPFLAGS -UHAVE_MMX -UHAVE_MMX2"
	fi
	./configure %c

	if [ "%m" = "i386" ]; then
		perl -pi -e 's,ARCH_PPC,ARCH_X86,; s,\#define ENABLE_ALTIVEC,,; s,FPM_PPC,FPM_INTEL,' config.h
		cat <<<"#define  HAVE_DARWIN_CDROM 1" >> config.h
	fi

	make OBJC=gcc
<<
