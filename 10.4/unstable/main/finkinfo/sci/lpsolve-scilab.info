  ln -s ../%n %i/share/doc/lpsolve%type_raw[maj]-shlibs
  cp -pPR liblpmex.so %i/lib/scilab-%type_raw[scilab]/contrib
  cp -pPR macros %i/share/%N
  cp -pPR man %i/share/%N/help
  cp -p {ex,lpd}*.sce %i/share/doc/%N/examples
