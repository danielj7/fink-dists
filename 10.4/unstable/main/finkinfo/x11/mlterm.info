PatchScript: <<
#!/bin/sh -ex
patch -p1 < %a/%n.patch
for dir in . mkf kiklib; do (
    cd $dir
    %p/bin/libtoolize --force
    rm -f aclocal.m4
    %p/bin/aclocal
    %p/bin/autoconf
    ) || exit $?
done
for mk in `find . -name Makefile.in -or -name Makefile.in.in`; do
    echo 'datarootdir=@datarootdir@' >> $mk
done
<<
