CompileScript: <<
	#!/bin/sh -ex
	
	export ac_cv_path_PYTHON=%p/bin/python2.7
	export PERL5LIB="%p/share/gtk-doc/data:$PERL5LIB"
	autoreconf -fi
	./configure %c
	perl -pi -e 's,-Os -funroll-loops,-O,' gst/audioconvert/Makefile
	make
	fink-package-precedence --prohibit-bdep=%n-dev .
