ConfigureParams: <<
    --target=msp430                      \
    --prefix=%p/lib/msp430               \
    --bindir=%p/bin                      \
    --mandir=%p/share/man                \
    --infodir=%p/share/info              \
    --with-gmp=%p                        \
    --program-prefix=msp430-             \
    --enable-languages=c,c++             \
    --disable-nls
<<

CompileScript: <<
    #!/bin/bash -ev
    cd ..
    mkdir build
    cd build
    pwd
    ../gcc-4.5.3/configure %c
    num_cpu=$(echo `sysctl -n hw.ncpu`)
    make -j $num_cpu
<<

InstallScript: <<
    #!/bin/bash -ev
    cd ../build
    make install DESTDIR=%d
    
    # no libiberty
    rm -f  %i/lib/msp430/lib/libiberty.a
    
    # provided by fink's gcc
    rm -f  %i/share/info/*
    rm -fr  %i/share/man/man7
<<

