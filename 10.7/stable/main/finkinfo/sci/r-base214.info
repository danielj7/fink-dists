  #!/bin/sh -efv
  
  export F77=%p/bin/gfortran-fsf-4.8
  export FC=%p/bin/gfortran-fsf-4.8

  perl -pi -e "s|vecLib|Accelerate|g" src/modules/lapack/vecLibg95c.c
  
