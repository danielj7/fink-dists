	%{default_script}
	perl -pi -e 's/return res/return std::move(res)/' src/bookmarkdb.cc
	perl -pi -e "s/(#include)/#include <functional>\n\1/" src/dmcacheentrynwc.hh
	perl -pi -e 's/(\( const pathjump_entry &rhs \))/\1 const/' src/pathjumpui.hh
