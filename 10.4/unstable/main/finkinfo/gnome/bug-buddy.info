ConfigureParams: --libexecdir=%p/lib/%n --mandir=%p/share/man --disable-schemas-install --disable-scrollkeeper --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH" --disable-eds
InstallScript: make install DESTDIR=%d
PostInstScript: <<
	. %p/bin/init.sh
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/bug-buddy.schemas >/dev/null
	fi
	gtk-update-icon-cache -f -t %p/share/icons/hicolor || :
	gtk-update-icon-cache -f -t %p/share/icons/HighContrastLargePrint || :
<<
PostRmScript: <<
	. %p/bin/init.sh
	if [ upgrade != "$1" ]; then
		scrollkeeper-update
	fi
	gtk-update-icon-cache -f -t %p/share/icons/hicolor || :
	gtk-update-icon-cache -f -t %p/share/icons/HighContrastLargePrint || :
