Depends: python24, celementtree-py24 | elementtree-py24
Recommends: paramiko-py24
PatchScript: <<
#!/bin/sh
sed -i.bak -e's|import os, sys|&\
sys.path.append('\''%p/lib/%n'\'')|' bzr
<<
CompileScript: <<
  python bzr-man.py
<<
InstallScript: <<
  python2.4 setup.py install --prefix %p --root %d --install-lib %p/lib/%n
  mkdir -p %i/share/man/man1
  cp bzr.1 %i/share/man/man1
  mkdir -p %i/share/doc/%n
  ln -s %p/share/doc/fink/COPYING %i/share/doc/%n
<<
