+
+sub recruft_balanced {
+    my $self = shift;
+    my($orig_match, $cruft, $open, $close) = @_;
+
+    my $open_count  = () = $$orig_match =~ m{\Q$open}g;
+    my $close_count = () = $$orig_match =~ m{\Q$close}g;
+
+    if ( $$cruft =~ /\Q$close\E$/ && $open_count == ( $close_count + 1 ) ) {
+        $$orig_match .= $close;
+        $$cruft =~ s/\Q$close\E$//;
+    }
+
+    return;
+}
