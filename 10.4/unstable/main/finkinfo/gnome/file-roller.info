ConfigureParams: --libexecdir=%p/lib/%n --mandir=%p/share/man --disable-scrollkeeper --enable-nautilus-actions --disable-schemas-install --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
InstallScript: make install DESTDIR=%d
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/file-roller.schemas >/dev/null
		gtk-update-icon-cache -f -t %p/share/icons/hicolor
	fi
	[ -x %p/bin/update-desktop-database ] && update-desktop-database -q %p/share/applications || :
<<
PostRmScript: <<
	if [ upgrade != "$1" ]; then
		scrollkeeper-update
	fi
	[ -x %p/bin/update-desktop-database ] && update-desktop-database -q %p/share/applications || :
<<
