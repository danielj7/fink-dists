Package: poppler2-qt3
# NOTE: Must keep %v in sync among all poppler2* packages!
Version: 0.6.4
Revision: 2
Description: PDF rendering library (Qt Interface)
License: GPL
Maintainer: Benjamin Reed <poppler2-qt3@fink.racoonfink.com>

Depends: %N-shlibs (>= %v-%r)
BuildDepends: <<
	fink (>= 0.28.0-1),
	fink-package-precedence,
	fontconfig2-dev (>= 2.10.0-1),
	freetype219 (>= 2.4.11-1),
	libjpeg8,
	pkgconfig (>= 0.23),
	poppler2 (>= %v-1),
	qt3 (>= 3.3.8-1021),
	x11-dev
<<
Conflicts: poppler-qt3
Replaces: poppler-qt3
BuildDependsOnly: True
GCC: 4.0

Source: http://poppler.freedesktop.org/poppler-%v.tar.gz
Source-MD5: 13d12ca4e349574cfbbcf4a9b2b3ae52
PatchFile: %n.patch
PatchFile-MD5: 930cc8ea85e105834dd9f14d67d7c92e
PatchScript: <<
	%{default_script}
	perl -pi -e 's,libqt-mt.so,libqt-mt.dylib,g' configure
<<

SetLDFLAGS: -Wl,-dylib_file,/System/Library/Frameworks/OpenGL.framework/Versions/A/Libraries/libGL.dylib:/System/Library/Frameworks/OpenGL.framework/Versions/A/Libraries/libGL.dylib
ConfigureParams: <<
	--mandir=%p/share/man \
	SYSTEM_XPDFRC=%p/etc/xpdfrc.poppler2 \
	--enable-dependency-tracking \
	--enable-zlib \
	--disable-poppler-glib \
	--disable-poppler-qt4
<<
CompileScript: <<
#!/bin/sh -ev

	unset QTDIR
	export QTINC=%p/lib/qt3/include
	export QTLIB=%p/lib/qt3/lib
	export jpeg_incdir="%p/include"
	./configure %c
	pushd qt
	make
	popd
	make poppler-qt.pc
	fink-package-precedence --prohibit-bdep=%n .
<<

InstallScript: <<
#!/bin/sh -ev

	pushd qt
	make -j1 install DESTDIR=%d
	popd
	install -d -m 755 %i/lib/pkgconfig
	install -c -m 644 poppler-qt.pc %i/lib/pkgconfig/
<<
