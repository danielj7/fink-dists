#!/bin/sh -ev
# additional patching of configure: to fix validation-failure on .la files
# patch could also apply to configure.ac
mv configure configure.bkp1
sed -e '/LIBS=/s|-framework |-Wl,-framework,|g' \
	-e '/eval.*TCL_LIB_SPEC=/a\
