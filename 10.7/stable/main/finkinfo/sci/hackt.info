  libtool2-shlibs (>= 2.2.6b-1),
  readline6-shlibs,
  guile18-shlibs
<<
PatchFile: %n.patch
PatchFile-MD5: 7da16f59f2031e37025a0996509b3c15
PatchScript: test -f %{PatchFile}
ConfigureParams: <<
  --prefix=%p \
  YACC=/usr/bin/yacc \
  LEX=%p/bin/flex \
  --disable-static \
  --with-ltdl-include=%p/include \
  --with-ltdl-lib=%p/lib \
  --with-readline=%p \
  --with-guile-config=guile-1.8-config \
  --with-guile=guile-1.8 \
  -C
<<
#  --docdir=%p/share/doc/%n (only if bootstrapped with automake-1.10+)
GCC: 4.0
SetCFLAGS: -g -O2 -Qunused-arguments
SetCXXFLAGS: -g -O2 -Wno-error=sign-conversion -Wno-error=unused-function -Wno-error=conversion -Qunused-arguments
CompileScript: <<
#!/bin/sh -ev
mkdir darwin-build
cd darwin-build
# guile18-build
# workaround for linker issue with darwin10
if { echo `uname -r` | grep -r "^10" ;} ; then
  ldcfg="LDFLAGS=-Wl,-no_compact_linkedit"
fi
../configure %c $ldcfg
# workaround buggy libtool/configure test?
patch -p0 < %{PatchFile}
make
<<
InfoTest: <<
	TestScript: <<
	#!/bin/sh -ev
	cd darwin-build
	{ make -k check 2>&1 || exit 2 ;} | tee check.log
	<<
	TestSuiteSize: large
<<
InstallScript: <<
	#!/bin/sh -ev
	cd darwin-build
	make DESTDIR=%d install
	rm -rf %i/bin/private
	echo renaming some files to avoid case-conflict...
	pushd %d/%p/share/hackt/doc/html
	list=`grep -lr "option_002dL\.html" .`
	for f in $list ; do
		sed '/option_002/s|option_002dL\.html|option_002dL-upper.html|g' $f > $f.patched
		mv $f.patched $f
	done
	list=`find . -name option_002dL.html`
	for f in $list ; do
		mv $f `basename $f .html`-upper.html
	done
	popd
<<
