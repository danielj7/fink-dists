 cat >%i/etc/profile.d/%n.sh <<EOF
alias setup_modulef='\
 export MR=%p/share/%n;\
 source \$MR/darwin/env_sh;\
 prepend_path PATH \$MdPATH\
 '
EOF
 cat >%i/etc/profile.d/%n.csh <<EOF
alias setup_modulef '\
 setenv MR %p/share/%n;\
 source \$MR/darwin/env_csh;\
 set path=(\$Mdpath \$path)\
 '
EOF
 chmod 755 %i/etc/profile.d/modulef.* 
<<
