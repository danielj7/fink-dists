InstallScript: <<
 #!/bin/sh -ev
 make install-all prefix=%i
 cd %i/bin
 cp GMT GMT.orig
 sed 's|%b|%p|g' < GMT.orig > GMT
 /bin/rm -f GMT.orig
 cd %i/lib
 mv libpsl{,.4}.dylib
 mv libgmt{,.4}.dylib
 mv libgmtps{,.4}.dylib
 ln -s libpsl{.4,}.dylib
 ln -s libgmt{.4,}.dylib
 ln -s libgmtps{.4,}.dylib
 ranlib *.a
<<
