Package: octave-forge
Version: 2004.11.16
Revision: 1s1
Maintainer: Corey Halpin <chalpin@cs.wisc.edu>
BuildDepends: texinfo, g77, libjpeg, fftw3, hdf5, readline, textutils, libpng3
Depends: octave (>= 2.1.53-1), x11, libjpeg-shlibs, fftw3-shlibs, hdf5-shlibs, qhull, libpng3-shlibs
Source: mirror:sourceforge:octave/%n-%v.tar.gz
Source-MD5: a8e52c27159a110a26ab57c10d3883b0
UpdateConfigGuess: true
SetCPPFLAGS: -no-cpp-precomp 
SetLIBRARY_PATH: %p/lib
Patch: %n.patch
ConfigureParams: --infodir='${prefix}/share/info' --mandir='${prefix}/share/man'
CompileScript: <<
./configure %c
make SH_LDFLAGS="`mkoctfile -p SH_LDFLAGS` -lhdf5"
<<
InstallScript: <<
 make install prefix=%i \
   MPATH=%d`%p/bin/octave-config --m-site-dir`/octave-forge \
   OPATH=%d`%p/bin/octave-config --oct-site-dir`/octave-forge \
   XPATH=%d`%p/bin/octave-config --oct-site-dir | sed 's|oct\/|exec\/|'` \
   ALTMPATH=%d`%p/bin/octave-config --m-site-dir`/octave-forge-alternatives \
   ALTOPATH=%d`%p/bin/octave-config --oct-site-dir`/octave-forge-alternatives \
   mandir=%i/share/man
<<
