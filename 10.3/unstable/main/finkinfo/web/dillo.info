 bzip2 -dc ../%n-%v-i18n-misc-20060709.diff.bz2 | patch -p1 -Z
 sed -i.bak 's|\($(dillo_LDADD)\)|\1 $(LIBSSL_LIBS)|' src/Makefile.in
