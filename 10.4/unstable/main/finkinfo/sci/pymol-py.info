PreRmScript: <<
if [ $1 != "upgrade" ]; then
  update-alternatives --remove pymol %p/lib/pymol-py%type_pkg[python]/bin/pymol
fi
PACKAGE=%N
dpkg --listfiles $PACKAGE |
        /usr/bin/awk '$0~/\.py$/ {print $0"c\n" $0"o"}' |
        xargs rm -f >&2
<<
