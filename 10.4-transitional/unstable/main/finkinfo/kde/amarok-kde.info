CompileScript: <<
#!/bin/sh -e

  export HOME=/tmp
  export PREFIX="%p"
  . ./environment-helper.sh
  export lt_cv_sys_max_cmd_len=65536

  export CC=gcc-3.3 CXX=g++-3.3

  if [ "%type_raw[-gstreamer]" = "-gstreamer" ] && [ "%type_raw[-xine]" = "-xine" ]; then
    # do nothing, we enable both
    :
  elif [ "%type_raw[-gstreamer]" = "-gstreamer" ]; then
    # just gstreamer, no xine
    CONFIGURE_ARGS="--without-xine"
  elif [ "%type_raw[-xine]" = "-xine" ]; then
    # just xine, no gstreamer
    CONFIGURE_ARGS="--without-gstreamer"
  else
    echo "whoa, something went seriously wrong here"
    exit 1
  fi

  ./build-helper.sh cvs       %{Ni} %v %r make -f admin/Makefile.common cvs
  ./build-helper.sh configure %{Ni} %v %r ./configure %c $CONFIGURE_ARGS
  ./build-helper.sh make      %{Ni} %v %r make all all_libraries="$ALL_LIBRARIES"
<<

InstallScript: <<
#!/bin/sh -e

  export PREFIX="%p"
  . ./environment-helper.sh

  ./build-helper.sh install %{Ni} %v %r make -j1 install DESTDIR=%d

  install -d -m 755 %i/share/config
  cat <<END >%i/share/config/amarokrc
[Gst-Engine]
Sound Output=esdsink
END
<<

