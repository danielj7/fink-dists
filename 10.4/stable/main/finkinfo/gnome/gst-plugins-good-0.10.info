ConfigureParams: --without-check --libexecdir=%p/lib/%n --mandir=%p/share/man --enable-gtk-doc --disable-dependency-tracking --enable-tests --enable-failing-tests --disable-schemas-install PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
CompileScript: <<
#!/bin/sh -ex

	export ac_cv_path_PYTHON=%p/bin/python2.5
	./configure %c
	make
<<

InstallScript: <<
#!/bin/sh -ex
	make install DESTDIR=%d
<<
