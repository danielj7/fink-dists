# Dependencies:
Depends: apr-shlibs (>=0.9.2-1), db4-shlibs, gdbm-shlibs (>= 1.8.0-6), expat-shlibs (>= 1.95.3-1), libxml2-shlibs, neon23-shlibs (>= 0.23.6-2) | neon23-ssl-shlibs (>= 0.23.6-2), swig (>= 1.3.16)
