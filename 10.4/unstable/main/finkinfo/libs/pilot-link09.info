ConfigureParams: <<
--enable-conduits \
--without-perl \
--with-pic \
--with-readline \
--enable-shared \
--enable-static \
--without-java \
--without-python \
--with-libiconv=%p \
--with-libpng=%p \
--disable-debug \
--disable-dependency-tracking \
--without-included-popt \
--mandir=%p/share/man 
<<
CompileScript: <<
#!/bin/sh -ev
export PKGCONFIG=%p/bin/pkg-config
  ./configure %c
  make
<<
InstallScript: <<
#!/bin/sh -ev
make -j1 install DESTDIR=%d
install -d %i/share/man
install -d %i/share/man/man1
install -d %I/share/man/man7
pushd %b/doc/man 
install *.1 %i/share/man/man1
install *.7 %i/share/man/man7
<<
