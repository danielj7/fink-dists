	perl -pi -e 's|/usr/X11|/opt/x11|g' configure
	perl -pi -e 's/(-framework)\s+(\S+)/-Wl,\1,\2/g' app/Makefile.in
	perl -pi -e 's/-WC//' plugins/process/Makefile.in
	perl -pi -e 's/<png.h>/<png.h>\n#include <zlib.h>/' modules/file/pixmap.c
