	Package: hwloc-dev
	Depends: hwloc-shlibs (= %v-%r)
	BuildDependsOnly: true
	DocFiles: AUTHORS COPYING NEWS README
	Files: <<
		include
		lib/libhwloc.{dylib,la}
		lib/pkgconfig
		share/man/man3
	<<
<<
SplitOff2: <<
	Package: hwloc-shlibs
	Depends: libxml2-shlibs (>= 2.9.1-1)
	DocFiles: AUTHORS COPYING NEWS README
	Files: <<
		lib/libhwloc.*.dylib
	<<
	Shlibs: <<
		%p/lib/libhwloc.5.dylib 13.0.0 %n (>= 1.11.3-1)
	<<
<<
