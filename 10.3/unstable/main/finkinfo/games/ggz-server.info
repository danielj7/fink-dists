Package: ggz-server
Version: 0.0.7
Revision: 21
Description: GGZ Gaming Zone server
License: LGPL
Maintainer: Dave Vasilevsky <vasi@users.sourceforge.net>

BuildDepends: %n-dev (= %v-%r), popt, expat, libggz, db3, gettext-dev, gettext-bin, libiconv-dev
Depends: %N-shlibs (= %v-%r), db3-shlibs, popt-shlibs, expat-shlibs, libiconv, gettext
#Recommends: OTHER GGZ

GCC: 3.3

Source: mirror:sourceforge:ggz/%n-%v.tar.gz
Source-MD5: 76d275df0472f514398a660d43b3d374

Patch: %n.patch

ConfigureParams: --mandir=%p/share/man --with-database=db3
SetCPPFLAGS: -DDB3_IN_DIR
InstallScript: make install DESTDIR=%d

DocFiles: AUTHORS COPYING INSTALL NEWS README README.GGZ

Homepage: http://ggz.sourceforge.net
DescDetail: <<
  This is the software for setting up and managing a GGZ server
  installation, including the server game modules.  Note that if you
  only want to play games on an existing server, you do not need to
  install this.
<<

SplitOff: <<
	Package: %N-shlibs
	Depends: libggz-shlibs
	Files: lib/*.*.dylib
	Shlibs: <<
		%p/lib/libggzdmod.2.dylib		3.0.0	%n (>= 0.0.7-1)
	<<
	DocFiles: AUTHORS COPYING INSTALL NEWS README README.GGZ
<<
SplitOff2: <<
	Package: %N-dev
	BuildDependsOnly: true
	Depends: %N-shlibs (= %v-%r)
	Files: lib/*[!.][!.][!.].[adl]* include share/man/man3
	DocFiles: AUTHORS COPYING INSTALL NEWS README README.GGZ
<<
