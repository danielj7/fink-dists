	cp -p evolvotron_match/evolvotron_match %i/bin/
	cp -p evolvotron_mutate/evolvotron_mutate %i/bin/
	cp -p evolvotron_render/evolvotron_render %i/bin/
	cp -p man/man1/* %i/share/man/man1/
<<
