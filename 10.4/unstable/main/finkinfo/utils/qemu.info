ConfigureParams: <<
(%m = i386) --cpu=%m  \
--disable-darwin-user \
--disable-bsd-user
<<

PatchScript: <<
#!/bin/sh -ev
# patch configure for 32 bit build on x86_64
if [ "%m" = "i386" ]; then
  sed -i.bak 's|-m64|-m32|g'               configure
  sed -i.bak 's|-arch x86_64|-arch i386|g' configure
fi
<<

CompileScript: <<
#!/bin/sh -ev
  mkdir build
  cd build
  ../configure %c
  make
<<

InstallScript: <<
#!/bin/sh -ev
  cd build
  make install prefix=%i    \
   sharedir=%i/share/qemu   \
   datadir=%i/share/qemu    \
   mandir=%i/share/man      \
   docdir=%i/share/doc/qemu \
   bindir=%i/bin
<<

