PatchScript: <<
 #! /bin/sh -ev
 if [ "%type_raw[-mysql]" == "-mysql" ]; then
   sed 's|@PREFIX@|%p|g' <%a/pvpgn.patch | patch src/configure
 fi
<<
CompileScript: << 
 #! /bin/sh -ev
 cd src
 if [ "%type_raw[-mysql]" == "-mysql" ]; then
   ./configure %c --with-mysql
 else
   ./configure %c
 fi
 make
 <<
InstallScript: <<
 #! /bin/sh -ev
 cd src
 mv Makefile Makefile.old
 sed -e "s|%p|%i|" < Makefile.old > Makefile
 make install
