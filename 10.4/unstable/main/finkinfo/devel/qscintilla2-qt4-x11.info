Depends: %N-shlibs (>= %v-%r)
BuildDepends: freetype219, glib2-dev, libgettext3-dev, libiconv-dev, libpng3, qt4-x11
BuildDependsOnly: true
CompileScript: <<
 #!/bin/sh -ev
 cd Qt4
 %p/lib/qt4-x11/bin/qmake qscintilla.pro
 perl -pi -e 's|install_name\t|install_name\t%p\/lib\/qt4-x11\/lib\/|' Makefile
 make
<<
InstallScript: <<
  #!/bin/sh -ev
  cd Qt4
  INSTALL_ROOT=%d make install
  <<
