Package: javacc
Version: 4.1
Revision: 1
Type: java(1.5)
BuildDepends: ant-base (>= 1.6.5-1), ant-junit (>= 1.6.5-1), fink (>= 0.22.2-1), system-java-dev (>= 1.5-1)
Depends: system-java (>= 1.5-1)
Source: https://%n.dev.java.net/files/documents/17/108015/%n-%vsrc.tar.gz
Source-MD5: 84ed7416d71e4a9e156d16218dfa2b3e
SourceDirectory: %n
CompileScript: ant -Djavacc.root=`pwd` binary-distribution
JarFiles: dist/%n-%v/bin/lib/*.jar
InstallScript: <<
#!/bin/sh -ex

  install -d -m 755 %i/bin

  for class in javacc jjdoc jjtree; do
    cat <<END >%i/bin/$class
#!/bin/sh

source %p/bin/init.sh
/Library/Java/Home/bin/java $class "\$@"
END
  done

  chmod 755 %i/bin/*
  install -d -m 755 %i/share/doc/%n
  mv dist/%n-%v/doc/* %i/share/doc/%n/
  mv dist/%n-%v/examples %i/share/doc/%n/

<<
DocFiles: LICENSE README
