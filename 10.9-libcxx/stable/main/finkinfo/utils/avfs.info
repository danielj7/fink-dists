Package: avfs
Version: 1.0.1
Revision: 3
Maintainer: Jack Fink <jackfink@users.sourceforge.net>
Depends: <<
	%n-shlibs (>= %v-%r),
	fuse4x-shlibs,
	libiconv,
	liblzma5-shlibs
<<
BuildDepends: <<
	fink-package-precedence,
	fuse4x-dev,
	libiconv-dev,
	liblzma5
<<
Source: http://www.boomerangsworld.de/cms/worker/downloads/%n-%v.tar.bz2
Source-MD5: f0f254d092e54da14bbf3ea22b76da99
ConfigureParams: <<
	--enable-library \
	--disable-static \
	--enable-fuse \
	--with-ssl=/usr \
	--with-expat=%p \
	--with-included-neon
<<
SetCFLAGS: -I%p/include
SetCPPFLAGS: -Os
SetLDFLAGS: -L%p/lib
CompileScript: <<
	%{default_script}
	fink-package-precedence .
<<
InstallScript: make install DESTDIR=%d && mv %i/bin/avfsd %i/sbin/
DocFiles: AUTHORS ChangeLog COPYING NEWS README TODO
Description: Virtual filesystem
Homepage: http://www.boomerangsworld.de/cms/avfs/index?lang=en
License: GPL/LGPL
SplitOff: <<
	Package: %N-shlibs
	Depends: <<
		fuse4x-shlibs,
		liblzma5-shlibs
	<<
	Description: Virtual filesystem, shared libs
	Files: <<
		lib/avfs
		lib/libavfs.0*dylib
	<<
	Shlibs: <<
		%p/lib/libavfs.0.dylib 1.0.0 %n (>= 0.9.8-6)
	<<
	DocFiles: COPYING.LIB
<<
Splitoff2: <<
	Package: %N-dev
	Description: Virtual filesystem, development files
	Depends: %N-shlibs (= %v-%r)
	BuildDependsOnly: True
	Files: <<
		bin/avfs-config
		lib/libavfs.dylib
		lib/*.la
		include
	<<
	DocFiles: COPYING
<<

