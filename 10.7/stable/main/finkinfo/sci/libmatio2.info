Package: libmatio2
Version: 1.5.0
Revision: 2
BuildDependsOnly: true
Depends: <<
	%N-shlibs (= %v-%r),
	hdf5.7-shlibs
<<
BuildDepends: <<
	fink-package-precedence,
	hdf5.7
<<
Source: mirror:sourceforge:matio/matio-%v.tar.bz2
Source-MD5: 3826e1c696fc947ab75973b7a2f3d71f
Conflicts: libmatio, libmatio2
Replaces: libmatio, libmatio2
SetCFLAGS: -MD
ConfigureParams: --mandir=%p/share/man --with-hdf5=%p --enable-shared --disable-static
CompileScript: <<
	%{default_script}
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libmatio,libmatio2 .
<<
InfoTest: <<
	TestScript: make check || exit 2
<<
InstallScript: make install DESTDIR=%d
DocFiles: COPYING NEWS README
Splitoff: <<
	Package: %N-shlibs
