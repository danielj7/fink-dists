CompileScript: <<
#!/bin/sh -ev

# compile the crosscompiler for PowerPC-Macs
  make all PP=ppc386 OS_TARGET=darwin CPU_TARGET=powerpc
<<

InstallScript: <<
#!/bin/sh -ev
#  make compiler_install would also install all tools, but the crosscompiler is all what is wanted
  install -m 755 -d %i/lib/fpc/%v
  install -c -m 755 %b/compiler/ppcrossppc %i/lib/fpc/%v/ppcrossppc
  install -m 755 -d %i/bin
  ln -sf ../lib/fpc/%v/ppcrossppc %i/bin/ppcppc
# install all units from the rtl and packages
  make rtl_install      OS_TARGET=darwin CPU_TARGET=powerpc INSTALL_PREFIX=%i CROSSINSTALL=1 PP=%b/compiler/ppcrossppc
  make packages_install OS_TARGET=darwin CPU_TARGET=powerpc INSTALL_PREFIX=%i CROSSINSTALL=1 PP=%b/compiler/ppcrossppc
<<

RuntimeVars: <<
FPCDIR: %p
PPC_CONFIG_PATH: %p/etc/
<<

