	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-helper.sh
	if [ "%type_raw[-ui]" = "-osxcocoa" ] ; then
		UI="osx_cocoa"
	else 
		UI="gtk2" 
	fi
	./configure %c --with-macosx-version-min=$OSX_MAJOR_VERSION --with-macosx-sdk=$SDK_PATH --enable-macosx_arch=%m
