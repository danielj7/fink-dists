  db44-aes | db44,
  expat1,
  libxml2 (>= 2.5.10-12),
  neon26,
  openldap23-dev (>= 2.3.24-10),
  cyrus-sasl2-dev (>= 2.1.15-23),
  system-openssl-dev,
  libiconv-dev (>= 1.9.1-11),
  gettext-bin,
