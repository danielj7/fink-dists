Source: http://ftp.novell.com/pub/mono/sources/gtk-sharp/gtk-sharp-%v.tar.bz2
Source-MD5: e04d634c55460b79c69d19c49648c6df
BuildDepends: <<
	atk1 (>= 1.20.0-1),
	glib2-dev (>= 2.14.0-1),
	gtk+2-dev (>= 2.12.0-1),
	libglade2 (>= 2.6.2-1),
	mono-dev (>= 2.0-1),
	pango1-xft2-ft219-dev (>= 1.18.4-4),
	pkgconfig (>= 0.22-3),
<<
Depends: <<
	gtk-sharp2 (>= 2.12.0-1),
	mono-tools (>= 2.0-1)
<<
Replaces: monodoc, gtk-sharp
ConfigureParams: --mandir=%p/share/man --disable-static --disable-dependency-tracking ac_cv_path_MONODOCER=no lt_cv_sys_max_cmd_len=65536 PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:$PKG_CONFIG_PATH"
CompileScript: <<
#!/bin/sh -ex

	./configure %c
	pushd doc
	make assemble
	popd
<<
InstallScript: <<
#!/bin/sh -ex

	# SOURCESDIR=`monodoc --get-sourcesdir`
	pushd doc
	# install -d -m 755 "%d$SOURCESDIR"
	# install -c -m 644 gtk-sharp-docs.* "%d$SOURCESDIR"
	make install
	popd
<<
PostInstScript: <<
	[ -x "%p/bin/monodoc" ] && [ -d "%p/lib/monodoc" ] && "%p/bin/monodoc" --make-index >/dev/null 2>&1 || :
<<

