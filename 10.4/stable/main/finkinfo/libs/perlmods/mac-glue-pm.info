PatchScript: <<
#!/bin/sh -ev
        %{default_script}

	export FULLPERL=`perl -e 'print $ARGV[0]=~/PERL="(.*?)"/' '%c'`
	perl -pi.bak -e 's,^\$Config\{startperl\},#!'"$FULLPERL," scripts/*.PL
<<
InfoTest: <<
	TestDepends: <<
		test-pod-pm
	<<
	TestScript: <<
		### These generated pod files have the wrong encoding (badly encoded MacRoman)
		### Need to fix each one individually for the prepending to work.
		perl -pi -e 'print "=encoding utf8\n\n" if $. ==1' blib/lib/Mac/Glue/glues/Finder.pod
		perl -pi -e 'print "=encoding utf8\n\n" if $. ==1' blib/lib/Mac/Glue/glues/FontSyncScripting.pod
		perl -pi -e 'print "=encoding utf8\n\n" if $. ==1' blib/lib/Mac/Glue/glues/Keychain_Scripting.pod
		perl -pi -e 'print "=encoding utf8\n\n" if $. ==1' blib/lib/Mac/Glue/glues/additions/StandardAdditions.pod
		perl -pi -e 'print "=encoding utf8\n\n" if $. ==1' blib/lib/Mac/Glue/glues/dialects/AppleScript.pod
		%{default_script}
	<<
<<
InstallScript: <<
	#!/bin/sh -ev
	%{default_script}
	mv %i/share/man %i/lib/perl5/%type_raw[perl]
	
	for f in gluemac gluedialect gluescriptadds glueedit gluedoc; do
		mv "%i/bin/$f" "%i/bin/$f.%type_raw[perl]"
	done
	
	/usr/bin/install -d -m 0755 %i/share/doc/%n
	/bin/cp -R ex %i/share/doc/%n/examples
<<
PostInstScript: <<
	if [ "$1" = configure ]; then
		for f in gluemac gluedialect gluescriptadds glueedit gluedoc; do
			update-alternatives --install %p/bin/$f $f %p/bin/$f.%type_raw[perl] %type_pkg[perl]
		done
	fi
	if [ "$1" = "upgrade" ]; then
		echo "If you have created any glues with gluemac, run"
		echo "    gluemac.%type_raw[perl] -c -r"
		echo "to update them."
	fi
<<
PreRmScript: <<
	if [ "$1" = remove ]; then
		for f in gluemac gluedialect gluescriptadds glueedit gluedoc; do
			update-alternatives --remove $f %p/bin/$f.%type_pkg[perl]
		done
	fi
<<
