InstallScript: <<
#!/bin/sh -ev
	%{default_script}
	mv %i/share/man %i/lib/perl5/%type_raw[perl]

	mkdir -p %i/share/%n
	mv %i/bin/crunchjpg_tmpl.pdf %i/share/%n
	perl -pi -e 's,crunchjpg_tmpl.pdf,%p/share/%n/crunchjpg_tmpl.pdf,' %i/bin/*

	for f in \
		appendpdf.pl \
		asciify \
		changepagestring.pl \
		changepdfstring.pl \
		changerefkeys.pl \
		crunchjpgs.pl \
		deillustrate.pl \
		deletepdfpage.pl \
		extractallimages.pl \
		extractjpgs.pl \
		fillpdffields.pl \
		getpdffontobject.pl \
		getpdfpage.pl \
		getpdfpageobject.pl \
		getpdftext.pl \
		listfonts.pl \
		listimages.pl \
		listpdffields.pl \
		pdfinfo.pl \
		readpdf.pl \
		renderpdf.pl \
		replacepdfobj.pl \
		revertpdf.pl \
		rewritepdf.pl \
		setpdfbackground.pl \
		setpdfpage.pl \
		stamppdf.pl \
		uninlinepdfimages.pl \
	; do
		mv %i/bin/$f %i/bin/$f-%type_raw[perl]
	done
<<
