	cairo,
	dbus1.3-dev,
	dbus-glib1.2-dev,
	fontconfig2-dev,
	freetype219,
	fluidsynth1-dev,
	gettext-tools,
	glib2-dev,
	gtk+2-dev,
	jack-dev,
	lame-dev,
	libcddb-dev,
	libcdio13-dev,
	libcdio-cdda1-dev,
	libcurl4,
	libflac8-dev,
	libgettext8-dev,
	libiconv-dev,
	libmad,
	libmcs,
	libmowgli,
	libmpcdec5,
	libogg,
	libsamplerate0-dev,
	libshout4,
	libsidplay,
	libsndfile1-dev,
	libvorbis0,
	libxml2,
