BuildDepends: gtk-sharp (>= %v-1), atk1 (>= 1.4.1-3), autoconf2.5, automake1.9, freetype219, gal199, gal199-dev, gconf2, gconf2-dev, gdk-pixbuf, glib2 (>= 2.4.6-7), glib2-dev (>= 2.4.6-7), gnome-vfs2-dev | gnome-vfs2-ssl-dev, gtk+2-dev (>= 2.4.9-8), gtk+2 (>= 2.4.9-8), gtkhtml3 (>= 3.2.1-1), gtkhtml3-dev (>= 3.2.1-1), libart2, libbonobo2, libbonobo2-dev, libbonoboui2, libbonoboui2-dev, libcroco1, libgda, libgda-dev, libglade2, libgnome2-dev, libgnome2, libgnomecanvas2, libgnomecanvas2-dev, libgnomedb, libgnomedb-dev, libgnomeprint2.2, libgnomeprint2.2-dev, libgnomeprintui2.2, libgnomeprintui2.2-dev, libgnomeui2, libgnomeui2-dev, libgsf, libgsf-dev, libidl2 (>= 0.8.3-2), librsvg2, libtool14 (>= 1.5-1), mono-dev (>= 1.1.8.3-1), orbit2-dev (>= 2.8.3-4), pango1-xft2-ft219-dev, pkgconfig, popt, vte-dev
Depends: gtk-sharp (>= %v-1), monodoc (>= 1.0.7-1)
Replaces: monodoc, gtk-sharp
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
ConfigureParams: --mandir=%p/share/man --disable-static --disable-dependency-tracking
CompileScript: <<
#!/bin/sh -ex

  export lt_cv_sys_max_cmd_len=65536
  ./configure %c
  pushd doc
  make assemble
  popd
<<
InstallScript: <<
#!/bin/sh -ex

  SOURCESDIR=`monodoc --get-sourcesdir`
  pushd doc
  install -d -m 755 "%d$SOURCESDIR"
  install -c -m 644 gtk-sharp-docs.* "%d$SOURCESDIR"
  popd
<<
PostInstScript: <<
  [ -x "%p/bin/monodoc" ] && [ -d "%p/lib/monodoc" ] && "%p/bin/monodoc" --make-index >/dev/null 2>&1 || :
<<

