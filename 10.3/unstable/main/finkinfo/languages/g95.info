PatchScript: <<
 #!/bin/sh
 cd g95-%v
 tar -xvzf libf95.a-%v.tar.gz
 cd ..
 cd gcc-4.0-20050130
 patch -p0 < %a/%n.patch
 # make sure odcctools libtool being used.
 perl -pi -e 's,/usr/bin/libtool,%p/lib/odcctools/bin/libtool,;' gcc/config/darwin.h
<<
CompileScript: <<
 #!/bin/sh
 cd gcc-4.0-20050130
 mkdir g95
 cd g95
 ../configure --prefix=%p --with-gmp=%p --enable-languages=c --with-as=%p/lib/odcctools/bin/as --with-ld=%p/lib/odcctools/bin/ld --disable-checking --with-included-gettext 
 make
 cd ../../g95-%v
 ./configure --prefix=%p --with-gmp-dir=%p --with-gcc-dir=%b/gcc-4.0-20050130 --build=%m-apple-darwin
 make 
 cd libf95.a-%v
 ./configure %c --build=%m-apple-darwin
 make 
<<
InstallScript: <<
 #!/bin/sh
 gccverfull=`grep version_string %b/gcc-4.0-20050130/gcc/version.c | sed -e 's/.*"\([^"]*\)".*/\1/'`
 gccver=`echo ${gccverfull} | sed -e 's/\([^ ]*\) .*/\1/'`
 cd g95-%v
 mv Makefile Makefile.orig
 sed "s|%p/lib/gcc-lib/%m-apple-darwin/${gccver}|%i/lib/gcc-lib/%m-apple-darwin/${gccver}|g" < Makefile.orig > Makefile
 make install prefix=%i 
 cd libf95.a-%v
 mv Makefile Makefile.orig
 sed "s|%p/lib/gcc-lib/%m-apple-darwin/${gccver}|%i/lib/gcc-lib/%m-apple-darwin/${gccver}|g" < Makefile.orig > Makefile
 make install prefix=%i
 ranlib %i/lib/gcc-lib/%m-apple-darwin/${gccver}/libgcc.a
 ranlib %i/lib/gcc-lib/%m-apple-darwin/${gccver}/libf95.a
 ln -s %p/bin/%m-apple-darwin-g95 %i/bin/g95
 /bin/rm -f %i/INSTALL
<<
