PatchScript: <<
	%{default_script}
	intltoolize -f
	autoreconf -f -i
	find . -name Makefile.in | xargs perl -pi -e 's,LINK = \$\(LIBTOOL\) --tag=CC,LINK = \$\(LIBTOOL\) --tag=CXX,' 
	perl -pi -e 's,/usr/share/gtk-doc/html,%p/share/gtk-doc/html,g' help/reference/html/*.html
<<
