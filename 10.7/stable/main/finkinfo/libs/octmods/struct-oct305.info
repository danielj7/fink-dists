  liboctave%type_pkg[oct]-dev,
  fftw3,   
  hdf5.8-oldapi,
  fink (>=0.32)
<<
RuntimeDepends:   miscellaneous-oct%type_pkg[oct]
Depends: << 
  octave%type_pkg[oct]-interpreter,
  miscellaneous-oct%type_pkg[oct]
<<
