Depends: gnome-core, db3-shlibs (>= 3.3.11-8), dlcompat (>= 20020120-1), python (>= 2.2.1-8) | python-nox (>= 2.2.1-8)
BuildDepends: db3 (>= 3.3.11-8), gdk-pixbuf, glib, gtk+, readline (>= 4.3-5), gnome-core-dev, gnome-libs-dev, dlcompat-dev, orbit-dev
