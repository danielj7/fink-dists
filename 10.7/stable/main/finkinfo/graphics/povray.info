GCC: 4.0
Maintainer: Andrew Rohl <andrewrohl@mac.com>
BuildDepends: <<
	autoconf2.6,
	automake1.13|automake1.14,
	boost1.53.nopython,
	libjpeg9,
	libopenexr6,
	libpng16,
	libtiff5,
	sdl,
	x11-dev,
	fink-package-precedence
<<
Depends: <<
	boost1.53.nopython-shlibs,
	libjpeg9-shlibs,
	libopenexr6-shlibs,
	libpng16-shlibs,
	libtiff5-shlibs,
	sdl-shlibs,
	x11
<<
Source: https://github.com/POV-Ray/povray/archive/v%v.tar.gz
Source-MD5: c9473256677808e9e3246e6eb8f69a75
PatchFile: %n.patch
PatchFile-MD5: c772d5a984efc3cac51ad8bafb74d9d4
SourceDirectory: %n-%v
PatchScript: <<
%{default_script}
# TODO fix 10.9 build ala MacPorts
# Replace shared_ptr with boost::shared_ptr.
# https://github.com/POV-Ray/povray/issues/8
# ala MacPorts use of
# reinplace -locale en_US.ISO8859-1 -E {/^[   ]*\/\//! s%([   (]|^)(shared_ptr)%\1boost::\2%g} ${item}
# on .cpp .h .hpp extensioned files
<<
SetLIBS: -lboost_system-mt
ConfigureParams: <<
	--with-libpng=%p 			\
	--with-libjpeg=%p 			\
	--with-libtiff=%p 			\
	--with-libsdl=%p 			\
	--with-openexr=%p			\
	--with-boost=%p 			\
	--with-boost-libdir=%p			\
	--with-boost-thread=boost_thread-mt 	\
	--mandir=%i/share/man 			\
	COMPILED_BY="Andrew Rohl as part of Fink"
<<
CompileScript: <<
	#!/bin/sh -efv

	pushd unix
	./prebuild.sh
	popd	
	./configure %c
	make
	fink-package-precedence  .
<<
