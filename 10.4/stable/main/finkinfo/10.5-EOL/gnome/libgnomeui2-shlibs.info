PatchScript: <<
	%{default_script}
	perl -pi -e 's/gnome-about-logo.png/gnome-about-logo-2.0.png/g' images/Makefile.in libgnomeui/gnome-about.c
	mv images/gnome-about-logo.png images/gnome-about-logo-2.0.png
