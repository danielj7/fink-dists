+#!/bin/sh
+
+ot_fonts_dir="`@PREFIX@/bin/xfontpath basedir`/appleotf"
+
+evallines(){
+  while read line; do
+    eval $line
+  done
+}
+
+LC_ALL=ja_JP.UTF-8
+cd $ot_fonts_dir
+
+cat <<EOF | /usr/bin/iconv -f UTF-8 -t UTF-8-MAC | evallines
