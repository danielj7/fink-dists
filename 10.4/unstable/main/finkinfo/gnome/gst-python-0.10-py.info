		gst-plugins-base-0.10-shlibs (>= 0.10.12-1023),
		pygobject2-py%type_pkg[python],
		pygtk2-gtk-py%type_pkg[python] (>= 2.6.3-1),
		gst-python-0.10-defs (>= %v-1021)
	<<
	Recommends: <<
		gconf2 (>= 2.6.0-1),
		gstreamer-0.10 (>= 0.10.12-1021),
		gst-plugins-base-0.10 (>= 0.10.12-1023)
	<<
	Files: lib/python%type_raw[python]
<<
