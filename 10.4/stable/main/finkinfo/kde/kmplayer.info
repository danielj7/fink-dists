PatchScript: <<
	perl -pi -e 's,doc/HTML,doc/kde,;s/-g -O/-O/g;s/-O2/-Os/g;' configure
	perl -pi -e 's|libkdeinit_kmplayer_la_LIBADD = |libkdeinit_kmplayer_la_LIBADD = \$\(LIB_KIO\) \$\(LIB_KDEUI\) \$\(LIB_KDECORE\) -lDCOP \$\(LIB_QT\) |g' src/Makefile.in
	perl -pi -e 's|\$\(LIB_XINE\) -lDCOP|\$\(LIB_XINE\) -lDCOP \$\(LIB_QT\)|g' src/Makefile.in
	perl -pi -e 's|libkmplayerbackend.la -lDCOP|libkmplayerbackend.la -lDCOP \$\(LIB_QT\)|g' src/Makefile.in
<<
CompileScript: <<
	#!/bin/sh -ev
	export PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH"
	%{default_script}
<<
InstallScript: <<
	make install DESTDIR=%d
	rm %i/share/mimelnk/application/x-mplayer2.desktop
<<
