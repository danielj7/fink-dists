<<
InstallScript: <<
	%p/bin/python%type_raw[python] setup.py WXPORT=gtk2 WX_CONFIG=%p/lib/wx/config/gtk2-unicode-release-2.8 install --root=%d
	cd %i/bin; for filename in *; do mv -v $filename $filename-py%type_pkg[python]; done;
	mkdir -p %i/share/doc/%n
	cp -R demo %i/share/doc/%n
	cp -R samples %i/share/doc/%n
	/usr/bin/find %i -type f -name "*.py" -exec perl -pi -e 's|/usr/bin/env python|%p/bin/python%type_raw[python]|g' {} \;

	mkdir -p %i/lib/wxgtk2.8-py%type_pkg[python]
	mv %i/lib/python%type_raw[python]/site-packages/wx.pth %i/lib/python%type_raw[python]/site-packages/wx2.8.pth
	ln -s %p/lib/python%type_raw[python]/site-packages/wx2.8.pth %i/lib/wxgtk2.8-py%type_pkg[python]/wx.pth
	ln -s %p/lib/python%type_raw[python]/site-packages/wx-2.8-gtk2-unicode/wx %i/lib/wxgtk2.8-py%type_pkg[python]/wx
	ln -s %p/lib/python%type_raw[python]/site-packages/wx-2.8-gtk2-unicode/wxPython %i/lib/wxgtk2.8-py%type_pkg[python]/wxPython
	ln -s %p/lib/python%type_raw[python]/site-packages/wx-2.8-gtk2-unicode/wxPython-%v-py%type_raw[python].egg-info %i/lib/wxgtk2.8-py%type_pkg[python]/wxPython-%v-py%type_raw[python].egg-info

