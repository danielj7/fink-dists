Package: poppler1
Version: 0.5.4
Revision: 13
Description: PDF rendering library
License: GPL
Maintainer: Benjamin Reed <poppler1@fink.racoonfink.com>

Depends: <<
	%N-shlibs (= %v-%r),
	%N-data (>= %v-%r)
<<
BuildDepends: <<
	expat1,
	fontconfig2-dev,
	freetype219,
	glib2-dev,
	glitz,
	gettext-bin,
	gettext-tools,
	gtk+2-dev,
	libgettext3-dev,
	libiconv-dev,
	libjpeg,
	pango1-xft2-dev,
	pkgconfig (>= 0.20-1),
	x11-dev
<<
Conflicts: poppler
Replaces: poppler
BuildDependsOnly: True
GCC: 3.3

Source: http://poppler.freedesktop.org/poppler-%v.tar.gz
Source2: http://poppler.freedesktop.org/poppler-data-0.1.tar.gz
Source-MD5: 053fdfd70533ecce1a06353fa945f061
Source2-MD5: 5c700eb06dda9dafec09cd85225e34d4
PatchScript: sed -e 's|@PREFIX@|%p|g' <%a/%n.patch | patch -p1

SetLIBS: -L%p/lib -lexpat
ConfigureParams: --mandir=%p/share/man SYSTEM_XPDFRC=%p/etc/xpdfrc.poppler1 --disable-dependency-tracking --enable-zlib --disable-cairo-output --disable-poppler-qt --disable-poppler-qt4 --disable-gtk-test
CompileScript: <<
#!/bin/sh -ev

	./configure %c
	make

	if [ -f %p/lib/fontconfig2/lib/libfontconfig.a ] && [ ! -f %p/lib/fontconfig2/lib/libfontconfig.dylib ]; then
		mkdir fink-fc
		( cd fink-fc && ar x %p/lib/fontconfig2/lib/libfontconfig.a )
		for a in poppler/.libs/libpoppler.a glib/.libs/libpoppler-glib.a; do
			ar d $a libfontconfig.a
			ar d $a libfontconfig.a
			ar ru $a fink-fc/*.o
			ranlib $a
		done
	fi
<<

InstallScript: <<
#!/bin/sh -ev

	make -j1 install DESTDIR=%d
	install -d %i/etc
	install -c -m 644 xpdfrc.poppler1 %i/etc/

	pushd ../poppler-data-0.1
		make install DESTDIR=%d prefix=%p
	popd
<<
