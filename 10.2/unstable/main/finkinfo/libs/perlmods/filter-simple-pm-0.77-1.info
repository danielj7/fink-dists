PostInstScript: <<
  cat %p/lib/perl5/darwin/perllocal.filter-simple.pod | sed -e s,%i/lib/perl5,%p/lib/perl5, >> %p/lib/perl5/darwin/perllocal.pod
  rm -rf %p/lib/perl5/darwin/perllocal.filter-simple.pod
<<
