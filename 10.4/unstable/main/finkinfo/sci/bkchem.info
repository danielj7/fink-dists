Package: bkchem
Version: 0.12.1
Revision: 2

Source: http://bkchem.zirael.org/download/%n-%v.tar.gz
Source-MD5: 15936865fff423056510503732a62d23

Depends: python25, pycairo-py25, python-mhash-py25
Suggests: pysqlite2-py25

CompileScript: %p/bin/python2.5 setup.py build

InstallScript: <<
  #!/bin/sh -ev

  %p/bin/python2.5 setup.py install --root=%d

  libdir="%p/lib/python2.5/site-packages/%n"
  perl -pi -e 's|%d||' %i/bin/bkchem %d${libdir}/site_config.py
  perl -pi -e 's|^python|%p/bin/python2.5|' %i/bin/bkchem
  %p/bin/python2.5 -c 'import py_compile; import sys; src=sys.argv[1]; py_compile.compile("%d"+src, "%d"+src+"c", src)' "${libdir}/site_config.py"
<<
DocFiles: README gpl.txt

DescPackaging: <<
  setup.py treats --root as --prefix when writing wrappers.
  See: https://savannah.nongnu.org/bugs/index.php?19925

	structure_database requires pysqlite2-py25

	pybel_bridge/oasa-pybel requires pybel, which does not appear
	to be in fink
<<
