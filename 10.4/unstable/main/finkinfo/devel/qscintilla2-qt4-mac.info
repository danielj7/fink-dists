Depends: %N-shlibs (>= %v-%r)
BuildDepends: freetype219, glib2-dev, libgettext8-dev, libiconv-dev, libpng14, qt4-mac
BuildDependsOnly: true
CompileScript: <<
 #!/bin/sh -ev
 cd Qt4
 %p/lib/qt4-mac/bin/qmake qscintilla.pro
 perl -pi -e 's|install_name\t|install_name\t%p\/lib\/qt4-mac\/lib\/|' Makefile
 make
<<
InstallScript: <<
  #!/bin/sh -ev
  cd Qt4
  INSTALL_ROOT=%d make install
  <<
