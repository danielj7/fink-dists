Package: libmongo-client
Version: 0.1.4
Revision: 1

Source: https://github.com/algernon/libmongo-client/tarball/v%v
Source-MD5: efee0539a10e5a36682fdd3380b3d571
SourceRename: libmongo-client-%v.tar.gz
SourceDirectory: algernon-libmongo-client-c16e4c2

Maintainer: Sjors Gielen <fink-libmongo-client@sjorsgielen.nl>
BuildDependsOnly: true

BuildDepends: <<
	glib2-dev,
	system-openssl-dev,
	doxygen,
	automake1.12,
	libtool2
<<
Depends: <<
	glib2-shlibs,
	%n-shlibs (= %v-%r)
<<

Description: Alternative C driver for MongoDB
License: OSI-Approved
CompileScript: <<
	./autogen.sh
	./configure --prefix="%p"
	make
	doxygen
<<
InfoTest: <<
	TestScript: <<
		make check
	<<
<<
InstallScript: <<
	make install prefix=%i
	mkdir -p %i/share/doc/%n
	mv docs/html %i/share/doc/%n
<<
DocFiles: LICENSE NEWS README.rst

SplitOff: <<
	Package: %n-shlibs
	Files: <<
		lib/libmongo-client.0.dylib
	<<
	Shlibs: <<
		%p/lib/libmongo-client.0.dylib 4.0.0 %n (>= 0.1.4-1)
	<<
<<
