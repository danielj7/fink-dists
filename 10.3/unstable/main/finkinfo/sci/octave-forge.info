Package: octave-forge
Version: 2004.02.12
Revision: 3
Maintainer: None <fink-devel@lists.sourceforge.net>
BuildDepends: texinfo, g77, libjpeg, fftw3, hdf5
Depends: octave (>= 2.1.53-1), X11, libjpeg-shlibs, fftw3-shlibs, hdf5-shlibs, qhull
Source: mirror:sourceforge:octave/%n-%v.tar.gz
Source-MD5: 2c8a35bc59844c1fd4068a1213a3bc26
UpdateConfigGuess: true
SetCPPFLAGS: -no-cpp-precomp
SetLDFLAGS:
SetLIBRARY_PATH: %p/lib
Patch: %n.patch
PatchScript: <<
 perl -pi.bak -e "s/\\\$< /\\\$< \\\$(LDFLAGS) /" main/image/Makefile
 perl -pi.bak -e "s/MOFLAGS =/MOFLAGS = \\\$(LDFLAGS) -lhdf5/" main/comm/Makefile
<<
ConfigureParams: --infodir='${prefix}/share/info' --mandir='${prefix}/share/man'
InstallScript: <<
 #!/bin/sh
 make install prefix=%i \
   MPATH=%d`%p/bin/octave-config --m-site-dir`/octave-forge \
   OPATH=%d`%p/bin/octave-config --oct-site-dir`/octave-forge \
   XPATH=%d`%p/bin/octave-config --oct-site-dir | sed 's|oct\/|exec\/|'` \
   mandir=%i/share/man
<<
PostInstScript: <<
 echo ""
 echo "PLEASE NOTE:"
 echo "Restart octave for using the new functions."
 echo "(There is no need to change the '.octaverc' file. Octave-forge should be ready"
 echo "to use by now.)"
 echo ""
 echo "===================================="
 echo "   This package has no maintainer."
 echo "===================================="
 echo ""
 echo " If you are using it, please consider"
 echo "          adopting it"
 echo "   and becoming its new maintainer."
 echo " If you are interested, please write"
 echo " to the fink-devel mailing list."
 echo ""
 echo "===================================="
<<
