 ./configure %c
 make

 echo "---------- start building ptex ----------"
 ( cd texk/web2c/%{ni} ; ./configure EUC ; make )

 echo "---------- start building jmpost ----------"
 ( cd texk/web2c/%{ni}/jmpost ; sh ./configure ; make )

