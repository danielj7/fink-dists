Package: mingw-binutils
Version: 2.15.91-20040904-1
Revision: 4
Description: GNU binutils for MinGW
License: LGPL
Maintainer: ASARI Takashi <asari@sodan.ecc.u-tokyo.ac.jp>

Source: mirror:sourceforge:mingw/binutils-%v-src.tar.gz
Source-MD5: fdded3fc2bc0503311b303c349006339
SourceDirectory: binutils-%v

CompileScript: <<
./configure --target=i686-pc-mingw32 --prefix=%p/share/mingw --bindir=%p/bin --mandir=%p/share/man --infodir=%p/share/info --disable-nls
/usr/bin/make
<<

InstallScript: <<
#!/bin/sh
/usr/bin/make install DESTDIR=%d
/bin/rm -rf %i/share/mingw/lib/

for file_name in %i/share/info/*
do
    new_file_name=`/bin/echo ${file_name} | /usr/bin/sed -e "s|%i/share/info/|%i/share/info/i686-pc-mingw32-|g"`
    /bin/echo ${file_name} ${new_file_name}
    mv ${file_name} ${new_file_name}
done
<<

