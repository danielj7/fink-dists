CompileScript: <<
#!/bin/sh -ex

	export DYLD_LIBRARY_PATH="%i/lib"
	export MONO_PATH="%i/lib:`pwd`/build/bin:`pwd`/build/AddIns/BackendBindings:$MONO_PATH"

	export lt_cv_sys_max_cmd_len=65536
	perl -pi.bak -e 's/hardcode_direct=yes/hardcode_direct=no/g;' configure
	./configure %c
	make
<<

InstallScript: <<
#!/bin/sh -ex

	export DYLD_LIBRARY_PATH="%i/lib"
	export MONO_PATH="%i/lib:$MONO_PATH"

	make install DESTDIR="%d"
<<
