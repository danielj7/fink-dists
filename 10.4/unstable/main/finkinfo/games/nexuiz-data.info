SourceDirectory: .
PatchScript: dpkg -x %n_%v-3_all.deb data.pk3
CompileScript: echo "Nothing to compile."
InstallScript: <<
#!/bin/sh -ev
	mkdir -p %i/bin
	cat > %i/bin/nexuiz.sh <<_EOF
#!/bin/sh
LD_LIBRARY_PATH=%p/lib nexuiz-sdl -basedir %p/share/games/nexuiz
_EOF
	chmod +x %i/bin/nexuiz.sh
	mkdir -p %i/share/games/nexuiz/data
	cp data.pk3/usr/share/games/nexuiz/data/data.pk3 %i/share/games/nexuiz/data/
<<
