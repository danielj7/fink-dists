CompileScript: <<
mkdir lib
mkdir bin
echo export CERN=%b/cernlib > compile
echo export CERN_LEVEL=%v >> compile
echo 'export CERN_ROOT=${CERN}/${CERN_LEVEL}' >> compile
echo 'export PATH=${CERN_ROOT}/bin:${PATH}' >> compile
echo export CVSCOSRC=%b >> compile
echo '${CVSCOSRC}/config/imake_boot' >> compile
echo make bin/kuipc >> compile
echo make scripts/Makefile >> compile
echo '(cd scripts; make install.bin)' >> compile
echo make >> compile
echo '(cd packlib; make install.bin)' >> compile
echo '(cd graflib; make install.bin)' >> compile
echo '(cd pawlib; make install.bin)' >> compile
echo 'make install.include CERN_INCLUDEDIR=${CERN_ROOT}/include' >> compile
chmod 755 compile
./compile
<<
