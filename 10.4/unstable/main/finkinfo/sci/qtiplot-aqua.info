Depends: qt3mac-shlibs, qwtplot3dmac-shlibs, qwtmac-shlibs, gsl-shlibs, liborigin-shlibs
BuildDepends: qt3mac, gsl, qwtplot3dmac, qwtmac, liborigin, fink (>= 0.24.12)
