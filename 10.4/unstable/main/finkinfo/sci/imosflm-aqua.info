InstallScript: <<
#!/bin/zsh -evf
mkdir -p %i/share/xtal
/bin/cp -r ../imosflm  %i/share/xtal/.
mkdir -p %i/bin
ln -s %p/share/xtal/imosflm/src/imosflm  %i/bin/imosflm
ln -s %p/share/xtal/imosflm/src/imosflm  %i/bin/imosflm-aqua
<<


