CompileScript: <<
#!/bin/sh -ev
	if [ `uname -r | cut -f1 -d.` -ge 9 ]; then export LDFLAGS="$LDFLAGS -Wl,-dead_strip_dylibs"; fi
	./configure %c
	make
	fink-package-precedence .
<<
