Package: libplist1
Version: 1.8
Revision: 5
Description: Library for handling apple .plist files
License: GPL/LGPL

# Dependencies:
BuildDependsOnly: true
BuildDepends: <<
  fink (>= 0.24.12),
  cmake, 
  pkgconfig (>= 0.9.0-1), 
  libxml2 (>= 2.6.32-1)
<<
Depends:   %N-shlibs (>= %v-5)
Conflicts: libplist
Replaces:  libplist
GCC: 4.0

# Unpack Phase:
Source: http://www.libimobiledevice.org/downloads/libplist-%v.tar.bz2
Source-MD5: 2a9e0258847d50f9760dc3ece25f4dc6

# Patch Phase: Fixes taken from git, should be included in 1.9
PatchFile: libplist.patch
PatchFile-MD5: 1da2d59c01700b4491ee833cd4f4041a

PatchScript: <<
#!/bin/sh -ev
# Patchfile created versus git repository
# from 2012-07-09, commit 335b25febd4c864ad0ac08479f5cd43fc21b7d73
  patch -p3 <%{PatchFile}
<<

# Compile Phase:
CompileScript: <<
#!/bin/sh -ev
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=%p -DENABLE_SWIG=OFF -DENABLE_CYTHON=OFF
  make
<<

# Install Phase:
InstallScript: <<
#!/bin/sh -ev
  cd build
  make install DESTDIR=%d
<<
DocFiles: AUTHORS COPYING* README

SplitOff: <<
  Package: %N-shlibs
  Depends: libxml2-shlibs (>= 2.6.32-1)
  Files: <<
    lib/libplist.1.%v.dylib
    lib/libplist.1.dylib
    lib/libplist++.1.%v.dylib
    lib/libplist++.1.dylib
  <<
  Shlibs: <<
    %p/lib/libplist.1.dylib   1.0.0 %n (>= 1.6-1)
    %p/lib/libplist++.1.dylib 1.0.0 %n (>= 1.6-1)
  <<
  DocFiles: AUTHORS COPYING* README
<<

Splitoff2: <<
  Package: libplist-bin
  Depends: %N-shlibs (>= %v-1)
  Files: bin
  DocFiles: AUTHORS COPYING* README
<<

