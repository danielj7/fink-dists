PatchScript: <<
#!/bin/sh -ev
	%{default_script}
	gzip -dc ../%n_*-*.diff.gz | patch -p1
	perl -pi -e 's,/usr/share/doc/gtk-doc-tools,%p/share/doc/%n,g' debian/*.1
	perl -pi -e 's/unshift \@INC/push \@INC/' *.in
<<
