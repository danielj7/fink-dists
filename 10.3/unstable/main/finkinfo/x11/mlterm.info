Package: mlterm
Version: 2.9.2
Revision: 1
License: BSD
Maintainer: Todai Fink Team <fink@sodan.ecc.u-tokyo.ac.jp>
Description: Multilingual terminal emulator on X11
BuildDepends: fribidi-dev, libjpeg, libpng3, libtiff, giflib, gettext-dev, gettext-bin, gettext-tools, libiconv-dev, x11-dev, freetype2, xft2-dev, pango1-xft2-dev, gtk+2-dev, glib2-dev, pkgconfig, autoconf2.5, libtool14, automake1.6
Depends: fribidi-shlibs, libjpeg-shlibs, libpng3-shlibs, libtiff-shlibs, giflib-shlibs, x11-shlibs, freetype2-shlibs, xft2-shlibs, gtk+2-shlibs, pango1-xft2-shlibs, gettext, libiconv, glib2-shlibs
Source: mirror:sourceforge:%n/%n-%v.tar.gz
Source-MD5: be561bfe646a112ce7400b9d0db41e82
UpdateLibtool: true
PatchScript: <<
#!/bin/sh
set -e
set -x
patch -p1 < %a/%n.patch
for dir in . mkf kiklib; do (
    cd $dir
    %p/bin/libtoolize --copy --force
    rm -f aclocal.m4
    %p/bin/aclocal-1.6
    %p/bin/autoconf
    )
done
<<
# Don't remove --config-cache to workaround libtool.m4's(?) bug
ConfigureParams: --enable-shared --with-imagelib=gdk-pixbuf --enable-fribidi --enable-ind --prefix=%p --libexecdir=%p/lib/mlterm --infodir=%p/share/info --mandir=%p/share/man --with-libiconv-prefix=%p --with-libintl-prefix=%p --enable-anti-alias
InstallScript: <<
  make install DESTDIR=%d
  install -d -m 755 %i/share/doc
  cp -R doc %i/share/doc/%n
  install -d -m 755 %i/share/doc/%n/etc
  install -m 644 etc/main.ja etc/font.ja %i/share/doc/%n/etc
<<
ConfFiles: <<
%p/etc/mlterm/color
%p/etc/mlterm/main
%p/etc/mlterm/menu
%p/etc/mlterm/termcap
%p/etc/mlterm/vaafont
