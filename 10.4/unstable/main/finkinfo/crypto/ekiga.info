	if [ configure = "$1" ]; then
		scrollkeeper-update -q
		GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source` gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/ekiga.schemas >/dev/null
	fi
<<
