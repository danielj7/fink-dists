PatchScript: <<
	#!/bin/sh -ev
	sed 	-e 's|@FINKPREFIX@|%p|g' \
			-e 's|@OCTVERSION@|%type_raw[oct]|g' \
			-e "s|@BLAS_LIBS@|`mkoctfile -p BLAS_LIBS`|" \
			-e 's|@GCC@|%type_raw[gcc]|' \
				%{PatchFile} | patch -p1
	cd src
	rm *.mexw64 *.mexw32 *.mexa64
<<

