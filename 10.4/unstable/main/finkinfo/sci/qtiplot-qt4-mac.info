PatchFile: %n.patch
PatchFile-MD5: e3ece70bc011f6c499abf519ee30bea7
PatchScript: <<
#!/bin/sh -ev
sed 's,@PREFIX@,%p,g' < %{PatchFile} | patch -p1
echo '#!/bin/sh -ev
name=`basename $0`
flag-sort -v /usr/bin/$name $@' >> ../c++
chmod a+x ../c++
ln ../c++ ../cc
<<

CompileScript: <<
#!/bin/sh -ev
unset QMAKESPEC
export QTDIR=%p/lib/qt4-mac
export PATH="%b/..:$QTDIR/bin:$PATH"
%p/lib/qt4-mac/bin/qmake qtiplot.pro LIBS+='-Wl,-framework,QtAssistant'
make
<<

