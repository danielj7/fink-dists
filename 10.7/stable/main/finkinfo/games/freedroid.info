Depends: <<
	libjpeg9-shlibs,
	libpng16-shlibs,
	sdl-image-shlibs,
	sdl-mixer-shlibs,
	sdl-shlibs
<<
BuildDepends: <<
	fink-package-precedence,
	libjpeg9,
	libpng16,
	sdl,
	sdl-image,
	sdl-mixer
<<
ConfigureParams: <<
	--mandir=%p/share/man \
	--with-extra-includes=%p/include \
	--with-extra-libs=%p/lib \
	--disable-sdltest \
	--enable-dependency-tracking \
	--without-x
<<
CompileScript: <<
	%{default_script}
	fink-package-precedence .
<<
InstallScript: make install DESTDIR=%d
