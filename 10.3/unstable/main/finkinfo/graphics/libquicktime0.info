PatchScript: <<
  ### Relink Patch
  perl -pi.bak -e 's,need_relink=yes,need_relink=no,g' ltmain.sh
  ### Fix oss sound
  perl -pi.bak -e 's,sys/soundcard.h,liboss/soundcard.h,g' utils/lqtplay.c
  perl -pi.bak -e 's,LIBS = \@LIBS\@,LIBS = \@LIBS\@ -loss,g' utils/Makefile.in
  ### Fix bad naming in rtjpeg
  perl -pi.bak -e 's,RTjpeg.h,rtjpeg1.h,g' plugins/rtjpeg/Makefile.in
  perl -pi.bak -e 's,RTjpeg.c,rtjpeg1.c,g' plugins/rtjpeg/Makefile.in
  perl -pi.bak -e 's,RTjpeg.h,rtjpeg1.h,g' plugins/rtjpeg/rtjpeg.h
  perl -pi.bak -e 's,RTjpeg.h,rtjpeg1.h,g' plugins/rtjpeg/rtjpeg1.h
  perl -pi.bak -e 's,RTjpeg.h,rtjpeg1.h,g' plugins/rtjpeg/rtjpeg.c
  perl -pi.bak -e 's,RTjpeg.h,rtjpeg1.h,g' plugins/rtjpeg/rtjpeg1.c
  perl -pi.bak -e 's,RTjpeg,rtjpeg1,g' plugins/rtjpeg/Makefile.in
  ### 10.3 fix for two level namespace
  perl -pi.bak -e 's,-flat_namespace -undefined suppress,-undefined dynamic_lookup,g' configure
  perl -pi.bak -e 's,-all_load \$convenience,-all_load,g' configure
  perl -pi.bak -e 's,hardcode_direct=yes,hardcode_direct=no,g' configure
  ### Fix for vorbis, needs ogg too
  perl -pi.bak -e 's, -lvorbis , -lvorbis -logg ,g' configure
  ### Remove 64 bit calls that are missing in stdio.h
  perl -pi.bak -e 's, fseeko64, fseeko,g' include/lqt_fseek.h
  perl -pi.bak -e 's, ftello64, ftello,g' include/lqt_fseek.h
