UseMaxBuildJobs: true
CompileScript: <<
	#!/bin/sh -ex
	
	export PKG_CONFIG_PATH="%p/lib/glib-2.0/pkgconfig-strict:$PKG_CONFIG_PATH"
	export KDE4_PREFIX="%p" KDE4_INSTALL_PREFIX="%p" KDE4_PYTHON_EXECUTABLE="%p/bin/python2.6"
	. %p/sbin/kde4-buildenv.sh
	mkdir build
	pushd build
	for dir in %p/share/swig/*; do
	SWIG_DIR="$dir"
	done
	cmake $KDE4_CMAKE_ARGS -DSWIG_DIR="$SWIG_DIR" ..
	make
	popd
<<

InstallScript: <<
#!/bin/sh -ex
	pushd build
		make -j1 install/fast DESTDIR="%d"
	popd
	%p/bin/python2.6 %p/lib/python2.6/compileall.py -f -d %p/lib/python2.6 %i/lib/python2.6
<<
