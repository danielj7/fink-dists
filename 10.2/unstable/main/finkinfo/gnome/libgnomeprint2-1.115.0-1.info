Package: libgnomeprint2
Version: 1.115.0
Revision: 1
Depends: %N-shlibs (= %v-%r)
BuildDepends: freetype2, glib2-dev, pango1-dev, linc1, orbit2-dev, libxml2, bonobo-activation2-dev, libbonobo2-dev, libart2, pkgconfig
Source: mirror:gnome:2.0.0/sources/libgnomeprint/libgnomeprint-%v.tar.bz2
Source-MD5: e44cf8558c5d82a49c495a894f48539a
Patch: %f.patch
SetCPPFLAGS: -no-cpp-precomp
NoSetLDFLAGS: true
ConfigureParams: --disable-font-install
InstallScript: make install DESTDIR=%d
SplitOff: <<
  Package: %N-shlibs
  Depends: pango1, libart2-shlibs, libbonobo2
  Files: lib/libgnomeprint-2.*.dylib lib/gnome-print-2.0
  DocFiles: AUTHORS COPYING ChangeLog* NEWS README
<<
SplitOff2: <<
  Package: %N-dev
  Depends: %N-shlibs (= %v-%r)
  BuildDependsOnly: True
  Files: include lib/libgnomeprint-2.* lib/pkgconfig
  DocFiles: AUTHORS COPYING ChangeLog* NEWS README
<<
PostInstScript: <<
libgnomeprint-2.0-font-install --debug --smart --refresh --static \
	--aliases=%p/share/gnome/libgnomeprint-2.0/fonts/adobe-urw.font \
	--target=%p/share/gnome/libgnomeprint-2.0/fonts/gnome-print.fontmap
<<
