PatchScript: <<
	perl -pi -e 's/\$(LZO_(INCLUDE|LIB))/\$ENV{\1}/ unless /^#/' Makefile.PL
	perl -pi -e 's/-llzo/-llzo2/' Makefile.PL
<<
CompileScript: <<
#!/bin/sh -ev
	export LZO_INCLUDE=-I%p/include/lzo
	export LZO_LIB=-L%p/lib
	%{default_script}	
<<
InstallScript: <<
	%{default_script}
	mv %i/share/man %i/lib/perl5/%type_raw[perl]
<<
UpdatePOD: True
