SourceDirectory: sp
Depends: r-base (>=2.12.0-1)
#BuildDepends: ptex-base | ptex-nox-base | tetex-base | tetex-nox-base 
CompileScript: <<
  #!/bin/sh -ev
  export TMPDIR=%b
  pushd ../ && %p/bin/R CMD build --binary --no-vignettes sp
<<
InstallScript: <<
  #!/bin/sh -ev
  mkdir -p %i/lib/R/site-library
  cp -R %b/../*.tgz %i/lib/R/site-library/
  cd  %i/lib/R/site-library/ && tar zxvf *.tgz
  rm -f %i/lib/R/site-library/*.tgz
  install_name_tool -id %p/lib/R/site-library/sp/libs/sp.dylib %i/lib/R/site-library/sp/libs/sp.dylib
<<
Shlibs: <<
  %p/lib/R/site-library/sp/libs/sp.dylib 0.0.0 %n (>=0.9-70-1)
<<