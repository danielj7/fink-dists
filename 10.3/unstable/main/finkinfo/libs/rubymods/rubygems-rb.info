Package: rubygems-rb%type_pkg[ruby]
Version: 0.8.10
Revision: 1
Type: ruby (1.6, 1.8)
Description: Package management framework for the Ruby programming language
License: OSI
Maintainer: Justin F. Hallett <thesin@users.sourceforge.net>

# Dependencies:
Depends: ruby%type_pkg[ruby]
BuildDepends:  ruby%type_pkg[ruby]-dev

# Unpack Phase:
Source: http://rubyforge.org/frs/download.php/3700/rubygems-%v.tgz
Source-MD5: d26592e280c0fb24c51f2837c3f48e67

# Compile Phase:
CompileScript: <<
 %p/bin/ruby%type_raw[ruby] setup.rb config --prefix=%p
 %p/bin/ruby%type_raw[ruby] setup.rb setup
<<

# Install Phase:
InstallScript: <<
 %p/bin/ruby%type_raw[ruby] setup.rb install --prefix=%d

 mkdir -p %i/share/%n/examples
 cp -R examples/ %i/share/%n/examples 
<<
