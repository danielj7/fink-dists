CompileScript: <<
#!/bin/sh -ev
	. %p/sbin/fink-buildenv-cmake.sh
	mkdir build
	cd build
	cmake \
		$FINK_CMAKE_ARGS \
		-DCMAKE_C_FLAGS=-MD \
		-DCMAKE_CXX_FLAGS=-MD \
		-DBUILD_SHARED_LIBS=ON \
		..
	make
	cd ..
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=bullet2.85 .
<<
InstallScript: <<
#!/bin/sh -ev
	cd build
	make install DESTDIR=%d
<<
