InstallScript: <<
 mkdir -p %i/share/doc/%n
 mv 00readme.txt %i/share/doc/%n
 mv ../lppl.txt %i/share/doc/%n
 mkdir -p %i/etc/texmf.local/doc/latex/%n
 mv *.aux *.log *.dvi *.ps %i/etc/texmf.local/doc/latex/%n
 mkdir -p %i/etc/texmf.local/source/latex/%n
 mv *.dtx *.ins %i/etc/texmf.local/source/latex/%n
 mkdir -p %i/etc/texmf.local/tex/latex
 cd ..; mv %n %i/etc/texmf.local/tex/latex
<<
