Depends: <<
	gtk-sharp2 (>= 2.12.0-1),
	mono-tools (>= 1.9-1)
<<
Replaces: monodoc, gtk-sharp
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
ConfigureParams: --mandir=%p/share/man --disable-static --disable-dependency-tracking
CompileScript: <<
#!/bin/sh -ex

	export ac_cv_path_MONODOCER=no lt_cv_sys_max_cmd_len=65536 CPPFLAGS="-I%p/lib/freetype219/include $CPPFLAGS" PKG_CONFIG_PATH="%p/lib/freetype219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/pango-ft219/lib/pkgconfig:$PKG_CONFIG_PATH" PATH="%p/lib/freetype219/bin:$PATH"
	./configure %c
	pushd doc
	make assemble
	popd
<<
InstallScript: <<
#!/bin/sh -ex

	# SOURCESDIR=`monodoc --get-sourcesdir`
	pushd doc
	# install -d -m 755 "%d$SOURCESDIR"
	# install -c -m 644 gtk-sharp-docs.* "%d$SOURCESDIR"
	make install
	popd
<<
PostInstScript: <<
	[ -x "%p/bin/monodoc" ] && [ -d "%p/lib/monodoc" ] && "%p/bin/monodoc" --make-index >/dev/null 2>&1 || :
<<

