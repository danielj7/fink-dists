	libcdio-common,
	libcdio13-shlibs,
	libcdio-cdda1-shlibs,
	libcurl4-shlibs,
	libflac8,
	libgettext8-shlibs,
	libiconv,
	libmad-shlibs,
	libmowgli-shlibs,
	libmpcdec5-shlibs,
	libogg-shlibs,
	libshout4-shlibs,
	libsidplay-shlibs,
	libsndfile1-shlibs,
	libvorbis0-shlibs,
	libxml2-shlibs,
	neon27-shlibs,
	pango1-xft2-ft219-shlibs,
	taglib-shlibs,
	x11-shlibs
<<
