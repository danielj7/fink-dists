Info2: <<
Package: hexalate-%type_pkg[qt]
Version: 1.0.1
Revision: 1004
Type: qt (x11 mac)
GCC: 4.0
Depends: <<
	libiconv (>= 1.12-3),
	libpng14-shlibs,
	qt4-base-%type_pkg[qt]-qtcore-shlibs,
	qt4-base-%type_pkg[qt]-qtgui-shlibs,
	( %type_pkg[qt] = x11 ) x11,
	( %type_pkg[qt] = x11 ) x11-shlibs
<<
BuildDepends: <<
	libiconv-dev (>= 1.12-3),
	libpng14,
	qt4-base-%type_pkg[qt],
	system-openssl-dev,
	( %type_pkg[qt] = x11 ) x11-dev
<<
Source: http://gottcode.org/hexalate/hexalate-%v-src.tar.bz2
Source-MD5: a8d15c0f4a6aa9ec12f870402049a439
SourceDirectory: hexalate-%v
PatchScript: <<
#!/bin/sh -ev
	a="x86"
	if [ "%m" == "powerpc" ]; then a="ppc"; fi
	if [ "%m" == "x86_64" ]; then a="x86_64"; fi
	perl -pi -e "s,x86 ppc,$a,s" hexalate.pro
<<
CompileScript: <<
	%p/lib/qt4-%type_pkg[qt]/bin/qmake hexalate.pro
	make
<<
InstallScript: <<
	#!/bin/sh -ev
	if [ "%type_pkg[qt]" == "mac" ]; then
		/usr/bin/install -d -m 755 %i/Applications
		/bin/mv -f hexalate.app %i/Applications/hexalate.app
	else
		mkdir -p %i/bin
		cp -p hexalate %i/bin/
	fi
<<
PostInstScript: <<
if [ "%type_pkg[qt]" == "mac" ]; then
	if ! test -e /Applications/Fink; then
		/usr/bin/install -d -m 755 /Applications/Fink
	fi
	/bin/ln -s '%p/Applications/hexalate.app' /Applications/Fink/
fi
<<
PostRmScript: <<
if [ "%type_pkg[qt]" == "mac" ]; then
	/bin/rm -f '/Applications/Fink/hexalate.app'
fi
<<
