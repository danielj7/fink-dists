Package: qemu
Version: 1.6.1
Revision: 1
Description: Fast machine emulator and virtualizer
License: GPL

Source: http://wiki.qemu-project.org/download/%n-%v.tar.bz2
Source-MD5: 3a897d722457c5a895cd6ac79a28fda0

BuildDepends: glib2-dev,    libgettext8-dev,    libcurl4,        libpng16,        libjpeg9,        cyrus-sasl2-dev,    gnutls28
Depends:      glib2-shlibs, libgettext8-shlibs, libcurl4-shlibs, libpng16-shlibs, libjpeg9-shlibs, cyrus-sasl2-shlibs, gnutls28-shlibs

ConfigureParams: (%m = i386) --cpu=%m 

CompileScript: <<
#!/bin/sh -ev
  mkdir build
  cd build
  ../configure %c
  make
<<

InstallScript: <<
#!/bin/sh -ev
  cd build
  make install prefix=%i     \
    sharedir=%i/share/qemu   \
    datadir=%i/share/qemu    \
    mandir=%i/share/man      \
    docdir=%i/share/doc/qemu \
    bindir=%i/bin
<<

