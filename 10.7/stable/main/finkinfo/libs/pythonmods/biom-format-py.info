InstallScript: <<
	#!/bin/sh -ev
	%p/bin/python%type_raw[python] setup.py install --root %d --prefix %p
	for file in add_metadata biom_validator convert_biom print_biom_python_config print_biom_table_summary subset_biom; do
		mv %i/bin/$file.py %i/bin/$file.py-py%type_pkg[python]
	done
	# biom needs special case
	mv %i/bin/biom %i/bin/biom-py%type_pkg[python]
<<
