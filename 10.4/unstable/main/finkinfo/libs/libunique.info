Package: libunique
Version: 1.0.2
Revision: 3
Description: Library for writing single instance applications, development files
Depends: %N-shlibs (= %v-%r)
BuildDepends: pkgconfig, atk1, cairo, dbus-dev, expat1, fontconfig2-dev, freetype219 (>= 2.3.7-4), glib2-dev, glitz, gtk+2-dev, libgettext3-dev, libiconv-dev, libpng3, pango1-xft2-ft219-dev, pixman, x11-dev, gtk-doc
BuildDependsOnly: true
Source: http://www.gnome.org/~ebassi/source/unique-%v.tar.gz
Source-MD5: 3064930a9dd5f382641bbb2072d13563
SetCFLAGS: -Os
ConfigureParams: --mandir=%p/share/man --with-extra-includes=%p/include --with-extra-libs=%p/lib --disable-dependency-tracking --enable-gtk-doc
PatchScript: perl -pi -e "s,\"x11,\",g;s,\(x11,\(,g" configure
InstallScript: make install DESTDIR=%d
DocFiles: AUTHORS COPYING ChangeLog NEWS README TODO
Splitoff: <<
  Package: %N-shlibs
  Description: Library for writing single instance applications, shared library
  Depends: atk1-shlibs, cairo-shlibs, dbus-shlibs, expat1-shlibs, fontconfig2-shlibs, freetype219-shlibs, glib2-shlibs, glitz-shlibs, gtk+2-shlibs, libgettext3-shlibs, libiconv, libpng3-shlibs, pango1-xft2-ft219-shlibs, pixman-shlibs, x11-shlibs
  Files: <<
    lib/libunique-1.0.0.dylib
    lib/libunique-1.0.0.2.0.dylib
  <<
  Shlibs: <<
    %p/lib/libunique-1.0.0.dylib 3.0.0 %n (>= 1.0.2-2)
  <<
  DocFiles: COPYING
<<
Splitoff2: <<
  Package: %N-doc
  Description: Library for writing single instance applications, documentation
  Files: <<
    share/gtk-doc
  <<
  DocFiles: COPYING
<<
