  readline5 (>= 5.0-1004),
  libncurses5 (>= 5.4-20041023-1006),
  libtool2,
  gmp,
  libgettext8-dev,
  gettext-tools,
  libiconv-dev,
  fink (>= 0.24.12)
<<
