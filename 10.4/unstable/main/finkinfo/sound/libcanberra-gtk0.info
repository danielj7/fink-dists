	freetype219 (>= 2.3.8-2),
	gconf2-dev (>= 2.26.0-1),
	glib2-dev (>= 2.20.0-1),
	glitz,
	gtk-doc (>= 1.9-1),
	gtk+2-dev (>= 2.16.0-1),
	libcanberra0 (>= %v-1),
	libgettext3-dev,
	libiconv-dev,
	libogg (>= 1.1.4-1),
