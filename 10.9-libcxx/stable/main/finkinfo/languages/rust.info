PatchScript: <<
perl -pi -e 's,7.3\*\),7.3\* \| 8.0\*\),' configure
# rust 1.10 needs but forgets to copy libarena
sed -i.bak -e '/extra/ a\
cp ${PREFIX}/${LIB_DIR}/${LIB_PREFIX}arena*${LIB_SUF} ${TARG_DIR}/stage0/${LIB_DIR}/' src/etc/local_stage0.sh
<<

