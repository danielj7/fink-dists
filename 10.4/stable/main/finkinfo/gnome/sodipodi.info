ConfigureParams: --mandir=%i/share/man --with-xinerama --with-xft --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
NoSetLDFlags: true
NoSetCppFlags: true
CompileScript: <<
#!/bin/sh -ex
LIBRARY_PATH=/usr/X11R6/lib:%p/lib
CPATH=%p/include
PATH="/usr/X11R6/bin:"$PATH
export LIBRARY_PATH
export CPATH
export LDFLAGS
export PATH
./configure %c
find . -name Makefile -exec perl -pi.bak -e 's#-[LlI](%p/lib|%p/include|%p/include/freetype2|m|pthread|c)\s# #g' {} \;
perl -pi.bak -e 's#-L%p/lib# #' libtool
perl -pi.bak -e 's,^sys_lib_search_path_spec=",sys_lib_search_path_spec="/usrX11R6/lib %p/lib ,g' libtool
cd src
make sp-cursor.o CXXFLAGS="-g -Os" CFLAGS="-g -Os"
cd ..
make
<<
