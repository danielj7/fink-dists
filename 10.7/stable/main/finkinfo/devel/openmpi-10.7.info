Package: openmpi
Version: 1.5.4
Revision: 1
GCC: 4.0
Description: MPI implementation for parallel computing
License: BSD
Maintainer: Jack Howarth <howarth@bromo.med.uc.edu>
Distribution: 10.7
Depends: %N-shlibs (= %v-%r), gcc46-compiler
BuildDepends: gcc46-compiler, fink-package-precedence, flag-sort, fink (>= 0.28)
Conflicts: libotf
Source: http://www.open-mpi.org/software/ompi/v1.5/downloads/openmpi-%v.tar.bz2
Source-MD5: 51153d794c49ce6d275dba2793ab0c68
ConfigureParams: --prefix=%p --datadir=%p/share/doc --sysconfdir=%p/etc/%n --sharedstatedir=%p/var/%n/shared --localstatedir=%p/var/%n/local --libdir=%p/lib/%n --includedir=%p/include --infodir=%p/share/info --mandir=%p/share/man --enable-shared --enable-static FFLAGS=-O3 --with-devel-headers F77=gfortran-fsf-4.6 FC=gfortran-fsf-4.6
SetCC: gcc-fsf-4.6
SetCXX: g++-fsf-4.6
NoSetMAKEFLAGS: true
UseMaxBuildJobs: true
BuildDependsOnly: false
CompileScript: <<
  #!/bin/sh -ev
  ./configure %c
  export CC="flag-sort -v -r $CC"
  make CC="$CC" CPP="$CC -E"
  fink-package-precedence --prohibit-bdep=openmpi .
<<
InstallScript: <<
#!/bin/sh -ev
make install DESTDIR=%d
# case-sensitive hackery
mv %i/bin/mpicc %i/bin/mpicc_tmp
if [ -f %i/bin/mpiCC ]; then
  rm %i/bin/mpiCC
  rm %i/bin/mpiCC-vt
  rm %i/share/doc/openmpi/mpiCC-vt-wrapper-data.txt
  rm %i/share/doc/openmpi/mpiCC-wrapper-data.txt
  rm %i/share/man/man1/mpiCC.1
fi
mv %i/bin/mpicc_tmp %i/bin/mpicc
ln -s %p/lib/%N/libopen-pal.3.dylib %i/lib/%N/libopal.3.dylib
ln -s %p/lib/%N/libopen-pal.3.dylib %i/lib/%N/libopal.dylib
ln -s %p/lib/%N/libopen-rte.3.dylib %i/lib/%N/liborte.3.dylib
ln -s %p/lib/%N/libopen-rte.3.dylib %i/lib/%N/liborte.dylib
<<
PostInstScript: <<
 if [ ! -f %p/share/doc/openmpi/mpiCC-vt-wrapper-data.txt ]; then
    ln -s %p/share/doc/openmpi/mpicc-vt-wrapper-data.txt %p/share/doc/openmpi/mpiCC-vt-wrapper-data.txt
    ln -s %p/share/doc/openmpi/mpicc-wrapper-data.txt %p/share/doc/openmpi/mpiCC-wrapper-data.txt
    ln -s %p/share/man/man1/mpicc.1 %p/share/man/man1/mpiCC.1
 fi
 if [ ! -h %p/bin/mpiCC ]; then
    ln -s %p/bin/mpicc %p/bin/mpiCC
    ln -s %p/bin/mpicc-vt %p/bin/mpiCC-vt
 fi
<<
PreRmScript: <<
 if [ -h %p/share/doc/openmpi/mpiCC-vt-wrapper-data.txt ]; then
    rm -f %p/share/doc/openmpi/mpiCC-vt-wrapper-data.txt
    rm -f %p/share/doc/openmpi/mpiCC-wrapper-data.txt
    rm -f %p/share/man/man1/mpiCC.1
 fi
 if [ -h %p/bin/mpiCC ]; then
    rm -f %p/bin/mpiCC
    rm -f %p/bin/mpiCC-vt
 fi
<<
