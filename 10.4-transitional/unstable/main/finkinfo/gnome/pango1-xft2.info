BuildDepends: <<
  glib2-dev (>= 2.5.7-1), pkgconfig (>= 0.15.0-2), gtk-doc (>= 1.2-1),
  x11-dev, xft2-dev, gettext-dev, libiconv-dev, gcc3.3
<<
