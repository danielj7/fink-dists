	bzip2-dev,
	fink (>= 0.28-1),
	fink-buildenv-modules (>= 0.1.3),
	fink-package-precedence,
	freetype219 (>= 2.5.5-1),
	giflib7,
	libid3tag,
	libjpeg9,
	libpng16,
	libtiff5,
	libtool2,
	pkgconfig (>= 0.23),
	x11-dev
<<
