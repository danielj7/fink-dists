	git (>= 1.7.3.2-1),
	jsonpickle-py%type_pkg[python],
	( %type_pkg[qt] = -mac ) pyqt4-mac-py%type_pkg[python],
	( %type_pkg[qt] = -x11 ) pyqt4-py%type_pkg[python],
	python%type_pkg[python]
