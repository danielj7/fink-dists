	%{default_script}
	perl -pi -e 's,(POLKIT_GNOME_REQUIRED=).*,${1}99999.FORCE.NONDETECT,' configure
<<
ConfigureParams: --mandir=%p/share/man --disable-docbook-docs --disable-schemas-install --disable-dependency-tracking --disable-static --enable-more-warnings PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH" --x-i=/usr/X11R6/include --x-l=/usr/X11R6/lib
