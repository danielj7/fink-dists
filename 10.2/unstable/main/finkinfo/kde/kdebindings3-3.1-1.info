CompileScript: <<
#!/bin/sh
  export KDEDIR=%p
  make -f Makefile.cvs
  [ $? = 0 ] && sh ./configure %c 
  for first in dcopc dcopjava qtjava kdejava xparts xparts/mozilla; do
    if [ $? = 0 ]; then make -j2 -C $first; fi
  done
  [ $? = 0 ] && make -j2 all
<<

InstallScript: <<
#!/bin/sh
  for first in dcopc dcopjava qtjava kdejava xparts xparts/mozilla; do
    if [ $? = 0 ]; then make -C $first install DESTDIR=%d; fi
  done
  [ $? = 0 ] && make install DESTDIR=%d
  make install DESTDIR=%d
  mkdir -p %i/share/doc/kde-installed-packages
  touch %i/share/doc/kde-installed-packages/%N
  touch %i/share/doc/kde-installed-packages/%N-base
<<
