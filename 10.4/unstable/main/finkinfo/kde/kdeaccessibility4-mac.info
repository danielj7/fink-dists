	automoc-%type_pkg[kde] (>= 0.9.89-0),
	cmake (>= 2.6.3-1),
	dbus-dev (>= 1.2.12-1),
	fink (>= 0.28.0-1),
	fontconfig2-dev (>= 2.4.1-1),
	freetts,
	freetype219 (>= 2.3.7-7),
	glib2-dev (>= 2.14.0-1),
	kde4-buildenv (>= 4.2.3-1),
	kdebase4-%type_pkg[kde]-dev (>= 4.2.3-1),
	kdelibs4-%type_pkg[kde]-dev (>= 4.2.3-1),
	libgettext3-dev,
	pkgconfig (>= 0.22-3),
	qt4-%type_pkg[kde] (>= 4.5.0-5),
	soprano-%type_pkg[kde]-dev (>= 2.2.3-2),
	strigi-dev (>= 0.6.3-1),
	(%type_pkg[kde] = x11) x11-dev,
	system-openssl-dev
<<
GCC: 4.0

Source: mirror:kde:stable/%v/src/kdeaccessibility-%v.tar.bz2
Source-MD5: d371973283e3b7843c9f8489e05269b2

CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh
	export PATH="%p/share/java/freetts:$PATH"

	mkdir -p build
	pushd build
		cmake $KDE4_CMAKE_ARGS ..
		make
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make -j1 install DESTDIR="%d"
	popd

	rm -rf %i/lib/%type_pkg[kde]/lib/libkttsd.dylib

	mkdir -p %i/share/doc/installed-packages
	touch %i/share/doc/installed-packages/%N
	touch %i/share/doc/installed-packages/%N-base
<<
