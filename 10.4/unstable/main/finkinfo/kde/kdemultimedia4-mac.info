CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh
	export CMAKE_INCLUDE_PATH="%p/include/libcdparanoia:$CMAKE_INCLUDE_PATH"
	export CPPFLAGS="-I%p/include/libcdparanoia $CPPFLAGS"

	mkdir -p build
	pushd build
		cmake $KDE4_CMAKE_ARGS ..
		make
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make -j1 install DESTDIR="%d"
	popd

	mkdir -p %i/share/doc/installed-packages
	touch %i/share/doc/installed-packages/%N
<<
