  mkdir build

  fpc -ap -v0 extpas.pp

	namelist="alist alpro alword aran asciicode asciidna auxmod av between    \
	bigbuf biglet binom binomial binplo bk2seq bkdb bndrec bookends bookshift \
	calc calhnb calico cap capsmark censor center cerf chacha chaos chi cisq  \
	ckhelix clual cluster cnsr coda codecomments column comp compan concat consensus  \
	coscurve count counter csv2ssv cumulative curvafea cutoff da3d da3drotate \
	dalvec dangles dashseq datarange dbclean dbfilter dbinst dblo decat       \
	decimals decom dedup dehtml delinst dem denav denplo derivative derive    \
	despace diana diffinst diffint diffintcut difri digrab dirgra dirty dnag  \
	dnamwt doodle dops dotmat dotsba doudiff embed emin emptytest encfrq      \
	encode encsum epsclean evd evenco expgraph exponential exponentmax        \
	fastcat fdr fico fileposition fitgauss fl flag flag78 frese fv gap gauss  \
	gaussint gedo genhis genmod genpic gentst gifnormalize hc helix helixside \
	helloworld hgraph hist histan htmlink httplink ic imgalt indana index     \
	instal kenin keymat lenin lidel lig linreg live ll lochas log logav       \
	logscale loocat makegauss makeinst makelogo makman makmod maknam malign   \
	malin malopt matmod memory merge mergemarks mfoldseq migrate mkdb mkdis   \
	mnomial modin modlen module multtest mutseq noblank nocom nohigh nohob    \
	nomultiblank normal normreg notex number numdate odti omp ordcut palinf   \
	parse parseform patana patlst patser patval pbreak pcs pemowe piechart    \
	pizza pnmnormalize power protecthtml pst quoteline range rara rav rb rean \
	ref2bib refer reffea reform rembla rep repro rf riden ring rnclean        \
	roundfile rsconv rseq rsgra rv same scale sebo sepa shell short shortline \
	show shrink sites smoothis sortbibtex sorth spec sphere spray sqz ssbread \
	stirling subfeatures subsymvec sumfile surprisal swt tabify test thethepc \
	titer tkod tobinary todawg todobfcite tram transpose trex truncround      \
	tstrnd ttest twogau uncsv undel unnumber unsqz untex untitle unverb ver   \
	verbop vernam vernum versave vr waveplot whatch whole winfo winscan wl    \
	worcha worcharev wtch wtco ww wwfmt wwlow xyda xyplo yes zipf"

  for filename in $namelist
  do
    fpc -Miso -ap -v0 -FEbuild $filename.p > /dev/null
  done

# optimized versions
  fpc -OWall -Miso -CX -XX -FWmalign.wpo -ap -v0 -FEbuild malign.p
  fpc -Owall -Miso -CX -XX -Fwmalign.wpo -ap -v0 -FEbuild malign.p
  strip build/malign

  fpc -OWall -Miso -CX -XX -FWmalign.wpo -ap -v0 -FEbuild encode.p
  fpc -Owall -Miso -CX -XX -Fwmalign.wpo -ap -v0 -FEbuild encode.p
  strip build/encode

  namelist="catal dbbk dbcat delmod delila ev freb instshift lister \
    makebk markov medlinebib rawbk search timegpc dbpull oligosetc \
    patlrn rndseq rsim rwbk setdate siva timenul"

# using extended Pascal 

  for filename in $namelist
  do
    fpc -Miso -ap -v0 -FEbuild -Faextpas $filename.p
  done

# optimized versions
  fpc -OWall -Miso -CX -XX -FWmalign.wpo -ap -v0 -FEbuild -Faextpas delila.p
  fpc -Owall -Miso -CX -XX -Fwmalign.wpo -ap -v0 -FEbuild -Faextpas delila.p
  strip build/delila

<<

InstallScript: <<
#!/bin/sh -ev
  mkdir -p %i/bin/
  cd build
  rm *.o
  mv cluster cluster-delila
  install -c -m 755 * %i/bin/
