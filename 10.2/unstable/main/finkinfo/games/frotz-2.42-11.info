PatchScript: sed 's|@PREFIX@|%p|g' <%a/%f.patch | patch -p1
SetCPPFLAGS: -no-cpp-precomp
GCC: 3.1
CompileScript: make
InstallScript: <<
 mkdir -p %i/bin
 strip frotz
 install -c -m 755 frotz %i/bin
 mkdir -p %i/share/man/man6
 install -c -m 644 frotz.6 %i/share/man/man6
 mkdir -p %i/share/doc/%n/config-examples
 install -m 644 frotz.conf-small %i/share/doc/%n/config-examples
 install -m 644 frotz.conf-big %i/share/doc/%n/config-examples
<<
