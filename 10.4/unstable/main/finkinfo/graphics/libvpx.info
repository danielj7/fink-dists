Package: libvpx
Version: 0.9.0-20100604
Revision: 1
Distribution: 10.5, 10.6
Description: WebM VP8 Codec SDK
DescPackaging: <<
	Only contains headers and static library. Doesn't make shared libs.
	system-sdk-10.5 is needed on both 10.5 and 10.6.
<<
License: BSD
Homepage: http://www.webmproject.org/
Maintainer: Daniel Johnson <daniel@daniel-johnson.org>

#Source: http://webm.googlecode.com/files/%n-%v.tar.bz2
# Tarball made from git commit 09202d80716ef7e2931de60c66b6fb2383f52613
# from git://review.webmproject.org/libvpx.git
Source: http://homepage.mac.com/danielj7/%n-%v.tar.bz2
Source-MD5: 56290c76aeae4f523fb50e6e8e31c963

BuildDepends: (%m != powerpc) yasm, system-sdk-10.5
BuildDependsOnly: true

NoSetCPPFLAGS: true
NoSetLDFLAGS: true

CompileScript: <<
	#!/bin/bash -ev
	if [ "%m" = "powerpc" ]; then
		./configure --target=ppc32-darwin9-gcc
	elif [ "%m" = "i386" ]; then
		./configure --target=x86-darwin9-gcc
	else
		./configure --target=%m-darwin9-gcc
	fi
	make
<<

InstallScript: <<
	make install DIST_DIR=%i
<<

DocFiles: AUTHORS CHANGELOG LICENSE README PATENTS

SplitOff: <<
	Package: %N-bin
	Files: bin
	
	DocFiles: AUTHORS CHANGELOG LICENSE README PATENTS
<<
