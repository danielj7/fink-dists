Package: librsvg2
Version: 2.20.0
Revision: 1

License: GPL/LGPL
Maintainer: Dave Vasilevsky <vasi@users.sourceforge.net>
Description: SAX-based render library for SVG files
Homepage: http://www.gnome.org/

Source: mirror:gnome:sources/librsvg/2.20/librsvg-%v.tar.bz2
Source-MD5: 14cc098b68e72ee6a8cdd55edc1ea1b4


Patch: %n.patch

ConfigureParams: --with-svgz --enable-gnome-vfs --with-croco --enable-gtk-theme --enable-pixbuf-loader --enable-gtk-doc --disable-dependency-tracking --mandir=%p/share/man --with-html-dir=%p/share/doc/%n/html --disable-mozilla-plugin PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
NoSetCPPFLAGS: true
SetCPPFLAGS: -I%p/lib/pango-ft219/include/pango-1.0 -I%p/lib/pango-ft219/include -I%p/lib/freetype219/include/freetype2 -I%p/lib/freetype219/include -I%p/lib/fontconfig2/include -I%p/include
NoSetLDFLAGS: true
SetLDFLAGS: -L%p/lib/pango-ft219/lib -L%p/lib/freetype219/lib -L%p/lib/fontconfig2/lib
SetLIBS: -L%p/lib
SetCFLAGS: -Os
SetCXXFLAGS: -Os

InstallScript: make -j1 install DESTDIR="%d"


DocFiles: AUTHORS COPYING* ChangeLog INSTALL NEWS README TODO

BuildDependsOnly: true
BuildDepends: <<
	cairo			(>= 1.6-1),
	libpng3,
	expat1,
	fontconfig2-dev		(>= 2.4.1-1),
	freetype219		(>= 2.3.5-1),
	xft2-dev,
	pkgconfig		(>= 0.21-1),
	
	gtk+2-dev		(>= 2.12.0-1),
	atk1			(>= 1.20.0-1),
	gail18-dev		(>= 1.20.1-1),
	glib2-dev		(>= 2.14.0-1),
	glitz,
	libart2			(>= 2.3.10-1),
	
	pango1-xft2-ft219-dev	(>= 1.18.4-4),
	pixman			(>= 0.10.0-1),
	
	libgsf1.114-dev		(>= 1.14.5-1),
	libxml2			(>= 2.6.30-1),
	
	dbus-dev (>= 1.0-1),
	
	avahi-dev,
	libavahi-glib1-dev,
	gnome-vfs2-unified-dev (>= 1:2.20.0-1),
	orbit2-dev (>= 2.14.9-1),
	gconf2-dev (>= 2.20.0-1),
	
	libcroco3,
	
	libgnomeprint2.2-dev (>= 2.18.2-1),
	libgnomeprintui2.2-dev (>= 2.18.1-1),

	libgnomecanvas2-dev (>= 2.20.0-1),
	
	x11-dev,
	
	gtk+2 (>= 2.12.0-1),
		
	gtk-doc (>= 1.8-1),
	
	libgettext3-dev,
	libiconv-dev
<<
Depends: %N-shlibs (= %v-%r)


SplitOff: <<
	Package: %N-shlibs
	
	Depends: <<
		gconf2-shlibs (>= 2.20.0-1),
		glib2-shlibs (>= 2.14.0-1),
		gnome-vfs2-unified-shlibs (>= 1:2.20.0-1),
		gtk+2-shlibs (>= 2.12.0-1),
		libart2-shlibs		(>= 2.3.10-1),
		libcroco3-shlibs,
		libgettext3-shlibs,
		libgsf1.114-shlibs		(>= 1.14.5-1),
		libiconv,	
		libxml2-shlibs		(>= 2.6.30-1),
		orbit2-shlibs (>= 2.14.9-1),
		pango1-xft2-ft219-shlibs	(>= 1.18.4-4),
		x11
	<<
	
	Files: lib/librsvg-2.*.dylib
	Shlibs: %p/lib/librsvg-2.2.dylib 23.0.0 %n (>= 2.20.0-1)
	DocFiles: COPYING*
<<

SplitOff2: <<
	Package: %N-gtk
	Description: Enable GTK to use SVG data
	
	Depends: %N-shlibs (= %v-%r), gtk+2 (>= 2.12.0-1)
	Replaces: %N (<< 2.6.5-10)
	
	Files: <<
		lib/gtk-2.0/2.10.0/engines/libsvg.so
		lib/gtk-2.0/2.10.0/loaders/svg_loader.so
	<<
	DocFiles: COPYING*
	
	PostInstScript: <<
		if [ configure = "$1" ]; then
			DYLD_FALLBACK_LIBRARY_PATH=: update-gdk-pixbuf-loaders
		fi
	<<
	PostRmScript: <<
		if [ upgrade != "$1" ]; then
			DYLD_FALLBACK_LIBRARY_PATH=: update-gdk-pixbuf-loaders
		fi
	<<
<<

SplitOff3: <<
	Package: %N-bin
	
	Depends: <<
		%N-shlibs (= %v-%r),
		gail18-shlibs	(>= 1.20.1-1),
		libgnomecanvas2-shlibs	(>= 2.20.0-1),
		libgnomeprint2.2-shlibs	(>= 2.18.2-1),
		libgnomeprintui2.2-shlibs	(>= 2.18.1-1)
	<<
	Replaces: %N (<< 2.6.5-10)
	
	Files: bin share/man share/pixmaps
	DocFiles: COPYING*
<<

DescPort: <<
	- bin/rsvg-view is only thing that uess the obsolete
	libgnomeprint stack. See:
	http://bugzilla.gnome.org/show_bug.cgi?id=508526

	- Disable Mozilla plugin, use librsvg2-mozilla to build that.
<<
