Package: leptonica
Version: 1.70
Revision: 1
Description: Library for image processing and analysis
License: OSI-Approved

# Dependencies:
BuildDependsOnly: true
BuildDepends: <<
  pkgconfig,
  libpng16,
  libjpeg9,
  giflib,
  libtiff5,
  libwebp5
<<
Depends: lib%n-shlibs (>= %v-1)

# Unpack Phase:
Source: http://www.leptonica.org/source/%n-%v.tar.gz
Source-MD5: 5ac2a31cf5b4f0e8f5a853a5266c42ef

# Compile Phase:
CompileScript: <<
#!/bin/sh -ev
  ./autobuild
  ./configure %c
  make
<<

# Install Phase:
InstallScript: <<
#!/bin/sh -ev
  make install DESTDIR=%d
<<

DocFiles: leptonica-license.txt README.html version-notes.html

SplitOff: <<
  Package: lib%n-shlibs
  Depends: <<
    libpng16-shlibs,
	libjpeg9-shlibs,
	giflib-shlibs,
	libtiff5-shlibs,
	libwebp5-shlibs
  <<
  Files: <<
    lib/liblept.4.dylib
  <<
  Shlibs: <<
    %p/lib/liblept.4.dylib 5.0.0 %n (>= 1.70-1)
  <<
  DocFiles: leptonica-license.txt README.html version-notes.html
<<

Splitoff2: <<
  Package: lib%n-dev
  Depends: libleptonica-shlibs (>= %v-1)
  BuildDependsOnly: true
  Files: <<
    include
	lib
  <<
  DocFiles: leptonica-license.txt README.html version-notes.html
<<

# Additional Info
DescDetail: <<
  Leptonica is a pedagogically-oriented open source site containing 
  software that is broadly useful for image processing and image 
  analysis applications.
<<

DescPort: nothig special

Homepage: http://www.leptonica.org/
Maintainer: Karl-Michael Schindler <karl-michael.schindler@web.de>

