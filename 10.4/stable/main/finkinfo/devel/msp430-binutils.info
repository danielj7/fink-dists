ConfigureParams: <<
  --target=msp430            \
  --prefix=%p/lib/msp430     \
  --program-prefix=msp430-   \
  --bindir=%p/bin            \
  --mandir=%p/share/man      \
  --infodir=%p/share/info    \
  --disable-werror           \
  --disable-nls
<<

CompileScript: <<
    #!/bin/sh -ev
    ./configure %c
    num_cpu=$(echo `sysctl -n hw.ncpu`)
    make -j $num_cpu
<<

InstallScript: <<
    #!/bin/sh -ev
    make install DESTDIR=%d

    rm -fr %i/lib/msp430/lib
    rm -fr %i/share/info/*
<<

