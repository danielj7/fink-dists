PatchScript: <<
  patch -p1 < %a/%n.patch
  perl -pi -e 's,-O2,-Os,' admin/acinclude.m4.in
  perl -pi -e 's,doc/HTML,doc/kde,g' admin/acinclude.m4.in
<<

NoSetCPPFLAGS: true
SetCPPFLAGS: -I%p/include/db4
NoSetLDFLAGS: true
ConfigureParams: --includedir=%p/include --libdir=%p/lib --prefix=%p --with-qt-dir=%p --with-qt-includes=%p/include/qt --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=no --mandir=%i/share/man --with-xinerama --with-pam --disable-final --with-pythondir=%p --with-qtdoc-dir=%p/share/doc/qt3/html --with-kdelibsdoxy-dir=%p/share/doc/kde/en/kdelibs-apidocs --with-kdelibsdoc-dir=%p/share/doc/kde/en/kdelibs-apidocs --disable-debug --with-distribution='Fink/Mac OS X' --enable-scripting --enable-autoproject --enable-scriptproject --enable-trollproject --enable-customproject --enable-cvs --disable-java 

CompileScript: <<
#!/bin/sh -e

  export HOME=/tmp
  export PREFIX="%p"
  . ./environment-helper.sh

  ./build-helper.sh cvs       %N %v %r make -f admin/Makefile.common cvs
  ./build-helper.sh configure %N %v %r ./configure %c
  ./build-helper.sh make      %N %v %r make all LEX=%p/lib/flex/bin/flex LEXLIB="" USE_EXCEPTIONS="-fexceptions -fno-coalesce" all_libraries="$ALL_LIBRARIES"
<<

InstallScript: <<
#!/bin/sh -e

  export PREFIX="%p"
  . ./environment-helper.sh

  ./build-helper.sh install %N %v %r make -j1 install DESTDIR=%d

  mkdir -p %i/share/doc/kde-installed-packages
  touch %i/share/doc/kde-installed-packages/%N
<<

