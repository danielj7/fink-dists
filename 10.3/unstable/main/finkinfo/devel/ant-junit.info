CompileScript: <<
#!/bin/sh -ex

  JAVAVER=`find /System/Library/Frameworks/JavaVM.framework/Versions -name include 2>/dev/null | perl -p -e 's,.*Versions/(.*?)/.*,$1,g' | grep -E '^1.3' | tail -1`
  export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/$JAVAVER/Home
  ./build.sh -Ddist.name=ant -Dchmod.fail=false dist
<<
InstallScript: <<
#!/bin/sh -ex
 mkdir -p %i/lib
 cp -R ant %i/lib
 # make up for failing build.xml
 chmod -R ugo+r %i/lib/ant
 # binaries
 rm %i/lib/ant/bin/*.bat
 mkdir -p %i/bin
 cd %i/bin ; ln -s ../lib/ant/bin/* .
 # docs
 mkdir -p %i/share/doc/ant
 cd %i/share/doc/ant ; ln -s ../../../lib/ant/docs html
 find "%i" ! -type d | sed -e 's,^%i,,' | grep -v junit | while read LINE; do
  rm "%i$LINE" || :
 done
 find "%i" ! -type d | sed -e 's,^%i,,' | grep -v junit | while read LINE; do
  rmdir "%i$LINE" || :
 done
<<
