Package: gd3
Version: 2.2.3
Revision: 1
Description: Graphics generation library
License: OSI-Approved
Maintainer: Hanspeter Niederstrasser <nieder@users.sourceforge.net>
Depends: %N-shlibs (= %v-%r)
BuildDepends: <<
	fink (>= 0.32),
	fink-buildenv-modules (>= 0.1.3),
	fink-package-precedence,
	fontconfig2-dev (>= 2.10.2-1),
	freetype219 (>= 2.4.11-1),
	gettext-tools,
	libiconv-dev,
	libimagequant0,
	libjpeg9,
	libpng16,
	libtiff5,
	libwebp6,
	x11-dev
<<
Conflicts: <<
	gd,
	gd2, gd2-nox,
	gd209,
	gd3
<<
Replaces: <<
	gd,
	gd2, gd2-nox,
	gd209,
	gd2-bin (<< 2.0.33-3),
	gd3
<<
Source: https://github.com/libgd/libgd/releases/download/gd-%v/libgd-%v.tar.xz
Source-MD5: 14e4134c129b4c166c3a0549a32ef340
Source-Checksum: SHA1(2f8cebec5afd6c83a3d5cb92f40ea4926b4daa98)
PatchFile: gd3.patch
PatchFile-MD5: f41d23d2b02154bddce69b509b010910
PatchScript: <<
	%{default_script}
	# remove space between -I and dir
	perl -pi -e 's|-I \$|-I\$|g' tests/Makefile.in
<<
#SetCC: flag-sort -r cc
SetMAKEFLAGS: -w
ConfigureParams: <<
	--enable-dependency-tracking \
	--disable-static \
	--disable-werror \
	--x-includes=${X11_INCLUDE_DIR} \
	--x-libraries=${X11_LIBRARY_DIR}
<<
CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-helper.sh
	%{default_script}
	fink-package-precedence --prohibit-bdep=gd2,gd2-nox,gd3 .
<<
InfoTest: <<
	TestScript: <<
		make -j1 check || exit 2
		fink-package-precedence --prohibit-bdep=gd2,gd2-nox,gd3 .
	<<
<<
DocFiles: COPYING ChangeLog NEWS docs/README.JPN
BuildDependsOnly: True
SplitOff2: <<
	Package: %N-shlibs
	Depends: <<
		fontconfig2-shlibs (>= 2.10.2-1),
		freetype219-shlibs (>= 2.4.11-1),
		libiconv,
		libjpeg9-shlibs (>= 9-3),
		libpng16-shlibs,
		libtiff5-shlibs,
		libwebp6-shlibs,
		x11-shlibs
	<<
	Files: lib/libgd.3*.dylib
	Shlibs: %p/lib/libgd.3.dylib 4.0.0 %n (>= 2.1.0-1)
	Description: Shared libraries for gd3 package
	DocFiles: COPYING NEWS
<<
SplitOff: <<
	Package: %N-bin
	Depends: <<
		%N-shlibs (>= %v-%r),
		fontconfig2-shlibs (>= 2.10.2-1),
		freetype219-shlibs (>= 2.4.11-1),
		libiconv,
		libjpeg-bin,
		libjpeg9-shlibs,
		libpng16-shlibs,
		libtiff5-shlibs,
		libwebp6-shlibs,
		x11
	<<
	Conflicts: <<
		gd-bin,
		gd2-bin, gd2-nox-bin,
		gd209-bin,
		gd3-bin
	<<
	Replaces: <<
		gd-bin,
		gd2-bin, gd2-nox-bin,
		gd209-bin,
		gd3-bin
	<<
	Files: <<
		bin/annotate
		bin/bdftogd
		bin/gd2copypal
		bin/gd2togif
		bin/gd2topng
		bin/gdcmpgif
