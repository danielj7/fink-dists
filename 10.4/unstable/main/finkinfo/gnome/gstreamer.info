#!/bin/sh -ev
	./configure %c
	make
<<

InstallScript: <<
#!/bin/sh -ev
	make install DESTDIR=%d
	for bin in complete compprep feedback inspect launch md5sum register typefind xmlinspect xmllaunch; do
		rm -f %i/bin/gst-$bin
	done
<<
