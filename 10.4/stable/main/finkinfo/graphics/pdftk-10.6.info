CompileScript: <<
  cd pdftk; make -f Makefile.MacOSX
<<

InstallScript: <<
  mkdir -p %i/bin %i/share/man/man1
  cp pdftk/pdftk %i/bin
  cp debian/pdftk.1 %i/share/man/man1 
<<

