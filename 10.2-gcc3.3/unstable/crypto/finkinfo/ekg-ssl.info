CustomMirror: <<
  http://dev.null.pl/ekg
  nam-US: http://ranger.befunk.com/fink
  nam-US: http://astrange.ithinksw.net/~astrange/ranger-fink
  nam-CA: http://www.southofheaven.net/befunk
<<
Source: mirror:custom:ekg-%vrc2.tar.gz
Source-MD5: 0049c0106a72d84347b72404554086d2
Conflicts: ekg
Replaces: ekg
Depends: %N-shlibs (>= %v-%r)
Patch: %n.patch
BuildDepends: gsm, openssl097-dev
ConfigureParams: --enable-dynamic --enable-shared --enable-ui-readline --with-ncurses=%p --with-readline=%p --with-libgsm --without-python --with-openssl --with-pthread --enable-ioctld --sysconfdir=%p/etc
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
InstallScript: <<
#!/bin/sh
  make install DESTDIR=%d
  pushd lib
  install -d -m 755 %i/lib
  glibtool --mode=install install -c -m 755 libgadu.la %i/lib/libgadu.la
  mkdir -p %i/share/doc/%n
  popd
  pushd docs
  tar -cf - . | (cd %i/share/doc/%n; tar -xf -)
  popd
<<
SplitOff: <<
  Description: static libraries and headers for libgadu-ssl
  Conflicts: ekg
  Replaces: ekg
  Package: %N-shlibs
  BuildDependsOnly: true
  Files: lib/libgadu.2*.dylib
<<
